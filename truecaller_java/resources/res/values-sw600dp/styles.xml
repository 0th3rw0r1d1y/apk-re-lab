<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CheckoutTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
    <style name="Widget.Design.TabLayout" parent="@style/Base.Widget.Design.TabLayout">
        <item name="tabGravity">center</item>
        <item name="tabMode">fixed</item>
    </style>
    <style name="ia_expand_collapse_button_style" parent="@style/ia_top_right_overlay">
        <item name="android:background">@drawable/ia_round_overlay_bg</item>
        <item name="android:padding">@dimen/ia_image_control_padding</item>
        <item name="android:layout_width">@dimen/ia_image_control_size</item>
        <item name="android:layout_height">@dimen/ia_image_control_size</item>
        <item name="android:src">@drawable/ia_sel_expand_collapse</item>
        <item name="android:scaleType">fitStart</item>
    </style>
    <style name="ia_mute_button_style" parent="@style/ia_top_left_overlay">
        <item name="android:background">@drawable/ia_bg_circle_overlay</item>
        <item name="android:padding">@dimen/ia_image_control_padding</item>
        <item name="android:layout_width">@dimen/ia_image_control_size</item>
        <item name="android:layout_height">@dimen/ia_image_control_size</item>
        <item name="android:src">@drawable/ia_sel_mute</item>
        <item name="android:scaleType">fitStart</item>
    </style>
</resources>
