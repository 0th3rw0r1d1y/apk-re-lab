<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/tcx_backgroundPrimary"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="320dp"
    android:windowSoftInputMode="adjustPan">
    <TextView
        android:textColor="?attr/tcx_textSecondary"
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Change Country Code"
        android:textAlignment="center"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        style="@style/StyleX.Text.Headline.H6"/>
    <Spinner
        android:id="@+id/countryDropdown"
        android:background="@android:drawable/btn_dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:spinnerMode="dropdown"/>
    <TextView
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="NOTE: Once changed, You will have to reset this manually from here"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>
    <com.google.android.material.button.MaterialButton
        android:layout_gravity="center"
        android:id="@+id/setCountryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:text="Update Country"
        android:textAlignment="center"
        style="@style/StyleX.Button.Primary"/>
</LinearLayout>
