<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.truecaller.common.ui.ShineView
        android:id="@+id/goldShine"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonBackground"
        app:layout_constraintEnd_toEndOf="@+id/buttonBackground"
        app:layout_constraintStart_toStartOf="@+id/buttonBackground"
        app:layout_constraintTop_toTopOf="@+id/buttonBackground"
        app:shineCornerRadius="@dimen/tcx_subscription_button_corner_radius"/>
    <FrameLayout
        android:id="@+id/buttonBackground"
        android:background="@drawable/background_tier_plan_action_btn_saving_badge"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tcx_interstitial_purchase_button_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_gravity="center_horizontal"
            android:id="@+id/animationView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="centerCrop"
            app:lottie_autoPlay="true"
            app:lottie_cacheComposition="true"
            app:lottie_enableMergePathsForKitKatAndAbove="true"
            app:lottie_loop="true"/>
        <TextView
            android:textColor="@color/tcx_textPrimary_dark"
            android:layout_gravity="center"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/StyleX.Text.Roboto.Medium.14"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
