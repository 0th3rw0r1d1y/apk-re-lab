<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_sheet_rounded_corner_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="20sp"
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="@string/contact_editor_add_more_info_confirmation_dialog_title"
        android:drawablePadding="4dp"
        android:fontFamily="@font/roboto_medium"
        app:drawableStartCompat="@drawable/ic_warning_16dp"
        app:drawableTint="?attr/tcx_avatarTextRed"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="14sp"
        android:id="@+id/subtitle_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/contact_editor_add_more_info_confirmation_dialog_subtitle"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@+id/title_text"/>
    <Button
        android:id="@+id/button_cancel"
        android:padding="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/global_cancel"
        app:layout_constraintEnd_toStartOf="@+id/button_continue"
        app:layout_constraintTop_toBottomOf="@+id/subtitle_text"
        style="@style/ContactEditor.Button.BottomSheet"/>
    <Button
        android:id="@+id/button_continue"
        android:padding="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/StrContinue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle_text"
        style="@style/ContactEditor.Button.BottomSheet"/>
</androidx.constraintlayout.widget.ConstraintLayout>
