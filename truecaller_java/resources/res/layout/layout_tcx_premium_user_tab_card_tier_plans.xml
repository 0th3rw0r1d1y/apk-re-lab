<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16sp"
        android:textColor="?attr/tcx_textPrimary"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tierPlanChoosePlanTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/PremiumTierPlansMainTitle"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/StyleX.Text.Subtitle.S1"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/tierPlanViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tierPlanChoosePlanTextView"/>
    <ImageView
        android:id="@+id/tierPlanLeftChevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/PremiumTierPlanLeftChevron"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tierPlanViewPager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tierPlanViewPager"
        app:srcCompat="@drawable/ic_chevron_left_carousel"/>
    <ImageView
        android:id="@+id/tierPlanRightChevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/PremiumTierPlanRightChevron"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tierPlanViewPager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tierPlanViewPager"
        app:srcCompat="@drawable/ic_chevron_right_carousel"/>
</androidx.constraintlayout.widget.ConstraintLayout>
