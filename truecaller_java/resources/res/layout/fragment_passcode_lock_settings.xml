<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:background="?attr/tcx_backgroundTertiary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_tcx_arrow_back"
        app:navigationIconTint="?attr/tcx_textSecondary"
        app:title="@string/messaging_passcode_lock"
        style="@style/StyleX.Toolbar"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:background="?attr/tcx_backgroundTertiary"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="?attr/tcx_backgroundTertiary"
                app:cardElevation="4dp"
                style="@style/Widget.Truecaller.CardView">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                        android:textColor="?attr/tcx_textPrimary"
                        android:id="@+id/passcodeLockSwitch"
                        android:text="@string/PasscodeLockForMessages"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/Widget.Truecaller.Switch"/>
                    <TextView
                        android:textColor="?attr/tcx_textSecondary"
                        android:id="@+id/passcodeLockSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/PasscodeLockForMessagesSubtitle"
                        android:layout_marginStart="@dimen/doubleSpace"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/passcodeLockSwitch"
                        style="@style/StyleX.Text.Caption"/>
                    <Button
                        android:textColor="?attr/tcx_brandBackgroundBlue"
                        android:id="@+id/changePasswordBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/PasscodeLockChangeTitle"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        app:layout_constraintStart_toStartOf="@+id/passcodeLockSubtitle"
                        app:layout_constraintTop_toBottomOf="@+id/passcodeLockSubtitle"
                        app:strokeColor="@color/transparent"
                        style="@style/StyleX.Button.Secondary"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="?attr/tcx_backgroundTertiary"
                app:cardElevation="4dp"
                style="@style/Widget.Truecaller.CardView">
                <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                    android:textColor="?attr/tcx_textPrimary"
                    android:id="@+id/fingerprintLockSwitch"
                    android:text="@string/PasscodeLockFingerprintLock"
                    style="@style/Widget.Truecaller.Switch"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/hideNotificationsContent"
                app:cardBackgroundColor="?attr/tcx_backgroundTertiary"
                app:cardElevation="4dp"
                style="@style/Widget.Truecaller.CardView">
                <LinearLayout
                    android:background="?attr/selectableItemBackground"
                    android:paddingBottom="@dimen/control_doublespace"
                    style="@style/Widget.Truecaller.ContainerWrap">
                    <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                        android:textColor="?attr/tcx_textPrimary"
                        android:id="@+id/hideNotificationsSwitch"
                        android:text="@string/PasscodeLockHideNotifications"
                        style="@style/Widget.Truecaller.Switch"/>
                    <TextView
                        android:text="@string/PasscodeLockHideNotificationsSubtitle"
                        style="@style/Widget.Truecaller.TextView.SettingsDescription"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
