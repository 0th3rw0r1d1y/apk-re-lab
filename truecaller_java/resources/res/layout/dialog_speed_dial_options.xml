<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/title"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        style="@style/StyleX.Text.Headline.H6"/>
    <View
        android:background="?android:attr/listDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/control_space"/>
    <Button
        android:id="@+id/button_remove"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/SpeedDialDialog_Remove"
        style="@style/StyleX.Button.Small.Action"/>
    <Button
        android:id="@+id/button_add_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/SpeedDialDialog_AssignContact"
        style="@style/StyleX.Button.Small.Action"/>
    <Button
        android:id="@+id/button_add_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/SpeedDialDialog_AssignNumber"
        style="@style/StyleX.Button.Small.Action"/>
    <Button
        android:id="@+id/button_edit_speed_dial"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/SpeedDialDialog_EditSpeedDial"
        style="@style/StyleX.Button.Small.Action"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/control_space"/>
</LinearLayout>
