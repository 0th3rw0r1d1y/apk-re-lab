<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/setDefaultPhoneApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textSize="14sp"
                android:textColor="?attr/tcx_textSecondary"
                android:layout_gravity="end"
                android:id="@+id/learn_more_button"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/DefaultDialerLearnMoreText"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginEnd="24dp"
                android:letterSpacing="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/StyleX.Button.Small.Action"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dd_permission_img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:src="?attr/dd_permission"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/learn_more_button"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="20sp"
                android:textColor="?attr/tcx_textPrimary"
                android:gravity="center"
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                android:text="@string/DDPermissionScreenTitle"
                android:lineSpacingExtra="3.44sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:letterSpacing="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dd_permission_img"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="14sp"
                android:textColor="?attr/tcx_textSecondary"
                android:gravity="center"
                android:id="@+id/subTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="@string/DDPermissionScreenSubtitle"
                android:lineSpacingExtra="2.41sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:letterSpacing="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <com.google.android.material.button.MaterialButton
        android:textSize="14sp"
        android:textColor="?attr/tc_color_textCustom"
        android:gravity="center"
        android:id="@+id/setDefaultPhoneApp"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:text="@string/DDPermissionButtonText"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        android:letterSpacing="0"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/StyleX.Button.Primary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
