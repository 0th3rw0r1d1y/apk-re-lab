<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_gravity="center"
        android:id="@+id/avatar_dialog"
        android:layout_width="@dimen/AvatarDialogSize"
        android:layout_height="@dimen/AvatarDialogSize">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"/>
        <FrameLayout
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/badge_background"
            android:background="@drawable/background_avatar_dialog_rounded_bottom"
            android:paddingTop="@dimen/control_space"
            android:paddingBottom="@dimen/control_space"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="?attr/theme_textColorAccentedControl"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/control_space"
                style="@style/TextStyleBasic"/>
        </FrameLayout>
    </FrameLayout>
</FrameLayout>
