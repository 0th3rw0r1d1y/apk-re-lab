<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="80dp"
    android:layout_height="wrap_content">
    <com.truecaller.common.ui.avatar.AvatarXView
        android:id="@+id/contact_photo"
        android:layout_width="@dimen/contact_photo_size"
        android:layout_height="@dimen/contact_photo_size"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="12sp"
        android:textColor="?attr/tc_color_textPrimary"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:maxLines="1"
        android:layout_below="@+id/contact_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/semiSpace"
        android:layout_marginEnd="@dimen/semiSpace"
        style="@style/StyleX.Text.Subtitle.S1"/>
    <TextView
        android:textSize="10sp"
        android:textColor="?attr/tc_color_textTertiary"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_below="@+id/name_text"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/semiSpace"
        android:layout_marginEnd="@dimen/semiSpace"
        style="@style/StyleX.Text.Caption"/>
    <ImageView
        android:id="@+id/actionOne"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_width="@dimen/referral_contact_action_dimen_with_edge_margin"
        android:layout_height="@dimen/referral_contact_action_dimen_with_edge_margin"
        android:layout_marginBottom="-12dp"
        android:src="?attr/conversation_deleteEntityImage"
        android:scaleType="center"
        android:layout_alignBottom="@+id/contact_photo"
        android:contentDescription="@string/btn_delete"
        android:layout_marginEnd="-12dp"
        android:layout_alignEnd="@+id/contact_photo"/>
</RelativeLayout>
