<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/tc_color_containerFillCustom"
    app:cardPreventCornerOverlap="false"
    style="@style/StyleX.CardView">
    <LinearLayout
        android:gravity="start"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tripleSpace"
            android:text="@string/SettingsDownloadPreferences"
            android:layout_marginStart="@dimen/tripleSpace"
            android:layout_marginEnd="@dimen/tripleSpace"
            style="@style/StyleX.Text.Headline.H6"/>
        <RadioGroup
            android:orientation="vertical"
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/doubleSpace"
            android:layout_marginStart="@dimen/tripleSpace"
            android:layout_marginEnd="@dimen/tripleSpace">
            <RadioButton
                android:textSize="@dimen/text_size_head5"
                android:id="@+id/radio_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/SettingDownloadTranslationsWifi"
                android:buttonTint="?attr/tc_color_containerFillBlue"/>
            <RadioButton
                android:textSize="@dimen/text_size_head5"
                android:id="@+id/radio_wifi_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space"
                android:checked="true"
                android:text="@string/SettingDownloadTranslationsWifiMobile"
                android:buttonTint="?attr/tc_color_containerFillBlue"/>
        </RadioGroup>
        <CheckBox
            android:textSize="@dimen/text_size_head5"
            android:id="@+id/checkbox"
            android:layout_width="match_parent"
            android:layout_height="@dimen/control_hexaspace"
            android:layout_marginTop="@dimen/space"
            android:checked="true"
            android:text="@string/SettingTranslationsRememberThisSetting"
            android:layout_marginStart="@dimen/tripleSpace"
            android:layout_marginEnd="@dimen/tripleSpace"/>
        <View
            android:background="?attr/tc_color_containerFillQuarternary"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/space"/>
        <Button
            android:textSize="14sp"
            android:textColor="?attr/tc_color_textSecondary"
            android:id="@+id/cancelButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/quintSpace"
            android:text="@string/StrCancel"
            style="@style/StyleX.Button.Small.Action"/>
        <View
            android:background="?attr/tc_color_containerFillQuarternary"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <Button
            android:textSize="14sp"
            android:id="@+id/downloadButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/quintSpace"
            android:text="@string/menu_download"
            style="@style/StyleX.Button.Small.Action"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
