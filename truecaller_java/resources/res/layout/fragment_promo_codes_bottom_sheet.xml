<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/promoImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_promo_icon"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/dismissSheet"
            android:background="?attr/selectableItemBackground"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="-8dp"
            android:scaleType="center"
            android:minWidth="24dp"
            android:minHeight="24dp"
            android:contentDescription="@null"
            android:layout_marginEnd="-8dp"
            android:elevation="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close"
            app:tint="?attr/tcx_textTertiary"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="?attr/tcx_textPrimary"
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tripleSpace"
            android:text="@string/promo_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/promoImage"
            style="@style/StyleX.Text.Headline.H6"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="?attr/tcx_textSecondary"
            android:gravity="center"
            android:id="@+id/subTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/doubleSpace"
            android:text="@string/promo_subtitle"
            android:paddingStart="26dp"
            android:paddingEnd="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleText"
            style="@style/StyleX.Text.Subtitle.S2.Normal"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/promoEditLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tripleSpace"
            android:hint="@string/promo_hint"
            app:endIconMode="clear_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subTitleText"
            app:placeholderText="@string/promo_hint"
            app:placeholderTextColor="?attr/tcx_textTertiary"
            style="StyleX.Input.Outline">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/promoEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="textCapCharacters"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:textColor="@color/selector_promo_button_text"
            android:id="@+id/applyPromoButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/space"
            android:text="@string/promo_apply"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:textAllCaps="false"
            android:backgroundTint="@color/selector_promo_button"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/promoEditLayout"/>
        <ProgressBar
            android:id="@+id/applyPromoButtonLoading"
            android:padding="11dp"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:indeterminate="true"
            android:elevation="8dp"
            android:indeterminateTint="@color/tcx_textPrimary_light"
            android:indeterminateTintMode="src_in"
            app:layout_constraintBottom_toBottomOf="@+id/applyPromoButton"
            app:layout_constraintEnd_toEndOf="@+id/applyPromoButton"
            app:layout_constraintStart_toStartOf="@+id/applyPromoButton"
            app:layout_constraintTop_toTopOf="@+id/applyPromoButton"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
