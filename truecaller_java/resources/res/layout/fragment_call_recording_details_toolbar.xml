<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.MaterialToolbar xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/tcx_backgroundPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/design_appbar_elevation">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center"
        android:id="@+id/call_recording_details_header_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="8dp">
        <com.truecaller.common.ui.avatar.AvatarXView
            android:id="@+id/avatar"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:contentDescription="@null"
            android:elevation="2dp"
            app:invertVerifiedRingColor="true"
            app:layout_constraintBottom_toBottomOf="@+id/durationAndDateLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/nameLabel"/>
        <TextView
            android:textColor="?attr/tcx_textPrimary"
            android:ellipsize="end"
            android:gravity="start"
            android:id="@+id/nameLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/avatar"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/StyleX.Text.Body.B1"/>
        <TextView
            android:textColor="?attr/tcx_textSecondary"
            android:ellipsize="end"
            android:gravity="start"
            android:id="@+id/durationAndDateLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="@+id/nameLabel"
            app:layout_constraintStart_toStartOf="@+id/nameLabel"
            app:layout_constraintTop_toBottomOf="@+id/nameLabel"
            style="@style/StyleX.Text.Body.B2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.appbar.MaterialToolbar>
