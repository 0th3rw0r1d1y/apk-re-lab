<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:id="@+id/layoutStartBizSurvey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:textColor="@color/tcx_textSecondary_light"
            android:id="@+id/btnStartBizCallSurvey"
            android:background="@drawable/bg_facs_button_call_me_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:text="@string/biz_acs_start_call_survey_btn"
            android:textAllCaps="false"
            android:paddingStart="@dimen/doubleSpace"
            android:paddingEnd="@dimen/doubleSpace"/>
        <ImageButton
            android:id="@+id/btnResponseDone"
            android:background="@drawable/bg_facs_cmb_tick_button"
            android:visibility="gone"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_done_white_tick"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:paddingStart="@dimen/doubleSpace"
            android:paddingEnd="@dimen/doubleSpace"/>
    </FrameLayout>
    <Button
        android:id="@+id/btnStartBizCallSurveyRevamp"
        android:visibility="gone"
        android:text="@string/biz_acs_action_button_give_feedback"
        style="@style/BizFeaturesButtonsFacs"/>
</merge>
