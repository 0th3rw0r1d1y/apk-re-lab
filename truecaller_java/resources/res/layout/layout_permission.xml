<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.truecaller.ui.view.TintedImageView
        android:id="@+id/title_start_icon"
        android:paddingBottom="@dimen/control_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/control_doublespace"
        android:scaleType="center"
        android:tint="?attr/tcx_backgroundPrimary"
        android:layout_marginStart="@dimen/control_doublespace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/tcx_backgroundPrimary"
        android:layout_gravity="center_vertical"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/control_space"
        app:layout_constraintStart_toEndOf="@+id/title_start_icon"
        app:layout_constraintTop_toTopOf="@+id/title_start_icon"
        app:layout_constraintVertical_bias="0.1"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="title_start_icon,title"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barrier_title">
        <androidx.cardview.widget.CardView
            android:id="@+id/primary_option_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/semiSpace"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginStart="@dimen/control_space"
            android:layout_marginEnd="@dimen/control_space"
            app:cardBackgroundColor="?attr/tcx_backgroundPrimary"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true"
            app:contentPaddingBottom="4dp"
            app:contentPaddingTop="4dp">
            <LinearLayout
                android:orientation="horizontal"
                android:padding="8dp"
                android:paddingBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/primary_option_text_start_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:layout_marginEnd="12dp"/>
                <TextView
                    android:textColor="?attr/tcx_textPrimary"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/primary_option_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/secondary_option_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/control_space"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginStart="@dimen/control_space"
            android:layout_marginEnd="@dimen/control_space"
            app:cardBackgroundColor="?attr/tcx_backgroundPrimary"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true"
            app:contentPaddingBottom="4dp"
            app:contentPaddingTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barrier_title">
            <LinearLayout
                android:orientation="horizontal"
                android:padding="8dp"
                android:paddingTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/secondary_option_text_start_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:layout_marginEnd="12dp"/>
                <TextView
                    android:textColor="?attr/tcx_textPrimary"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/secondary_option_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</merge>
