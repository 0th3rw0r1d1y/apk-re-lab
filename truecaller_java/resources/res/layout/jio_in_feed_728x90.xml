<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/jio_nativeborder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/infeedElementContainer"
        android:background="@drawable/jio_nativeborder"
        android:layout_width="728dp"
        android:layout_height="90dp">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="728dp"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/native_icon_layout"
                android:tag="@string/jio_native_icon_layout"
                android:padding="2dp"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_marginStart="2dp"/>
            <LinearLayout
                android:layout_gravity="top|center_horizontal"
                android:orientation="vertical"
                android:id="@+id/title_layout_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:weightSum="1"
                android:layout_marginStart="1dp">
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1dp">
                    <TextView
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/jio_black"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:id="@+id/jio_tv_title"
                        android:tag="@string/jio_native_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:maxLines="1"
                        android:paddingStart="2dp"
                        android:paddingEnd="1dp"
                        android:layout_toStartOf="@+id/container_action"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/jio_black"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:id="@+id/jio_tv_desc"
                        android:tag="@string/jio_native_description"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:maxLines="2"
                        android:layout_below="@+id/jio_tv_title"
                        android:layout_toStartOf="@+id/container_action"/>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/container_action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true">
                        <Button
                            android:textSize="16sp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:id="@+id/jio_cta"
                            android:tag="@string/jio_native_cta"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Install Now"
                            android:lines="1"
                            android:textAlignment="center"
                            android:layout_marginEnd="8dp"
                            style="@style/style_jio_button_infeed"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="start|top"
        android:orientation="horizontal"
        android:id="@+id/jio_adChoiceLayout"
        android:tag="@string/jio_native_adchoice_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="8sp"
            android:textColor="@color/jio_black"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/jio_sponsored"
            android:tag="@string/jio_sponsored"
            android:background="@drawable/jio_nativebg_ad"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:text="@string/jio_advertisment_text"
            android:layout_marginEnd="1dp"/>
    </LinearLayout>
</RelativeLayout>
