<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        style="@style/PremiumUserTabCardContent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_premium_user_tab_card_who_viewed_me"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="@string/PremiumFeatureWhoViewedMe"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toStartOf="@+id/icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/StyleX.Text.Headline.H6"/>
        <View
            android:id="@+id/divider"
            android:background="?attr/tcx_fillQuarternaryBackground"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"/>
        <androidx.constraintlayout.widget.Group
            android:id="@+id/incognitoGroup"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="incognitoIcon,incognitoSwitch,incognitoTitle,incognitoDescription,viewsDivider"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/incognitoIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:srcCompat="@drawable/ic_incognito_wvm_list"
            app:tint="?attr/tcx_textSecondary"/>
        <com.truecaller.premium.premiumusertab.list.DummySwitch
            android:id="@+id/incognitoSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/incognitoIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/incognitoIcon"
            style="@style/StyleX.Switch"/>
        <TextView
            android:id="@+id/incognitoTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/SettingsWhoViewedMeTitle"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/incognitoIcon"
            app:layout_constraintEnd_toStartOf="@+id/incognitoSwitch"
            app:layout_constraintStart_toEndOf="@+id/incognitoIcon"
            app:layout_constraintTop_toTopOf="@+id/incognitoIcon"
            style="@style/StyleX.Text.Subtitle.S1.Medium"/>
        <TextView
            android:textColor="?attr/tcx_textSecondary"
            android:id="@+id/incognitoDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/SettingsWhoViewedMeText"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toStartOf="@+id/incognitoSwitch"
            app:layout_constraintStart_toEndOf="@+id/incognitoIcon"
            app:layout_constraintTop_toBottomOf="@+id/incognitoTitle"
            style="@style/StyleX.Text.Caption"/>
        <View
            android:id="@+id/viewsDivider"
            android:background="?attr/tcx_fillQuarternaryBackground"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/incognitoDescription"
            app:layout_constraintTop_toBottomOf="@+id/incognitoDescription"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/viewsIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewsDivider"
            app:srcCompat="@drawable/ic_premium_user_card_wvm_views"
            app:tint="?attr/tcx_textSecondary"/>
        <TextView
            android:id="@+id/viewsLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/viewsIcon"
            app:layout_constraintEnd_toStartOf="@+id/incognitoSwitch"
            app:layout_constraintStart_toEndOf="@+id/viewsIcon"
            app:layout_constraintTop_toTopOf="@+id/viewsIcon"
            style="@style/StyleX.Text.Subtitle.S1.Medium"/>
        <TextView
            android:textColor="?attr/tcx_brandBackgroundBlue"
            android:id="@+id/openWvmButton"
            android:background="?attr/selectableItemBackground"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAllCaps="true"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/incognitoSwitch"
            app:layout_constraintStart_toStartOf="@+id/viewsLabel"
            app:layout_constraintTop_toBottomOf="@+id/viewsLabel"
            style="@style/StyleX.Text.Subtitle.S2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.truecaller.premium.premiumusertab.list.LabelView
        android:id="@+id/label"
        style="@style/PremiumUserTabCardLabel"/>
</FrameLayout>
