<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/doubleSpace"
    android:layout_marginStart="@dimen/doubleSpace"
    android:layout_marginEnd="@dimen/doubleSpace">
    <TextView
        android:textColor="?attr/tcx_textSecondary"
        android:gravity="center_vertical"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        style="@style/StyleX.Text.Subtitle.S2"/>
    <TextView
        android:textColor="?attr/tcx_textPrimary"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/doubleSpace"
        android:layout_marginBottom="@dimen/doubleSpace"
        android:maxLines="1"
        style="@style/StyleX.Text.Body.B1"/>
</LinearLayout>
