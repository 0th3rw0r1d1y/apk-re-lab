<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_bubble"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/viewForwardedContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <include
            android:id="@+id/viewForwarded"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space"
            layout="@layout/forwarded_message_label_layout"/>
    </FrameLayout>
    <com.truecaller.messaging.conversation.MessageSnippetView
        android:id="@+id/viewReplySnippet"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewForwardedContainer"
        app:messageType="typeIncoming"/>
    <com.truecaller.ui.view.TintedImageView
        android:id="@+id/icon"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="@integer/image_flip_scale_factor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewReplySnippet"/>
    <ProgressBar
        android:id="@+id/attachment_loading_progress"
        android:visibility="gone"
        android:backgroundTint="?attr/tcx_brandBackgroundBlue"
        app:layout_constraintStart_toStartOf="@+id/icon"
        app:layout_constraintTop_toTopOf="@+id/icon"
        style="@style/Widget.Truecaller.AttachmentProgressBar"/>
    <View
        android:id="@+id/voiceClipSeekBar"
        android:background="?attr/tc_color_chatStrokeGrey"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="@dimen/space"
        app:layout_constraintBottom_toBottomOf="@+id/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="@+id/icon"/>
    <com.truecaller.messaging.conversation.voice_notes.PlayerVisualizerView
        android:id="@+id/visualizerView"
        android:layout_width="0dp"
        android:layout_height="@dimen/voice_clip_wave_form_height"
        android:layout_marginStart="@dimen/space"
        app:layout_constraintBottom_toBottomOf="@+id/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="@+id/icon"/>
    <TextView
        android:id="@+id/voiceClipTitle"
        android:visibility="gone"
        android:layout_width="@dimen/voice_clip_seek_bar_width"
        android:layout_height="wrap_content"
        android:text="@string/MessageVoiceClipAttachmentPlaceholder"
        android:layout_marginStart="@dimen/extraSpace"
        android:layout_marginEnd="@dimen/space"
        app:layout_constraintBottom_toBottomOf="@+id/icon"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="@+id/icon"
        style="@style/MessageBubble.Incoming.Text.Title"/>
    <com.truecaller.ui.view.TintedTextView
        android:textSize="?attr/list_tertiaryTextSize"
        android:id="@+id/duration_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space"
        android:layout_marginEnd="@dimen/space"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/status_text"
        app:layout_constraintTop_toBottomOf="@+id/icon"
        style="@style/Widget.Truecaller.TextView"/>
    <com.truecaller.messaging.conversation.voice_notes.CountDownChronometer
        android:textSize="?attr/list_tertiaryTextSize"
        android:id="@+id/durationChronometer"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space"
        android:layout_marginStart="@dimen/space"
        android:layout_marginEnd="@dimen/space"
        app:layout_constraintStart_toEndOf="@+id/status_text"
        app:layout_constraintTop_toBottomOf="@+id/icon"
        app:layout_goneMarginStart="0dp"
        style="@style/Widget.Truecaller.TextView"/>
    <com.truecaller.ui.view.TintedTextView
        android:textSize="?attr/list_tertiaryTextSize"
        android:textColor="?attr/tc_color_chatSubtitleGrey"
        android:id="@+id/status_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space"
        android:text="@string/MessageEntityDownloading"
        android:layout_marginEnd="@dimen/space"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/icon"
        app:layout_constraintTop_toBottomOf="@+id/icon"/>
</androidx.constraintlayout.widget.ConstraintLayout>
