<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contentContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatTextView
        android:ellipsize="end"
        android:id="@+id/messageTv"
        android:visibility="gone"
        android:layout_width="@dimen/tooltip_with_action_message_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:maxLength="@integer/bottom_sheet_custom_message_max_length"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/StyleX.Text.Subtitle.S2.Normal"/>
    <Space
        android:id="@+id/spaceTitle"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toBottomOf="@+id/messageTv"/>
    <androidx.appcompat.widget.AppCompatButton
        android:textSize="14sp"
        android:id="@+id/buttonPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:minWidth="@dimen/tooltip_action_min_width"
        android:minHeight="@dimen/tooltip_action_min_height"
        android:layout_marginEnd="8dp"
        android:letterSpacing="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/buttonSecondary"
        app:layout_constraintTop_toBottomOf="@+id/messageTv"
        style="@style/StyleX.Button.Small.Action"/>
    <androidx.appcompat.widget.AppCompatButton
        android:textSize="14sp"
        android:id="@+id/buttonSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/tooltip_action_min_width"
        android:minHeight="@dimen/tooltip_action_min_height"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:letterSpacing="0.1"
        app:layout_constraintBottom_toBottomOf="@+id/buttonPrimary"
        app:layout_constraintEnd_toStartOf="@+id/buttonPrimary"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonPrimary"
        style="@style/StyleX.Button.Small.Action"/>
</merge>
