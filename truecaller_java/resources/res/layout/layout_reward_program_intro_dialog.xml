<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@drawable/ic_reward_program_trophy"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="12sp"
        android:textColor="?attr/tcx_brandBackgroundBlue"
        android:gravity="center"
        android:id="@+id/intro_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/reward_program_user_home_dialog_intro"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@+id/icon"/>
    <TextView
        android:textSize="24sp"
        android:textColor="?attr/tcx_textPrimary"
        android:gravity="center"
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/reward_program_user_home_dialog_title"
        android:lineSpacingMultiplier="0.8"
        android:fontFamily="@font/poppins_semibold"
        android:letterSpacing="-0.02"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro_text"/>
    <TextView
        android:textSize="16sp"
        android:textColor="?attr/tcx_textPrimary"
        android:gravity="center"
        android:id="@+id/subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"/>
    <View
        android:id="@+id/positive_button_divider"
        android:background="?attr/tcx_dividerColor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toTopOf="@+id/positive_button"/>
    <Button
        android:id="@+id/positive_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/global_learn_more"
        android:letterSpacing="0"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintBottom_toTopOf="@+id/negative_button_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"
        style="@style/SystemDialog.Button"/>
    <View
        android:id="@+id/negative_button_divider"
        android:background="?attr/tcx_dividerColor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/positive_button"/>
    <Button
        android:textColor="?attr/tcx_textSecondary"
        android:id="@+id/negative_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/global_dismiss"
        android:letterSpacing="0"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/negative_button_divider"
        style="@style/SystemDialog.Button"/>
</androidx.constraintlayout.widget.ConstraintLayout>
