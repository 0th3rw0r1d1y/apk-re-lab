<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/hint"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Enter phone number of business sender, then change flags to it."
        android:lines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:id="@+id/phone_business_sender"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Phone (ex +918595465225)"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hint"/>
    <TextView
        android:id="@+id/flags_value"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Current flag value: ?"
        android:lines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_business_sender"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/flags_list"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flags_value">
        <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
            android:theme="@style/StyleX.Switch"
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="MESSAGE"/>
        <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
            android:theme="@style/StyleX.Switch"
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="ATTACHMENT_IMAGE"/>
        <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
            android:theme="@style/StyleX.Switch"
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="ATTACHMENT_VIDEO"/>
        <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
            android:theme="@style/StyleX.Switch"
            android:id="@+id/file"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="ATTACHMENT_FILE"/>
        <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
            android:theme="@style/StyleX.Switch"
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="ATTACHMENT_VCARD"/>
        <TextView
            android:id="@+id/new_flags_value"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="New flag value: ?"
            android:lines="1"/>
    </LinearLayout>
    <Button
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/StrCancel"
        android:layout_marginEnd="4dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ok"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flags_list"/>
    <Button
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/StrOK"
        android:layout_marginStart="4dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cancel"
        app:layout_constraintTop_toBottomOf="@+id/flags_list"/>
</androidx.constraintlayout.widget.ConstraintLayout>
