<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/background_tcx_premium_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_notification_permission_request_dialog"
        android:contentDescription="@null"/>
    <TextView
        android:gravity="center"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/ExternalApplicationCallerIdPermissionDialogTitle"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="@style/StyleX.Text.Headline.H6"/>
    <TextView
        android:gravity="center"
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/ExternalApplicationCallerIdPermissionDialogDescription"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="@style/StyleX.Text.Body.B2"/>
    <View
        android:id="@+id/action1divider"
        android:background="?attr/tcx_fillTertiaryBackground"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="32dp"/>
    <TextView
        android:textColor="?attr/tcx_textTertiary"
        android:id="@+id/actionDismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/StrCancel"
        style="@style/StyleX.Button.Secondary"/>
    <View
        android:id="@+id/action2divider"
        android:background="?attr/tcx_fillTertiaryBackground"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/actionAccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/go_to_settings"
        style="@style/StyleX.Button.Secondary"/>
</LinearLayout>
