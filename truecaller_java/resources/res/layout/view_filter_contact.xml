<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">
    <TextView
        android:textSize="20sp"
        android:textColor="?android:attr/textColorSecondary"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/header_text"
        android:paddingLeft="@dimen/control_double_space"
        android:paddingRight="@dimen/control_double_space"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_header_height"
        android:text="@string/contacts_list_contacts"
        android:maxLines="1"
        android:drawablePadding="@dimen/control_mini_space"
        app:drawableStartCompat="@drawable/ic_tcx_contacts_24dp"
        app:drawableTint="?android:attr/textColorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:gravity="center"
        android:id="@+id/action_filter"
        android:background="@drawable/ripple_tcx_list_item"
        android:padding="11dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_filter_contact"/>
    <TextView
        android:textSize="12sp"
        android:textColor="?attr/tcx_brandBackgroundBlue"
        android:id="@+id/filter_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/action_filter"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
