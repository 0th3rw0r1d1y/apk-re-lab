<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/emoji_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.truecaller.android.truemoji.widget.EmojiTextView
        android:id="@+id/content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/message_spacing"
        android:layout_marginBottom="@dimen/message_spacing"
        android:textIsSelectable="true"
        android:textDirection="anyRtl"
        android:layout_marginEnd="@dimen/semiSpace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/MessageBubble.Incoming.Text"/>
</androidx.constraintlayout.widget.ConstraintLayout>
