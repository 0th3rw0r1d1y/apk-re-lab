<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.truecaller.ui.view.TintedImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_tooltip_background"
        android:scaleType="fitXY"
        app:imgTint="?attr/tcx_backgroundPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/textHint"
        app:layout_constraintEnd_toEndOf="@+id/textHint"
        app:layout_constraintStart_toStartOf="@+id/textHint"
        app:layout_constraintTop_toTopOf="@+id/textHint"/>
    <TextView
        android:textColor="?attr/tcx_textPrimary"
        android:id="@+id/textHint"
        android:paddingTop="18dp"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CallerIdDragHint"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/StyleX.Text.Body.B2"/>
</androidx.constraintlayout.widget.ConstraintLayout>
