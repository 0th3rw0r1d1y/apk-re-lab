<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/primarySimButton"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/tcx_textSecondary"/>
    <TextView
        android:textColor="?attr/tcx_textPrimary"
        android:ellipsize="end"
        android:id="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textDirection="anyRtl"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/numberDetails"
        app:layout_constraintEnd_toStartOf="@+id/secondarySimButton"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/primarySimButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/StyleX.Text.Subtitle.S1.Medium"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/numberCategoryContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/numberDetails"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/phoneNumber"
        app:layout_constraintTop_toTopOf="@+id/numberDetails">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/categoryIcon"
            android:layout_width="12dp"
            android:layout_height="12dp"/>
        <TextView
            android:textColor="?attr/tcx_textSecondary"
            android:ellipsize="end"
            android:gravity="start"
            android:id="@+id/categoryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_marginStart="3dp"
            style="@style/StyleX.Text.Caption"/>
        <View
            android:background="?attr/tcx_fillQuarternaryBackground"
            android:layout_width="1dp"
            android:layout_height="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>
    </LinearLayout>
    <TextView
        android:textColor="?attr/tcx_textSecondary"
        android:ellipsize="end"
        android:gravity="start"
        android:id="@+id/numberDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/secondarySimButton"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/numberCategoryContainer"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumber"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/StyleX.Text.Caption"/>
    <ImageView
        android:id="@+id/secondarySimButton"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/smsButton"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/tcx_textSecondary"/>
    <ImageView
        android:id="@+id/smsButton"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tcx_action_message_outline_24dp"
        android:paddingStart="12dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="?attr/tcx_textSecondary"/>
    <View
        android:id="@+id/divider"
        android:background="?attr/tcx_fillTertiaryBackground"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/phoneNumber"/>
</merge>
