<?xml version="1.0" encoding="utf-8"?>
<RadioButton xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:textAppearance="@style/StyleX.Text.Subtitle.S1.Medium"
    android:ellipsize="end"
    android:layout_gravity="start"
    android:id="@+id/choiceRadioButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:checked="false"
    android:maxLines="2"
    android:paddingStart="16dp"
    android:paddingEnd="0dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:autoSizeMaxTextSize="@dimen/max_survey_choice_question_font_size"
    app:autoSizeMinTextSize="@dimen/min_survey_choice_question_font_size"
    app:autoSizeTextType="uniform"
    style="@style/StyleX.RadioButton"/>
