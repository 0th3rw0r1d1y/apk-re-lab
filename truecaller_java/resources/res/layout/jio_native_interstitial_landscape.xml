<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/fl_video_container"
            android:tag="@string/jio_native_media_layout"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/addetails"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/addetails"
            android:tag="@string/jio_ad_params_container"
            android:background="#141414"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <FrameLayout
                android:orientation="horizontal"
                android:id="@+id/icon"
                android:tag="@string/jio_native_icon_layout"
                android:visibility="gone"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_text_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="2dp"
                app:layout_constraintEnd_toStartOf="@+id/btnCTa"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toEndOf="@+id/icon"
                app:layout_constraintTop_toTopOf="@+id/icon">
                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:ellipsize="end"
                    android:id="@+id/tv_title"
                    android:tag="@string/jio_native_title"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:id="@+id/tv_desc"
                    android:tag="@string/jio_native_description"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:maxLines="2"/>
            </LinearLayout>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/jio_white"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/btnCTa"
                android:tag="@string/jio_native_cta"
                android:background="#4e4e4e"
                android:visibility="gone"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:maxLines="1"
                android:drawableRight="@drawable/ic_vector_default"
                android:drawablePadding="3dp"
                android:paddingHorizontal="14dp"
                android:paddingVertical="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ll_text_container"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:gravity="end"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:textColor="@color/jio_white"
                android:gravity="center"
                android:tag="@string/jio_reward_timer"
                android:background="@drawable/skip_background"
                android:padding="6dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reward_in_skip_counter"
                android:drawableLeft="@drawable/ic_reward_default"
                android:drawableRight="@drawable/cancel_icon_select"
                android:drawablePadding="6dp"
                android:contentDescription="@string/reward_granted"
                android:textAlignment="center"/>
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white"
                android:gravity="center_vertical"
                android:id="@+id/iv_close_button"
                android:tag="@string/jio_native_skip_element"
                android:background="@drawable/skip_background"
                android:padding="6dp"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/you_can_skip_ad_in_skip_counter_mobile"
                android:drawableRight="@drawable/cancel_icon_select"
                android:drawablePadding="6dp"
                android:contentDescription="@string/skip_ad"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <RatingBar
                android:layout_gravity="center"
                android:id="@+id/jio_rating_bar"
                android:tag="@string/jio_native_rating"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:numStars="5"
                android:scaleX="1.3"
                android:scaleY="1.3"
                android:progressTint="#ffcc00"
                style="?android:attr/ratingBarStyleSmall"/>
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:id="@+id/jio_like_layout"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/jio_like"/>
                <TextView
                    android:textColor="@color/jio_white"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/jio_like"
                    android:tag="@string/jio_native_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:id="@+id/jio_downloads_layout"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/jio_user"/>
                <TextView
                    android:textColor="@color/jio_white"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/jio_downloads"
                    android:tag="@string/jio_native_downloads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
