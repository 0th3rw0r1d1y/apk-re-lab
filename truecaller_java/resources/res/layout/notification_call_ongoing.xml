<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image_avatar"
        android:layout_width="@dimen/notification_call_avatar_size"
        android:layout_height="@dimen/notification_call_avatar_size"
        android:adjustViewBounds="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"/>
    <ImageView
        android:id="@+id/image_hangup"
        android:background="@drawable/notification_call_button_background_checked"
        android:layout_width="@dimen/notification_call_button_size"
        android:layout_height="@dimen/notification_call_button_size"
        android:src="@drawable/ic_tcx_action_call_hangup_outline_24dp"
        android:scaleType="center"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/notification_call_action_end_call_background"/>
    <ImageView
        android:id="@+id/image_mute"
        android:background="@drawable/notification_call_button_background_normal"
        android:padding="8dp"
        android:layout_width="@dimen/notification_call_button_size"
        android:layout_height="@dimen/notification_call_button_size"
        android:src="@drawable/notification_call_ic_button_mute_normal"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/image_hangup"/>
    <ImageView
        android:id="@+id/image_speaker"
        android:background="@drawable/notification_call_button_background_normal"
        android:padding="8dp"
        android:layout_width="@dimen/notification_call_button_size"
        android:layout_height="@dimen/notification_call_button_size"
        android:src="@drawable/notification_call_ic_button_speaker_normal"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/image_mute"/>
    <ImageView
        android:id="@+id/image_start_record"
        android:background="@drawable/notification_call_button_background_normal"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_width="@dimen/notification_call_button_size"
        android:layout_height="@dimen/notification_call_button_size"
        android:src="@drawable/ic_call_record_24dp"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/image_speaker"/>
    <RelativeLayout
        android:id="@+id/panel_record"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/image_start_record">
        <ImageView
            android:id="@+id/image_record"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/notification_call_button_size"
            android:src="@drawable/notification_call_record_stop"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:layout_marginEnd="8dp"/>
        <Chronometer
            android:textSize="8sp"
            android:gravity="center"
            android:id="@+id/record_time"
            android:background="@drawable/notification_call_record_chronometer_background"
            android:layout_width="@dimen/notification_call_button_size"
            android:layout_height="@dimen/notification_call_recording_chronometer_height"
            android:layout_alignBottom="@+id/image_record"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_alignStart="@+id/image_record"
            android:layout_alignEnd="@+id/image_record"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/panel_record"
        android:layout_toEndOf="@+id/image_avatar">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:ellipsize="end"
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_weight="1"
                style="?attr/notificationCallTitleStyle"/>
            <TextView
                android:textSize="14sp"
                android:ellipsize="end"
                android:id="@+id/title_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_marginStart="2dp"
                style="?attr/notificationCallTitleStyle"/>
        </LinearLayout>
        <TextView
            android:textSize="12sp"
            android:ellipsize="end"
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            style="?attr/notificationCallTextStyle"/>
    </LinearLayout>
</merge>
