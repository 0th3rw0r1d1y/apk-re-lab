<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp">
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/CallAssistantOnboardingCarrierTitle"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TcStyle.Text.Poppins.SemiBold.24"/>
    <TextView
        android:id="@+id/messageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/CallAssistantOnboardingCarrierMessage"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        style="@style/StyleX.Text.Subtitle.S1"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/messageText"/>
    <ProgressBar
        android:id="@+id/mainProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageText"/>
    <TextView
        android:id="@+id/errorView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/CallAssistantOnboardingCarrierFetchError"
        app:layout_constraintTop_toBottomOf="@+id/messageText"
        style="@style/AssistantErrorView"/>
    <com.google.android.material.button.MaterialButton
        android:textColor="?attr/tc_color_textCustom"
        android:id="@+id/button"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/StrNext"
        android:backgroundTint="?attr/tc_color_containerFillBlue"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/AssistantPrimaryButton"/>
    <ProgressBar
        android:id="@+id/buttonProgressBar"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button"
        style="@style/AssistantButtonProgressBar"/>
</androidx.constraintlayout.widget.ConstraintLayout>
