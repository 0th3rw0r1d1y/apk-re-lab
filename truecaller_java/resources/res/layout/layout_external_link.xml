<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/externalLinkDescriptionIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_report_to_auth"
        app:layout_constraintBottom_toBottomOf="@+id/externalLinkDescription"
        app:layout_constraintEnd_toStartOf="@+id/externalLinkDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/externalLinkDescription"
        app:tint="?attr/tc_color_containerFillBlue"/>
    <TextView
        android:textColor="?attr/tcx_externalLinkDescriptionColor"
        android:id="@+id/externalLinkDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/surveys_report_profile_external_link_description"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/externalLinkDescriptionIcon"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/externalLinkIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_open_in_new_16dp"
        app:layout_constraintBottom_toBottomOf="@+id/externalLink"
        app:layout_constraintEnd_toStartOf="@+id/externalLink"
        app:layout_constraintStart_toStartOf="@+id/externalLinkDescription"
        app:layout_constraintTop_toTopOf="@+id/externalLink"
        app:tint="?attr/tc_color_containerFillBlue"/>
    <TextView
        android:textColor="?attr/tc_color_containerFillBlue"
        android:id="@+id/externalLink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/surveys_report_profile_external_link_visit_website"
        android:layout_marginStart="8dp"
        android:letterSpacing="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/externalLinkIcon"
        app:layout_constraintTop_toBottomOf="@+id/externalLinkDescription"
        style="@style/StyleX.Text.Button"/>
</merge>
