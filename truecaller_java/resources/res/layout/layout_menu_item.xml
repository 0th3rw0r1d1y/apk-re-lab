<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="?attr/actionButtonStyle">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/moreButton"
        android:clickable="false"
        android:layout_width="@dimen/tab_tcx_icon_size"
        android:layout_height="@dimen/tab_tcx_icon_size"
        android:src="@drawable/ic_tcx_more_vert_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/tcx_textSecondary"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/badge"
        android:visibility="gone"
        android:layout_width="@dimen/extraSpace"
        android:layout_height="@dimen/extraSpace"
        android:layout_marginBottom="@dimen/extraSpace"
        android:src="@drawable/shape_small_badge"
        android:layout_marginStart="@dimen/extraSpace"
        app:layout_constraintBottom_toBottomOf="@+id/moreButton"
        app:layout_constraintStart_toStartOf="@+id/moreButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>
