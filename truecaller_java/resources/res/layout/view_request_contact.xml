<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/tcx_subscriptionButtonTextHighlighted"
        android:gravity="center"
        android:id="@+id/requestContactDetailsBtn"
        android:background="@drawable/ripple_tcx_subscription_button_highlighted"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/details_view_caller_contact_ask_for_details_text"
        android:height="48dp"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@+id/requestContactDetailsDisclaimerTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ProgressBar
        android:id="@+id/requestContactProgressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/requestContactDetailsBtn"
        app:layout_constraintEnd_toEndOf="@+id/requestContactDetailsBtn"
        app:layout_constraintStart_toStartOf="@+id/requestContactDetailsBtn"
        app:layout_constraintTop_toTopOf="@+id/requestContactDetailsBtn"/>
    <TextView
        android:textColor="?attr/tcx_textSecondary"
        android:id="@+id/requestContactDetailsDisclaimerTv"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/details_view_contact_request_disclaimer"
        android:textAlignment="center"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="@+id/requestContactDetailsBtn"
        app:layout_constraintStart_toStartOf="@+id/requestContactDetailsBtn"
        app:layout_constraintTop_toBottomOf="@+id/requestContactDetailsBtn"
        style="@style/StyleX.Text.Caption.C1"/>
</merge>
