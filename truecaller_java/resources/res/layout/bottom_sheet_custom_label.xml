<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_sheet_rounded_corner_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="?attr/tcx_backgroundTertiary">
    <TextView
        android:textSize="16sp"
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="@string/contact_editor_custom_label_dialog_title"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_custom_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:layout_constraintTop_toBottomOf="@+id/title_text"
        style="@style/StyleX.Input.Outline">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_custom_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/contact_editor_custom_label_dialog_hint"
            android:maxLines="1"
            android:inputType="textCapSentences"
            style="@style/StyleX.Text.Subtitle.S1"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/button_cancel"
        android:padding="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/global_cancel"
        app:layout_constraintEnd_toStartOf="@+id/button_ok"
        app:layout_constraintTop_toBottomOf="@+id/layout_custom_label"
        style="@style/ContactEditor.Button.BottomSheet"/>
    <Button
        android:id="@+id/button_ok"
        android:padding="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/StrOK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_custom_label"
        style="@style/ContactEditor.Button.BottomSheet"/>
</androidx.constraintlayout.widget.ConstraintLayout>
