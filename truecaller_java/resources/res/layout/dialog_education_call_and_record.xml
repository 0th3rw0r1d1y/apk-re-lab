<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/tc_color_containerFillCustom"
    app:cardPreventCornerOverlap="false"
    style="@style/StyleX.CardView">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/image_call_and_record_education_dialog"
                android:contentDescription="@null"/>
            <TextView
                android:gravity="center"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/details_view_call_and_record_dialog_title"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/StyleX.Text.Headline.H6"/>
            <TextView
                android:textColor="?attr/tcx_textSecondary"
                android:gravity="center"
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="@string/details_view_call_and_record_dialog_message"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/StyleX.Text.Body.B2"/>
            <View
                android:id="@+id/negativeButtonDividerTop"
                android:background="?attr/tcx_fillQuarternaryBackground"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:textSize="14sp"
                    android:id="@+id/positiveButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/startup_dialog_tcx_button_height"
                    android:text="@string/details_view_call_and_record_button_text"
                    android:textAllCaps="false"
                    android:fontFamily="@font/roboto_medium"
                    style="@style/StyleX.Button.Small.Action"/>
                <ProgressBar
                    android:layout_gravity="center"
                    android:id="@+id/progressBar"
                    android:visibility="gone"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:indeterminate="true"
                    android:indeterminateTint="?attr/tcx_brandBackgroundBlue"/>
            </FrameLayout>
            <View
                android:id="@+id/negativeButtonDividerBottom"
                android:background="?attr/tcx_fillQuarternaryBackground"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <Button
                android:textSize="14sp"
                android:textColor="?attr/tcx_textSecondary"
                android:id="@+id/negativeButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/startup_dialog_tcx_button_height"
                android:text="@string/StrCancel"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_medium"
                style="@style/StyleX.Button.Small.Action"/>
        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>
