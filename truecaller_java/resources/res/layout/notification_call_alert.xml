<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
        android:textSize="14sp"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textDirection="anyRtl"
        android:layout_alignParentStart="true"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Compat.Notification.Info"
        android:textSize="12sp"
        android:id="@+id/tv_subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/context_call_notification_subtitle_margin_top"
        android:text="@string/VisiblePushCallerIdText"
        android:layout_below="@+id/tv_title"
        android:textDirection="anyRtl"
        android:layout_alignParentStart="true"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/button_call_silence"
        android:background="@drawable/bg_call_alert_button"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/tv_subTitle">
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_call_alert_call_silence"
            android:layout_marginEnd="4dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/tcx_brandBackgroundBlue_light"
            android:gravity="center"
            android:background="#0000"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/VisiblePushCallerIdCallSilence"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="4dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/call_alert_avatar_size"
        android:layout_height="@dimen/call_alert_avatar_size"
        android:adjustViewBounds="true"
        android:layout_alignTop="@+id/tv_title"
        android:layout_alignBottom="@+id/tv_subTitle"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
