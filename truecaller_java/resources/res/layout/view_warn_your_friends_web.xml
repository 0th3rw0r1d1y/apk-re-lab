<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/tc_color_containerFillCustom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image"
        android:layout_width="512px"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_beware_of_spammer"
        android:adjustViewBounds="true"
        android:contentDescription="@null"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="330px"
        android:layout_height="115px"
        android:layout_marginBottom="25px"
        android:layout_alignBottom="@+id/image"
        android:layout_centerHorizontal="true">
        <TextView
            android:textSize="33px"
            android:textColor="#bfbfbf"
            android:gravity="center"
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:fontFamily="sans-serif-condensed"/>
        <TextView
            android:textSize="24px"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4px"
            android:maxLines="2"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>
    <TextView
        android:textSize="38px"
        android:textStyle="bold"
        android:textColor="#746f61"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28px"
        android:text="@string/BewareCaps"
        android:maxLines="1"
        android:layout_alignTop="@+id/image"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-condensed"/>
    <LinearLayout
        android:orientation="horizontal"
        android:background="#000"
        android:padding="10px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_alignStart="@+id/image"
        android:layout_alignEnd="@+id/image">
        <ImageView
            android:layout_width="80px"
            android:layout_height="80px"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@null"
            android:layout_marginEnd="10px"/>
        <TextView
            android:textSize="25px"
            android:textColor="@android:color/white"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/WarnYourFriendsAdText"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
