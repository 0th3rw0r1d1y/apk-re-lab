<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/tcx_backgroundPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/doubleSpace"
        android:layout_weight="1">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/hexaSpace"
                android:layout_marginBottom="@dimen/doubleSpace"
                android:layout_marginStart="@dimen/tripleSpace"
                android:layout_marginEnd="@dimen/tripleSpace">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/backButton"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="@dimen/doubleSpace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_back_white_24dp"
                    android:contentDescription="@string/StrClose"
                    android:paddingStart="@dimen/space"
                    android:paddingEnd="@dimen/doubleSpace"
                    android:layout_marginEnd="@dimen/space"
                    app:tint="?attr/tc_color_textSecondary"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AdsChoices_Title"
                    style="@style/AdsChoices.PageTextTitle"/>
            </LinearLayout>
            <include
                android:id="@+id/adsChoicePremiumTipBannerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/adschoices_premium_info_banner"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/container"
                android:background="@drawable/ads_wizard_bg_rounded_outline_rectangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/doubleSpace"
                android:layout_marginHorizontal="@dimen/doubleSpace"/>
        </LinearLayout>
    </ScrollView>
    <Button
        android:textColor="@color/white"
        android:id="@+id/nextButton"
        android:background="@drawable/adschoices_bg_button_green_rounded"
        android:layout_marginTop="@dimen/tripleSpace"
        android:layout_marginBottom="@dimen/space"
        android:text="@string/StrContinue"
        android:layout_marginStart="@dimen/tripleSpace"
        android:layout_marginEnd="@dimen/tripleSpace"
        style="@style/AdsChoices.ContinueButton"/>
</LinearLayout>
