<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/premiumFloatingButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/non_pro_list_view"
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/ic_who_searched_img"
                android:paddingLeft="@dimen/control_extraspace"
                android:paddingRight="@dimen/control_extraspace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/whoSearchedForMe_non_premium_image"
                android:contentDescription="@null"/>
            <TextView
                android:gravity="center"
                android:id="@+id/premiumText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/WhoSearchedForMePremium"
                android:fontFamily="@font/poppins_semibold"
                style="@style/StyleX.Text.Subtitle.S2"/>
            <TextView
                android:gravity="center"
                android:id="@+id/profile_seen_count_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:includeFontPadding="false"
                android:translationY="-4dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                style="@style/StyleX.Text.Poppins.Heading.H3"/>
            <TextView
                android:textColor="?attr/whoSearchedForMe_non_premium_subtitle_color"
                android:gravity="center"
                android:id="@+id/upgrade_premium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/WhoSearchedForMeUpgradeToPremium"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                style="@style/StyleX.Text.Body.B1"/>
            <com.truecaller.premium.ui.socialproofing.SocialProofingView
                android:id="@+id/social_proofing_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"/>
        </LinearLayout>
    </ScrollView>
    <View
        android:id="@+id/buttonDivider"
        android:background="?attr/tcx_fillPentanary"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toTopOf="@+id/premiumFloatingButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.truecaller.premium.ui.embedded.EmbeddedPurchaseView
        android:id="@+id/premiumFloatingButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:embeddedSubsButtonContext="WHO_SEARCHED_FOR_ME"
        app:embeddedSubsButtonsLayout="@layout/layout_tcx_subscription_buttons_wsfm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
