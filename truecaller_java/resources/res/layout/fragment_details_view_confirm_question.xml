<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="?attr/tcx_brandBackgroundBlue"
        android:id="@+id/message"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toTopOf="@+id/header"
        app:layout_constraintEnd_toStartOf="@+id/answerTrue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_goneMarginBottom="8dp"
        style="@style/StyleX.Text.Caption"/>
    <TextView
        android:textColor="?attr/tcx_details_view_survey_text_primary_color"
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/answerTrue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message"
        style="@style/StyleX.Text.Subtitle.S1.Medium"/>
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/tcx_survey_thumb_color"
        android:id="@+id/answerTrue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:drawablePadding="8dp"
        android:textAllCaps="true"
        android:layout_marginEnd="16dp"
        app:drawableStartCompat="@drawable/ic_tcx_thumb_up"
        app:drawableTint="?attr/tcx_survey_thumb_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/StyleX.Button.Small.Action"/>
</androidx.constraintlayout.widget.ConstraintLayout>
