<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/media_viewer_toolbar_background"
    android:paddingTop="14dp"
    android:paddingBottom="14sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/doubleSpace"
    android:paddingEnd="@dimen/doubleSpace">
    <TextView
        android:textColor="@color/tcx_textPrimary_dark"
        android:id="@+id/exo_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_marginEnd="@dimen/extraSpace"
        style="@style/StyleX.Text.Body.B2"/>
    <androidx.media3.ui.DefaultTimeBar
        android:id="@+id/exo_progress"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_weight="1"
        app:buffered_color="@color/media_viewer_progress_unplayed"
        app:unplayed_color="@color/media_viewer_progress_unplayed"/>
    <TextView
        android:textColor="@color/tcx_textPrimary_dark"
        android:id="@+id/exo_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_marginStart="@dimen/extraSpace"
        style="@style/StyleX.Text.Body.B2"/>
</LinearLayout>
