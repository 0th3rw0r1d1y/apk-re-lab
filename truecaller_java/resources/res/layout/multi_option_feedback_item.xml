<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/optionHeader"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent">
        <RadioButton
            android:id="@+id/radioOption"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/StyleX.RadioButton"/>
        <TextView
            android:textColor="?attr/tcx_textPrimary"
            android:id="@+id/textOptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/radioOption"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/StyleX.Text.Subtitle.S2"/>
        <TextView
            android:textColor="?attr/tcx_textTertiary"
            android:id="@+id/textOptionSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textOptionTitle"
            app:layout_constraintTop_toBottomOf="@+id/textOptionTitle"
            style="@style/StyleX.Text.Caption"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:textColor="?attr/tcx_textSecondary"
        android:id="@+id/textQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/feedback_bottom_sheet_optional_question"
        android:layout_marginStart="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/optionHeader"
        style="@style/StyleX.Text.Subtitle.S2.Normal"/>
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/categoriesChipGroup"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:animateLayoutChanges="false"
        android:layout_marginStart="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textQuestion"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutTellMore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoriesChipGroup"
        style="@style/StyleX.Input.Outline.Feedback">
        <com.google.android.material.textfield.TextInputEditText
            android:textSize="14sp"
            android:id="@+id/inputTellMore"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/feedback_bottom_sheet_tell_us_more"
            android:maxLines="3"
            android:maxLength="200"
            android:inputType="textMultiLine"
            android:textCursorDrawable="@null"/>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupOptionDetails"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="textQuestion, inputLayoutTellMore, categoriesChipGroup"/>
</androidx.constraintlayout.widget.ConstraintLayout>
