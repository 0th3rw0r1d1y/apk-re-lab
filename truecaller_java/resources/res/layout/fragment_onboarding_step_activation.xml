<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingTop="12dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp">
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/CallAssistantOnboardingActivationTitleForward"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toTopOf="@+id/content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            style="@style/TcStyle.Text.Poppins.SemiBold.24"/>
        <com.truecaller.common.cloudtelephony.ui.ErrorBannerView
            android:id="@+id/carrierErrorView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleText"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleText">
            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                style="@style/StyleX.Text.Subtitle.S1"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/assistantTermsCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/assistant_selectable_option_tint"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/tcx_textSecondary"
                    android:textColorLink="?attr/tc_color_alertFillBlue"
                    android:id="@+id/assistantTermsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                android:id="@+id/activationErrorView"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/messageText"
                style="@style/AssistantErrorView"/>
            <com.google.android.material.button.MaterialButton
                android:textColor="?attr/tc_color_textCustom"
                android:id="@+id/manualSetupButton"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:text="@string/CallAssistantOnboardingActivationManualSetup"
                android:backgroundTint="?attr/tc_color_containerFillBlue"
                app:cornerRadius="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/AssistantPrimaryButton"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bubbleView"
                android:background="@drawable/bg_rounded_corners"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="?attr/tc_color_avatarContainerBlue"
                android:backgroundTintMode="src_over">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/actionView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/assistantContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:id="@+id/assistantImage"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:contentDescription="@null"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/assistantNameContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/assistantImage"
                            app:layout_constraintTop_toTopOf="parent">
                            <TextView
                                android:textSize="14sp"
                                android:textColor="?attr/tcx_textSecondary"
                                android:id="@+id/assistantText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:text="@string/TabBarAssistant"
                                app:layout_constraintBottom_toTopOf="@+id/assistantNameText"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_chainStyle="packed"/>
                            <TextView
                                android:textColor="?attr/tcx_textPrimary"
                                android:id="@+id/assistantNameText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/assistantText"
                                style="@style/StyleX.Text.Subtitle.S1.Medium"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <com.google.android.material.button.MaterialButton
                        android:textColor="?attr/tc_color_textCustom"
                        android:id="@+id/bubbleButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/CallAssistantOnboardingActivationActivate"
                        android:letterSpacing="0"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1"
                        app:layout_constraintStart_toEndOf="@+id/assistantContainer"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/AssistantPrimaryButton"/>
                    <androidx.constraintlayout.helper.widget.Flow
                        android:orientation="horizontal"
                        android:id="@+id/buttonFlow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:constraint_referenced_ids="assistantContainer,bubbleButton"
                        app:flow_firstHorizontalBias="0"
                        app:flow_firstHorizontalStyle="spread_inside"
                        app:flow_horizontalStyle="spread_inside"
                        app:flow_lastHorizontalBias="0"
                        app:flow_lastHorizontalStyle="spread_inside"
                        app:flow_verticalGap="8dp"
                        app:flow_wrapMode="chain"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.Guideline
                    android:orientation="vertical"
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_begin="64dp"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:id="@+id/assistantNumbersContainer"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/actionView">
                    <include
                        android:id="@+id/assistantNumber1View"
                        layout="@layout/item_assistant_activation_dial_number"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="14dp"/>
                    <include
                        android:id="@+id/assistantNumber2View"
                        layout="@layout/item_assistant_activation_dial_number"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/loadingView"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/guideline"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:textColor="?attr/assistant_onboardingBubbleGreenTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/CallAssistantOnboardingActivationVerifying"
                        android:layout_weight="1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/StyleX.Text.Subtitle.S1.Medium"/>
                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminateTint="?attr/assistant_onboardingBubbleGreenButton"/>
                </LinearLayout>
                <TextView
                    android:textColor="?attr/assistant_onboardingBubbleGreenTitle"
                    android:gravity="center_vertical"
                    android:id="@+id/successView"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="@string/CallAssistantOnboardingActivationSuccess"
                    android:layout_marginStart="16dp"
                    app:drawableEndCompat="@drawable/ic_assistant_check"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/guideline"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/StyleX.Text.Subtitle.S1.Medium"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:textColor="?attr/tcx_textSecondary"
                android:id="@+id/captionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/CallAssistantOnboardingActivationCaption"
                style="@style/StyleX.Text.Caption"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/voiceProgressBar"
            android:background="?attr/tcx_backgroundPrimary"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:indeterminateTint="?attr/tcx_brandBackgroundBlue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
