<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/frameLayout"
        android:background="@drawable/rounded_background_gray"
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <include
        android:id="@+id/title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        layout="@layout/view_favorite_contacts_bottom_sheet_contact_name"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ask_always_container"
        android:background="@drawable/background_tcx_rectangle_outline"
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/title_tv"
        app:layout_constraintTop_toBottomOf="@+id/title_tv">
        <androidx.appcompat.widget.AppCompatRadioButton
            android:theme="@style/StyleX.RadioButton"
            android:id="@+id/ask_always_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/doubleSpace"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:id="@+id/ask_always_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingVertical="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="16sp"
                android:textColor="?attr/tcx_textPrimary"
                android:id="@+id/ask_always_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/favorite_contacts_ask_always"
                android:fontFamily="@font/roboto_medium"
                style="@style/StyleX.Text.Subtitle.S1"/>
            <TextView
                android:textColor="@color/tcx_brandBackgroundBlue_dark"
                android:ellipsize="end"
                android:gravity="start"
                android:id="@+id/default_action"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favorite_contacts_default"
                android:lines="1"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@drawable/ic_favorite_contact_selected"
                style="@style/StyleX.Text.Caption"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/call_type_option_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ask_always_container"
        app:layout_constraintTop_toBottomOf="@+id/ask_always_container"/>
    <com.google.android.material.button.MaterialButton
        android:enabled="false"
        android:textSize="14sp"
        android:id="@+id/saveBtn"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/global_save"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/call_type_option_container"
        app:layout_constraintStart_toStartOf="@+id/ask_always_container"
        app:layout_constraintTop_toBottomOf="@+id/call_type_option_container"
        style="@style/StyleX.Button.Primary.Disableable"/>
</androidx.constraintlayout.widget.ConstraintLayout>
