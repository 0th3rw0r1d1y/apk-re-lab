<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/SettingsPrivacyAuthorisedAppsTitle"/>
    <com.truecaller.ui.settings.privacy.authorizedApps.CustomRecyclerViewWithStates
        android:id="@+id/customRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRevokeAllApps"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/control_quintspace"
        android:layout_margin="@dimen/control_doublespace"
        android:layout_marginBottom="@dimen/control_extraspace"
        android:text="@string/SettingsAuthorisedAppsRevokeAllAccess"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/StyleX.Button.Primary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
