<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/tripleSpace"
    android:paddingEnd="@dimen/tripleSpace">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hexaSpace"
        android:text="@string/AccessContacts_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Wizard.PageTextTitle"/>
    <TextView
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wizardPageSubtitleMarginTop"
        android:text="@string/AccessContacts_details_r2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        style="@style/Wizard.PageTextSubTitle"/>
    <Button
        android:textColor="?attr/tc_color_containerFillBlue"
        android:layout_gravity="start"
        android:id="@+id/learn_more_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/StrLearnMore"
        android:drawablePadding="@dimen/semiSpace"
        android:drawableStart="@drawable/ic_open_in_new_16dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:drawableTint="?attr/tc_color_containerFillBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details"
        style="@style/Widget.AppCompat.Button.Borderless"/>
    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@+id/deny_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/learn_more_button"/>
    <Button
        android:textColor="?attr/tcx_textSecondary"
        android:id="@+id/deny_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space"
        android:text="@string/AccessContacts_disable_cta"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Widget.AppCompat.Button.Borderless"/>
    <Button
        android:id="@+id/allow_button"
        android:layout_marginBottom="@dimen/semiSpace"
        android:text="@string/AccessContacts_enable_cta"
        app:layout_constraintBottom_toTopOf="@+id/deny_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Wizard.ContinueButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>
