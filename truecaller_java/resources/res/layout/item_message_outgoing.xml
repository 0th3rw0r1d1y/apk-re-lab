<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/message_spacing"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrierMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="guidelineMessageOutgoing"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guidelineMessageOutgoing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.15"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textMarkedImp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space"
        android:layout_marginBottom="@dimen/space"
        android:text="@string/ConversationMarkedAsImportant"
        android:drawablePadding="@dimen/semiSpace"
        android:drawableStart="@drawable/ic_tcx_star_16dp"
        android:layout_marginEnd="@dimen/doubleSpace"
        app:drawableTint="?attr/tc_color_avatarFillYellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="@dimen/doubleSpace"
        style="@style/StyleX.Text.Caption.C1"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/forwardButton"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/ConversationForward"
        app:layout_constraintBottom_toBottomOf="@+id/content_background"
        app:layout_constraintEnd_toStartOf="@+id/content_background"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/content_background"
        app:srcCompat="@drawable/ic_action_forward"/>
    <FrameLayout
        android:id="@+id/active_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/message_entity_spacing"
        android:layout_marginBottom="@dimen/message_entity_spacing"
        android:layout_marginStart="@dimen/doubleSpace"
        android:layout_marginEnd="@dimen/doubleSpace"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/guidelineMessageOutgoing"
        app:layout_constraintTop_toBottomOf="@+id/textMarkedImp">
        <LinearLayout
            android:gravity="end"
            android:orientation="vertical"
            android:id="@+id/views_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <FrameLayout
            android:id="@+id/attachment_divider_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/views_container">
            <View
                android:id="@+id/attachment_divider"
                android:background="?attr/tcx_fillTertiaryBackground"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </FrameLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/content_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/attachment_divider_container">
            <include
                android:id="@+id/viewForwarded"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/forwarded_message_label_layout"/>
            <com.truecaller.messaging.conversation.MessageSnippetView
                android:id="@+id/viewReplySnippet"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reply_snippet_margin"
                app:messageType="typeOutgoing"/>
            <com.truecaller.messaging.linkpreviews.LinkPreviewMessageView
                android:id="@+id/link_preview"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/semiSpace"/>
            <com.truecaller.messaging.conversation.ExpandableEmojiTextView
                android:id="@+id/content_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:textDirection="anyRtl"
                style="@style/MessageBubble.Outgoing.Text"/>
            <View
                android:id="@+id/bottom_action_divider"
                android:background="?attr/tcx_fillTertiaryBackground"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/tcx_brandBackgroundBlue"
                android:gravity="center_vertical"
                android:id="@+id/bottom_action"
                android:background="@drawable/message_bubble_action_bg"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/ConversationGetDirections"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@drawable/tcx_icon_direction_22dp"
                app:drawableTint="?attr/tcx_brandBackgroundBlue"
                style="@style/StyleX.Text.Caption.Medium"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/reactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/button_message_undo"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/ConversationMessageUndo"
        app:layout_constraintBottom_toBottomOf="@+id/content_background"
        app:layout_constraintEnd_toStartOf="@+id/content_background"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_undo_arrow"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/timestamp_sim_indicator"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingStart="@dimen/space"
        android:paddingEnd="@dimen/space"
        android:layout_marginEnd="@dimen/space"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_background"
        style="@style/Widget.Truecaller.TextView.TimestampSimIndicator"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="?attr/list_quaternaryTextSize"
        android:textColor="?attr/conversation_errorColor"
        android:id="@+id/message_error"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingTop="@dimen/space"
        android:paddingBottom="@dimen/semiSpace"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/semiSpace"
        android:drawableStart="@drawable/ic_error_outline_red_16dp"
        android:paddingStart="@dimen/tripleSpace"
        android:paddingEnd="@dimen/doubleSpace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timestamp_sim_indicator"/>
    <CheckBox
        android:id="@+id/checkActionMode"
        android:background="@drawable/selector_checkbox"
        android:visibility="gone"
        android:layout_width="@dimen/icon_tcx_default_size"
        android:layout_height="@dimen/icon_tcx_default_size"
        android:button="@null"
        android:layout_marginStart="@dimen/doubleSpace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
