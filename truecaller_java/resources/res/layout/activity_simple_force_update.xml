<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/tcx_brandBackgroundBlue_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/fu_white"
        android:id="@+id/fu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/fu_incompatible_version_title"
        app:layout_constraintBottom_toTopOf="@+id/fu_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"/>
    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/fu_white"
        android:id="@+id/fu_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/fu_incompatible_version_description"
        android:singleLine="false"
        android:textAlignment="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:id="@+id/btn_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@color/fu_truecaller"
        app:cardCornerRadius="@dimen/fu_rounding"
        app:cardElevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fu_info">
        <TextView
            android:id="@+id/btn_action_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fu_downloadNow"
            style="@style/FUText.Button"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/fu_white"
        android:id="@+id/fu_support_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:lines="2"
        android:textAlignment="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_action"/>
</androidx.constraintlayout.widget.ConstraintLayout>
