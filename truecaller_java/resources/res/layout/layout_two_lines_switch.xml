<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="?attr/tcx_textSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tintMode="src_in"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="?attr/tcx_textPrimary"
        android:ellipsize="end"
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:maxLines="1"
        android:layout_marginStart="@dimen/doubleSpace"
        android:layout_marginEnd="@dimen/doubleSpace"
        app:layout_constraintBottom_toTopOf="@+id/subtitle"
        app:layout_constraintEnd_toStartOf="@+id/switchView"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/StyleX.Text.Subtitle.S1.Medium"/>
    <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
        android:theme="@style/StyleX.Switch"
        android:id="@+id/switchView"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:layout_marginStart="@dimen/doubleSpace"
        app:drawableTint="?attr/tcx_textSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/StyleX.Text.Subtitle.S2"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="?attr/tcx_textSecondary"
        android:ellipsize="end"
        android:id="@+id/subtitle"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/semiSpace"
        android:maxLines="1"
        android:layout_marginEnd="@dimen/doubleSpace"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/switchView"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title"
        style="@style/StyleX.Text.Caption"/>
</androidx.constraintlayout.widget.ConstraintLayout>
