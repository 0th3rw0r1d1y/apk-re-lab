<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clCmbAcs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">
        <TextView
            android:id="@+id/tvCmbTitleAcs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/biz_call_back_request"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/BizCmbWithSlotsTitleTextStyle"/>
        <Button
            android:id="@+id/btnCmbNotInterestedAcs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extraSpace"
            android:text="@string/biz_call_back_not_interested"
            android:animateLayoutChanges="true"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnCmbPickSlotAcs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCmbTitleAcs"
            style="@style/BizCmbWithSlotsButtonStyle"/>
        <Button
            android:id="@+id/btnCmbPickSlotAcs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extraSpace"
            android:text="@string/biz_call_back_pick_a_slot"
            android:animateLayoutChanges="true"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/tvCmbTitleAcs"
            style="@style/BizCmbWithSlotsButtonStyle"/>
        <ProgressBar
            android:id="@+id/cmbProgress"
            android:visibility="gone"
            android:layout_width="@dimen/biz_cmb_progress_size"
            android:layout_height="@dimen/biz_cmb_progress_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCmbTitleAcs"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.5"/>
        <TextView
            android:id="@+id/textNotInterestedTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/doubleSpace"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivTickCallMeBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/BizCmbWithSlotsTitleTextStyle"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ivTickCallMeBack"
            android:layout_width="@dimen/biz_dv_call_me_back_icon_size"
            android:layout_height="@dimen/biz_dv_call_me_back_icon_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="false"
            app:lottie_fileName="animations/ic_business_tick.lottie"/>
        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupCmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="tvCmbTitleAcs, btnCmbNotInterestedAcs, btnCmbPickSlotAcs"/>
        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupCmbSuccess"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="textNotInterestedTitle, ivTickCallMeBack"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
