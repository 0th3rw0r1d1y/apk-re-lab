<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/tcx_conversationInputBarBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <HorizontalScrollView
        android:id="@+id/scrollView"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/pickerButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/buttonCamera"
                style="@style/Widget.Truecaller.AttachmentOption.Item">
                <androidx.camera.view.PreviewView
                    android:id="@+id/previewView"
                    android:background="@color/camera_preview_button_bg_all_themes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <com.truecaller.ui.view.TintedImageView
                    android:layout_marginBottom="@dimen/space"
                    android:tint="?attr/tcx_avatarTextGreen"
                    app:backgroundTint="?attr/tcx_avatarBackgroundGreen"
                    app:srcCompat="@drawable/ic_tcx_photo_camera_24dp"
                    style="@style/Widget.Truecaller.AttachmentOption.Image"/>
                <TextView
                    android:text="@string/MmsAttachmentOptionCamera"
                    style="@style/Widget.Truecaller.AttachmentOption.Text"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttonGallery"
                style="@style/Widget.Truecaller.AttachmentOption.Item">
                <com.truecaller.ui.view.TintedImageView
                    android:layout_marginBottom="@dimen/space"
                    android:tint="?attr/tcx_avatarTextYellow"
                    app:backgroundTint="?attr/tcx_avatarBackgroundYellow"
                    app:srcCompat="@drawable/ic_tcx_photo_library_outline_24dp"
                    style="@style/Widget.Truecaller.AttachmentOption.Image"/>
                <TextView
                    android:text="@string/MmsAttachmentOptionGallery"
                    style="@style/Widget.Truecaller.AttachmentOption.Text"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttonDocument"
                style="@style/Widget.Truecaller.AttachmentOption.Item">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginBottom="@dimen/space"
                    android:tint="?attr/tcx_avatarTextBlue"
                    app:backgroundTint="?attr/tcx_avatarBackgroundBlue"
                    app:srcCompat="@drawable/ic_tcx_doc_24dp"
                    style="@style/Widget.Truecaller.AttachmentOption.Image"/>
                <TextView
                    android:text="@string/MmsAttachmentOptionDoc"
                    style="@style/Widget.Truecaller.AttachmentOption.Text"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttonVideo"
                style="@style/Widget.Truecaller.AttachmentOption.Item">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginBottom="@dimen/space"
                    android:tint="?attr/tcx_avatarTextAqua"
                    app:backgroundTint="?attr/tcx_avatarBackgroundAqua"
                    app:srcCompat="@drawable/ic_tcx_videocam_24dp"
                    style="@style/Widget.Truecaller.AttachmentOption.Image"/>
                <TextView
                    android:text="@string/MmsAttachmentOptionVideo"
                    style="@style/Widget.Truecaller.AttachmentOption.Text"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttonContact"
                style="@style/Widget.Truecaller.AttachmentOption.Item">
                <com.truecaller.ui.view.TintedImageView
                    android:layout_marginBottom="@dimen/space"
                    android:tint="?attr/tcx_avatarTextViolet"
                    app:backgroundTint="?attr/tcx_avatarBackgroundViolet"
                    app:srcCompat="@drawable/ic_tcx_person_24dp"
                    style="@style/Widget.Truecaller.AttachmentOption.Image"/>
                <TextView
                    android:text="@string/MmsAttachmentOptionContact"
                    style="@style/Widget.Truecaller.AttachmentOption.Text"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <View
        android:id="@+id/disableViewlayout"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
