<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="0dp">
    <View
        android:id="@+id/iconIv"
        android:background="@drawable/background_layout_shimmer_list_item_avatar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:backgroundTint="?attr/shimmer_loading_layout_color"
        android:backgroundTintMode="src_in"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/title"
        android:background="@drawable/background_layout_shimmer_list_item_text"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="?attr/shimmer_loading_layout_color"
        android:backgroundTintMode="src_in"
        app:layout_constraintBottom_toBottomOf="@+id/iconIv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iconIv"
        app:layout_constraintTop_toTopOf="@+id/iconIv"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/StyleX.Text.Subtitle.S1.Medium"/>
    <View
        android:id="@+id/subTitle"
        android:background="@drawable/background_layout_shimmer_list_item_text"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginTop="@dimen/space"
        android:layout_marginEnd="40dp"
        android:backgroundTint="?attr/shimmer_loading_layout_color"
        android:backgroundTintMode="src_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconIv"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/StyleX.Text.Subtitle.S1.Medium"/>
    <View
        android:id="@+id/slot1"
        android:background="@drawable/background_layout_shimmer_list_item_text"
        android:layout_width="60dp"
        android:layout_height="16dp"
        android:layout_marginTop="@dimen/space"
        android:backgroundTint="?attr/shimmer_loading_layout_color"
        android:backgroundTintMode="src_in"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subTitle"
        style="@style/StyleX.Text.Caption"/>
    <View
        android:id="@+id/slot2"
        android:background="@drawable/background_layout_shimmer_list_item_text"
        android:layout_width="60dp"
        android:layout_height="16dp"
        android:layout_marginTop="@dimen/space"
        android:layout_marginStart="16dp"
        android:backgroundTint="?attr/shimmer_loading_layout_color"
        android:backgroundTintMode="src_in"
        app:layout_constraintStart_toEndOf="@+id/slot1"
        app:layout_constraintTop_toBottomOf="@+id/subTitle"
        style="@style/StyleX.Text.Caption"/>
    <View
        android:id="@+id/slot3"
        android:background="@drawable/background_layout_shimmer_list_item_text"
        android:layout_width="60dp"
        android:layout_height="16dp"
        android:layout_marginTop="@dimen/space"
        android:layout_marginStart="16dp"
        android:backgroundTint="?attr/shimmer_loading_layout_color"
        android:backgroundTintMode="src_in"
        app:layout_constraintStart_toEndOf="@+id/slot2"
        app:layout_constraintTop_toBottomOf="@+id/subTitle"
        style="@style/StyleX.Text.Caption"/>
</androidx.constraintlayout.widget.ConstraintLayout>
