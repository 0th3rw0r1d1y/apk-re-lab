<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/notch"
        android:background="@drawable/rounded_background_gray"
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="20sp"
        android:textColor="?attr/tcx_textPrimary"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/choose_how_to_call"
        android:lineSpacingExtra="3.44sp"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notch"/>
    <View
        android:id="@+id/background"
        android:background="@drawable/rounded_rectangle_with_border"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/home_container"
        android:background="?attr/selectableItemBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="homeCountry,homeCountryNumber,homeCallIcon,divider"
        app:layout_constraintBottom_toBottomOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="16sp"
        android:textColor="?attr/tcx_textPrimary"
        android:id="@+id/homeCountry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="2.75sp"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@+id/homeCallIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="12sp"
        android:textColor="?attr/tcx_textSecondary"
        android:id="@+id/homeCountryNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:lineSpacingExtra="2sp"
        android:fontFamily="@font/roboto_regular"
        android:textDirection="anyRtl"
        app:layout_constraintStart_toStartOf="@+id/homeCountry"
        app:layout_constraintTop_toBottomOf="@+id/homeCountry"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/homeCallIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tcx_action_call_outline_24dp"
        android:tint="?attr/tcx_textSecondary"
        android:layout_marginEnd="19dp"
        app:layout_constraintBottom_toBottomOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background"/>
    <View
        android:id="@+id/divider"
        android:background="?attr/tcx_fillQuarternaryBackground"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/homeCountry"
        app:layout_constraintTop_toBottomOf="@+id/homeCountryNumber"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/roamingContainer"
        android:background="?attr/selectableItemBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="roamingCountry,roamingCountryNumber,roamingCallIcon,divider2"
        app:layout_constraintBottom_toBottomOf="@+id/divider2"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/divider"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="16sp"
        android:textColor="?attr/tcx_textPrimary"
        android:id="@+id/roamingCountry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="2.75sp"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@+id/homeCallIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="12sp"
        android:textColor="?attr/tcx_textSecondary"
        android:id="@+id/roamingCountryNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="16dp"
        android:lineSpacingExtra="2sp"
        android:fontFamily="@font/roboto_regular"
        android:textDirection="anyRtl"
        app:layout_constraintBottom_toBottomOf="@+id/divider2"
        app:layout_constraintStart_toStartOf="@+id/roamingCountry"
        app:layout_constraintTop_toBottomOf="@+id/roamingCountry"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/roamingCallIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tcx_action_call_outline_24dp"
        android:tint="?attr/tcx_textSecondary"
        android:layout_marginEnd="19dp"
        app:layout_constraintBottom_toBottomOf="@+id/divider2"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/divider"/>
    <View
        android:id="@+id/divider2"
        android:background="?attr/tcx_fillQuarternaryBackground"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/roamingCountry"
        app:layout_constraintTop_toBottomOf="@+id/roamingCountryNumber"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/originalNumberContainer"
        android:background="?attr/selectableItemBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/divider2"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="16sp"
        android:textColor="?attr/tcx_textPrimary"
        android:id="@+id/originalNumberTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="2.75sp"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@+id/homeCallIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="12sp"
        android:textColor="?attr/tcx_textSecondary"
        android:id="@+id/originalNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="16dp"
        android:lineSpacingExtra="2sp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/originalNumberTitle"
        app:layout_constraintTop_toBottomOf="@+id/originalNumberTitle"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tcx_action_call_outline_24dp"
        android:tint="?attr/tcx_textSecondary"
        android:layout_marginEnd="19dp"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/divider2"/>
</androidx.constraintlayout.widget.ConstraintLayout>
