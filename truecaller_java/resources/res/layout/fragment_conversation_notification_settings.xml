<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/tcx_backgroundPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_tcx_arrow_back"
        app:title="@string/conversation_notification_settings_title"/>
    <com.truecaller.messaging.conversation.notifications.TwoLinesSwitchView
        android:id="@+id/muteSwitch"
        android:background="@drawable/background_tcx_rectangle_outline"
        android:padding="@dimen/doubleSpace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/doubleSpace"
        android:layout_marginStart="@dimen/doubleSpace"
        android:layout_marginEnd="@dimen/doubleSpace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:switchIcon="@drawable/ic_tcx_mute_notification"
        app:switchTitle="@string/conversation_notification_settings_mute"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/background_tcx_rectangle_outline"
        android:paddingTop="@dimen/doubleSpace"
        android:paddingBottom="@dimen/doubleSpace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/doubleSpace"
        android:layout_marginStart="@dimen/doubleSpace"
        android:layout_marginEnd="@dimen/doubleSpace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/muteSwitch">
        <TextView
            android:textColor="?attr/tcx_textSecondary"
            android:id="@+id/soundSectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/conversation_notification_settings_message_sounds"
            android:layout_marginStart="@dimen/doubleSpace"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/StyleX.Text.Subtitle.S2"/>
        <com.truecaller.messaging.conversation.notifications.TwoLinesSwitchView
            android:id="@+id/soundSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tripleSpace"
            android:layout_marginBottom="@dimen/doubleSpace"
            android:layout_marginStart="@dimen/doubleSpace"
            android:layout_marginEnd="@dimen/doubleSpace"
            app:layout_constraintStart_toStartOf="@+id/soundSectionTitle"
            app:layout_constraintTop_toBottomOf="@+id/soundSectionTitle"
            app:switchIcon="@drawable/ic_sound"
            app:switchTitle="@string/conversation_notification_settings_custom_sound"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
