<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/ad_media"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="#9b9b98"
        android:gravity="center"
        android:layout_gravity="start|bottom"
        android:id="@+id/ad_attr"
        android:background="#ffffff"
        android:padding="0dp"
        android:layout_width="24dp"
        android:layout_height="20dp"
        android:text="@string/ad_attr_txt"
        android:fontFamily="monospace"/>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="60dp"
        android:layout_marginHorizontal="12dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/ad_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:layout_marginStart="4dp"/>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="8dp">
            <TextView
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:ellipsize="end"
                android:id="@+id/headline_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:lines="1"
                android:fontFamily="monospace"/>
            <TextView
                android:textSize="11dp"
                android:textColor="#9b9b98"
                android:ellipsize="end"
                android:id="@+id/body_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:fontFamily="monospace"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <FrameLayout
                    android:id="@+id/rating_bar_frame"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="2dp"/>
                <TextView
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="#9b9b98"
                    android:ellipsize="end"
                    android:id="@+id/secondary_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:fontFamily="monospace"/>
            </LinearLayout>
            <TextView
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"
                android:id="@+id/cta"
                android:background="@drawable/native_button_shape"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_marginTop="10dp"
                android:minWidth="20dp"
                android:lines="1"
                android:fontFamily="monospace"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
