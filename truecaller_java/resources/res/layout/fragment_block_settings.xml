<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/blocking_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="?attr/tcx_backgroundPrimary"
            app:layout_scrollFlags="snap|exitUntilCollapsed|scroll"
            app:scrimAnimationDuration="0"
            app:statusBarScrim="@android:color/transparent"
            app:titleEnabled="false">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax">
                <TextView
                    android:textSize="16sp"
                    android:textColor="?attr/tc_color_textCustom"
                    android:id="@+id/tv_header_page_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_block_title"
                    android:fontFamily="@font/roboto_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <View
                    android:id="@+id/header_page_title_divider"
                    android:background="#1fffffff"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_header_page_title"/>
                <ImageView
                    android:id="@+id/iv_protection"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_marginTop="32dp"
                    android:importantForAccessibility="no"
                    app:layout_constraintBottom_toTopOf="@+id/tv_header_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/header_page_title_divider"
                    app:layout_constraintVertical_chainStyle="packed"/>
                <TextView
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:id="@+id/tv_header_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/settings_blocking_header_title"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_header_subtitle"
                    app:layout_constraintEnd_toStartOf="@+id/tv_header_title_divider"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="@+id/auto_block_spammers_selector"
                    app:layout_constraintTop_toBottomOf="@+id/iv_protection"/>
                <View
                    android:id="@+id/tv_header_title_divider"
                    android:background="#33ffffff"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_header_title"
                    app:layout_constraintEnd_toStartOf="@+id/tv_header_title_status"
                    app:layout_constraintStart_toEndOf="@+id/tv_header_title"
                    app:layout_constraintTop_toTopOf="@+id/tv_header_title"/>
                <TextView
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:id="@+id/tv_header_title_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_blocking_header_title"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_header_title"
                    app:layout_constraintEnd_toEndOf="@+id/auto_block_spammers_selector"
                    app:layout_constraintStart_toEndOf="@+id/tv_header_title_divider"
                    app:layout_constraintTop_toTopOf="@+id/tv_header_title"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#ffffff"
                    android:gravity="top|center_horizontal"
                    android:id="@+id/tv_header_subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/roboto_regular"
                    app:layout_constraintBottom_toTopOf="@+id/tv_auto_updated_spam_list"
                    app:layout_constraintEnd_toEndOf="@+id/auto_block_spammers_selector"
                    app:layout_constraintStart_toStartOf="@+id/auto_block_spammers_selector"
                    app:layout_constraintTop_toBottomOf="@+id/tv_header_title"
                    app:layout_goneMarginBottom="12dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/tc_color_textCustom"
                    android:gravity="center"
                    android:id="@+id/tv_auto_updated_spam_list"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="@string/settings_blocking_auto_update_spam_list_disclaimer"
                    android:alpha="0.75"
                    app:layout_constraintBottom_toTopOf="@+id/auto_block_spammers_selector"
                    app:layout_constraintEnd_toEndOf="@+id/auto_block_spammers_selector"
                    app:layout_constraintStart_toStartOf="@+id/auto_block_spammers_selector"
                    app:layout_constraintTop_toBottomOf="@+id/tv_header_subtitle"
                    style="@style/StyleX.Text.Roboto.Regular.12"/>
                <ImageView
                    android:id="@+id/iv_premium_crown"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_premium_crown"
                    android:contentDescription="@null"
                    android:alpha="0.75"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_auto_updated_spam_list"
                    app:layout_constraintEnd_toStartOf="@+id/tv_auto_updated_spam_list"
                    app:layout_constraintTop_toTopOf="@+id/tv_auto_updated_spam_list"
                    app:tint="?attr/tc_color_textCustom"/>
                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_auto_updated_spam_list"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="tv_auto_updated_spam_list,iv_premium_crown"/>
                <com.truecaller.settings.impl.ui.block.autoblockspammers.AutoBlockSpammersSelectorView
                    android:id="@+id/auto_block_spammers_selector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginHorizontal="24dp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_max_protection_disclaimer"
                    app:layout_constraintTop_toBottomOf="@+id/tv_auto_updated_spam_list"
                    app:layout_goneMarginBottom="88dp"
                    app:layout_goneMarginTop="12dp"/>
                <TextView
                    android:textSize="10sp"
                    android:textColor="#ffdc69"
                    android:gravity="center_horizontal"
                    android:id="@+id/tv_max_protection_disclaimer"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="48dp"
                    android:text="@string/settings_blocking_header_max_disclaimer"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/auto_block_spammers_selector"
                    app:layout_constraintStart_toStartOf="@+id/auto_block_spammers_selector"
                    app:layout_constraintTop_toBottomOf="@+id/auto_block_spammers_selector"/>
                <androidx.compose.ui.platform.ComposeView
                    android:id="@+id/updateSpamListComposeView"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_max_protection_disclaimer"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:navigationIcon="?attr/homeAsUpIndicator"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:background="@drawable/bg_block_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-24dp"
        android:elevation="1dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <FrameLayout
            android:id="@+id/settings_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
