<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="end"
    android:layout_gravity="end|bottom"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginEnd="8dp">
    <ImageView
        android:id="@+id/fab_submenu_item_icon"
        android:background="?attr/fab_menuCircleBackground"
        android:padding="8dp"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:contentDescription="@null"
        android:layout_marginEnd="10dp"
        android:elevation="1dp"/>
    <TextView
        android:textColor="?attr/theme_textColorPrimary"
        android:gravity="end"
        android:layout_gravity="end|center_vertical"
        android:id="@+id/fab_submenu_item_label"
        android:background="?attr/fab_menuItemBackground"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:maxWidth="260dp"
        android:layout_marginEnd="16dp"
        android:elevation="1dp"/>
</LinearLayout>
