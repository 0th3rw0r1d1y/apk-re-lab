<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/control_double_space"
    android:layout_marginStart="@dimen/control_double_space"
    android:layout_marginEnd="@dimen/control_double_space">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Ads.LeadGen.TextView.Label"/>
    <LinearLayout
        android:id="@+id/checkBoxGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label"
        style="@style/Ads.LeadGen.CheckBoxGroup"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/error"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxGroup"
        style="@style/Ads.LeadGen.TextView.Error"/>
</androidx.constraintlayout.widget.ConstraintLayout>
