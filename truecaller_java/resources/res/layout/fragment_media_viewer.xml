<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">
    <View
        android:id="@+id/background"
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.truecaller.messaging.mediaviewer.InteractiveMediaView
        android:id="@+id/mediaView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageButton
        android:layout_gravity="center"
        android:id="@+id/playbackButton"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"/>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/bottomContatiner"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.truecaller.android.truemoji.widget.EmojiTextView
            android:textColor="@color/tcx_textPrimary_dark"
            android:ellipsize="end"
            android:id="@+id/messageText"
            android:background="@color/media_viewer_toolbar_background"
            android:padding="@dimen/doubleSpace"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            style="@style/StyleX.Text.Body.B1"/>
        <androidx.media3.ui.PlayerControlView
            android:id="@+id/playerControlView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:controller_layout_id="@layout/view_media_viewer_video_controls"
            app:show_timeout="-1"/>
    </LinearLayout>
</FrameLayout>
