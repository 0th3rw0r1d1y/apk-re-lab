<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewBusinessAwareness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/extraSpace"
        app:cardBackgroundColor="?attr/tcx_bizAwarenessCardBackgroundColor"
        app:cardCornerRadius="@dimen/doubleSpace"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/color_biz_awareness_card_stroke"
        app:strokeWidth="1dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/flBizAwarenessContent"
            android:padding="@dimen/doubleSpace"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="?attr/tcx_bizAwarenessCardTitleColor"
                android:id="@+id/tvBizAwarenessTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/details_view_verified_by_truecaller"
                android:drawablePadding="@dimen/space"
                android:fontFamily="@font/roboto_medium"
                android:letterSpacing="0.01"
                app:drawableStartCompat="@drawable/ic_tcx_verified_16dp"
                app:drawableTint="?attr/tcx_brandBackgroundBlue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/StyleX.Text.Subtitle.S1.Medium"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/tcx_textSecondary"
                android:id="@+id/tvBizAwarenessText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space"
                android:fontFamily="@font/roboto_regular"
                android:textAlignment="textStart"
                android:letterSpacing="0.03"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvBizAwarenessTitle"
                style="@style/StyleX.Text.Subtitle.S2.Normal"/>
            <com.google.android.material.button.MaterialButton
                android:textSize="12sp"
                android:textColor="?attr/tcx_backgroundPrimary"
                android:id="@+id/btnAwarenessOk"
                android:paddingTop="@dimen/space"
                android:paddingBottom="@dimen/space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/doubleSpace"
                android:minWidth="70dp"
                android:text="@string/global_ok"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_medium"
                android:textAlignment="center"
                android:letterSpacing="0"
                app:backgroundTint="?attr/tcx_bizAwarenessCardButtonColor"
                app:cornerRadius="45dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvBizAwarenessText"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>
            <com.google.android.material.button.MaterialButton
                android:textSize="12sp"
                android:textColor="?attr/tcx_bizAwarenessCardButtonColor"
                android:id="@+id/btnAwarenessLearnMore"
                android:paddingLeft="@dimen/doubleSpace"
                android:paddingTop="@dimen/space"
                android:paddingRight="@dimen/doubleSpace"
                android:paddingBottom="@dimen/space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/doubleSpace"
                android:text="@string/global_learn_more"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_medium"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/extraSpace"
                android:letterSpacing="0"
                app:cornerRadius="45dp"
                app:icon="@drawable/ic_learn_more_biz_awareness"
                app:iconPadding="@dimen/space"
                app:iconTint="?attr/tcx_bizAwarenessCardButtonColor"
                app:layout_constraintStart_toEndOf="@+id/btnAwarenessOk"
                app:layout_constraintTop_toBottomOf="@+id/tvBizAwarenessText"
                app:strokeColor="?attr/tcx_bizAwarenessCardButtonColor"
                app:strokeWidth="1dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <ImageView
        android:id="@+id/ivTriangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.5dp"
        android:src="@drawable/ic_triangle"
        android:contentDescription="@null"
        android:paddingStart="@dimen/doubleSpace"
        android:paddingEnd="@dimen/doubleSpace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</merge>
