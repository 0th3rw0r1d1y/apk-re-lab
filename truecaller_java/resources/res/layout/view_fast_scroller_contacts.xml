<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/fast_scroller_bubble"
        android:visibility="invisible"
        android:layout_width="@dimen/fast_scroller_bubble_size"
        android:layout_height="@dimen/fast_scroller_bubble_size"
        android:layout_toStartOf="@+id/fast_scroller_bar">
        <com.truecaller.ui.view.TintedImageView
            android:id="@+id/fast_scroller_bubble_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/fast_scroller_bubble"
            app:imgTint="?attr/tcx_brandBackgroundBlue"/>
        <TextView
            android:textSize="@dimen/fast_scroller_bubble_text_size"
            android:textColor="?attr/tcx_backgroundPrimary"
            android:gravity="center"
            android:id="@+id/fast_scroller_bubble_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <com.truecaller.ui.view.TintedImageView
        android:id="@+id/fast_scroller_bar"
        android:layout_width="@dimen/control_semispace"
        android:layout_height="@dimen/control_quad_space"
        android:src="@drawable/fast_scroller_rounded_rectangle"
        android:layout_marginStart="@dimen/control_space"
        android:layout_marginEnd="@dimen/control_semispace"
        android:layout_alignParentEnd="true"
        app:imgTint="?attr/tcx_textSecondary"/>
</merge>
