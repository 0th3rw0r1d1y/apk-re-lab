<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/partnerContainer"
    android:background="@drawable/caller_id_background_with_radius"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/CallerIdSideMargin"
    android:layout_marginTop="-16dp"
    android:layout_marginRight="@dimen/CallerIdSideMargin"
    app:layout_constraintTop_toBottomOf="@+id/callerIdAdView">
    <ImageView
        android:layout_gravity="start|center_vertical"
        android:id="@+id/partnerLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"/>
    <TextView
        android:textSize="12sp"
        android:layout_gravity="end|center_vertical"
        android:id="@+id/poweredByText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/PoweredByTruecaller"/>
</FrameLayout>
