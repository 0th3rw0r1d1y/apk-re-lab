<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="68dp"
    android:layout_height="80dp">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/indicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/urgent_message_bubble_indicator"
        android:contentDescription="@null"
        app:tint="?attr/tcx_conversationInputBarBackground"/>
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_gravity="center"
        android:id="@+id/progressIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorColor="?attr/tcx_brandBackgroundBlue"
        app:indicatorDirectionCircular="counterclockwise"
        app:indicatorSize="55dp"
        app:trackColor="?attr/tcx_messageUrgentProgressTrackColor"
        app:trackThickness="2dp"/>
    <com.truecaller.common.ui.avatar.AvatarXView
        android:layout_gravity="center"
        android:id="@+id/avatarView"
        android:layout_width="52dp"
        android:layout_height="52dp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_gravity="center"
        android:id="@+id/overflowView"
        android:background="@drawable/oval"
        android:visibility="gone"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_tcx_group_24dp"
        android:scaleType="center"
        android:backgroundTint="?attr/tcx_brandBackgroundBlue"/>
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/tcx_backgroundPrimary"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/badgeView"
        android:background="@drawable/flash_bubble_badge"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"/>
</FrameLayout>
