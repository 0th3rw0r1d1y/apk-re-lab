<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/swish_integration_payment_title">
        <ImageView
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_swish"
            android:contentDescription="@null"
            android:layout_marginStart="@dimen/space"
            android:layout_marginEnd="@dimen/space"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:fitsSystemWindows="true"
        android:scrollbars="none"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/sendButtonContainer"
                android:background="?attr/colorAccent"
                android:padding="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <Button
                    android:enabled="false"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/sendButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/swish_integration_input_dialog_button_send"
                    style="@style/Widget.Truecaller.NonAppCompatButton.Action"/>
            </FrameLayout>
            <com.truecaller.common.ui.avatar.AvatarXView
                android:id="@+id/contactPhoto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/doubleSpace"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="18sp"
                android:textColor="?attr/theme_textColorPrimary"
                android:ellipsize="end"
                android:id="@+id/nameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space"
                android:maxLines="1"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="@dimen/doubleSpace"
                android:layout_marginEnd="@dimen/doubleSpace"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contactPhoto"
                app:layout_constraintWidth_default="wrap"/>
            <TextView
                android:textColor="?attr/theme_textColorPrimary"
                android:ellipsize="end"
                android:id="@+id/numberTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginStart="@dimen/doubleSpace"
                android:layout_marginEnd="@dimen/doubleSpace"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameTextView"
                app:layout_constraintWidth_default="wrap"/>
            <EditText
                android:textSize="64sp"
                android:gravity="center"
                android:id="@+id/amountEditText"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/swish_integration_input_dialog_hint_amount"
                android:maxLines="1"
                android:digits="0123456789,"
                android:inputType="numberDecimal"
                app:layout_constraintBottom_toTopOf="@+id/messageEditText"
                app:layout_constraintEnd_toStartOf="@+id/currencyTextView"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/numberTextView"
                app:layout_constraintVertical_bias="0.3"
                app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/theme_textColorPrimary"
                android:id="@+id/currencyTextView"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/swish_integration_currency"
                android:layout_marginStart="4dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/amountEditText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/amountEditText"/>
            <EditText
                android:textSize="18sp"
                android:gravity="center"
                android:id="@+id/messageEditText"
                android:background="@null"
                android:padding="@dimen/doubleSpace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/swish_integration_input_dialog_hint_message"
                android:maxLines="1"
                android:maxLength="50"
                android:inputType="textCapSentences"
                android:paddingStart="@dimen/doubleSpace"
                android:paddingEnd="@dimen/doubleSpace"
                app:layout_constraintBottom_toTopOf="@+id/sendButtonContainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/amountEditText"
                app:layout_constraintWidth_default="wrap"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
