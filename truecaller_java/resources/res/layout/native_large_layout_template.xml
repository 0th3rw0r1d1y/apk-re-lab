<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:layout_width="320dp"
    android:layout_height="100dp">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/ad_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:layout_marginStart="4dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/headline_txt"
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_weight="1"/>
            <FrameLayout
                android:id="@+id/options_view"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_margin="0dp">
            <TextView
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#3a6728"
                android:gravity="center"
                android:id="@+id/ad_attr"
                android:background="@drawable/native_indicator_shape"
                android:padding="0dp"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:text="@string/ad_attr_txt"/>
            <FrameLayout
                android:id="@+id/rating_bar_frame"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginHorizontal="2dp"/>
            <TextView
                android:textSize="11dp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:id="@+id/secondary_txt"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:lines="1"
                android:layout_marginHorizontal="4dp"/>
        </LinearLayout>
        <TextView
            android:textSize="10dp"
            android:ellipsize="end"
            android:id="@+id/body_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_marginEnd="4dp"/>
        <TextView
            android:textSize="10dp"
            android:textColor="#000000"
            android:gravity="center"
            android:id="@+id/cta"
            android:background="@drawable/native_button_shape"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginTop="2dp"
            android:lines="1"
            android:layout_marginHorizontal="4dp"
            android:paddingHorizontal="4dp"
            android:paddingVertical="0dp"/>
    </LinearLayout>
</LinearLayout>
