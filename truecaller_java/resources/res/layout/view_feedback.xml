<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/report"
        android:background="?attr/selectableItemBackground"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <com.truecaller.common.ui.imageview.GoldShineImageView
            android:id="@+id/reportIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="?attr/tcx_avatarBackgroundRed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_tcx_block_24dp"
            app:tint="?attr/tcx_alertBackgroundRed"/>
        <com.truecaller.common.ui.textview.GoldShineTextView
            android:textColor="?attr/tcx_alertBackgroundRed"
            android:id="@+id/reportTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/details_view_feedback_block"
            android:textAllCaps="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/reportIcon"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/StyleX.Text.Subtitle.S2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/dividerSuggestName"
        android:background="?attr/tcx_fillTertiaryBackground"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="56dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/suggestName"
        android:background="?attr/selectableItemBackground"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <com.truecaller.common.ui.imageview.GoldShineImageView
            android:id="@+id/suggestNameIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_suggest_name"/>
        <com.truecaller.common.ui.textview.GoldShineTextView
            android:id="@+id/suggestNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/details_view_feedback_suggest_name"
            android:textAllCaps="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/suggestNameIcon"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/StyleX.Text.Subtitle.S2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/dividerAddComment"
        android:background="?attr/tcx_fillTertiaryBackground"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="56dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/addComment"
        android:background="?attr/selectableItemBackground"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <com.truecaller.common.ui.imageview.GoldShineImageView
            android:id="@+id/addCommentIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_add_comment"/>
        <com.truecaller.common.ui.textview.GoldShineTextView
            android:id="@+id/addCommentTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/details_view_feedback_add_comment"
            android:textAllCaps="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/addCommentIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginTop="8dp"
            style="@style/StyleX.Text.Subtitle.S2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
