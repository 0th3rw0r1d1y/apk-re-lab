<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Debug subscriptions are always used for debug builds. The switch affects only release builds.             \10If 0 set for period, it will be nullified             \10To set introductory prices correctly - all fields should be filled.             \10Introductory Period Cycles - the number of introductory price periods"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
        <Button
            android:id="@+id/resetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save subscriptions"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
        <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
            android:id="@+id/enableSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use debug subscriptions"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            style="@style/StyleX.Switch"/>
        <com.truecaller.premium.util.DebugSubscriptionEditView
            android:id="@+id/monthlyEditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>
        <com.truecaller.premium.util.DebugSubscriptionEditView
            android:id="@+id/quarterlyEditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>
        <com.truecaller.premium.util.DebugSubscriptionEditView
            android:id="@+id/halfYearlyEditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>
        <com.truecaller.premium.util.DebugSubscriptionEditView
            android:id="@+id/yearlyEditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>
        <com.truecaller.premium.util.DebugSubscriptionEditView
            android:id="@+id/welcomeEditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>
        <com.truecaller.premium.util.DebugSubscriptionEditView
            android:id="@+id/goldEditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>
        <com.truecaller.premium.util.DebugSubscriptionEditView
            android:id="@+id/consumableYearlyEditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>
        <com.truecaller.premium.util.DebugSubscriptionEditView
            android:id="@+id/consumableHalfYearlyEditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>
        <com.truecaller.premium.util.DebugSubscriptionEditView
            android:id="@+id/consumableQuarterlyEditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>
        <com.truecaller.premium.util.DebugSubscriptionEditView
            android:id="@+id/consumableMonthlyEditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>
        <com.truecaller.premium.util.DebugSubscriptionEditView
            android:id="@+id/consumableGoldEditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>
    </LinearLayout>
</ScrollView>
