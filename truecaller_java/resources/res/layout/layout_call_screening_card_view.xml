<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:id="@+id/container"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/tcx_textPrimary"
            android:id="@+id/settingsCardTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/settingsCardImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/settingsCardSettingLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/settingsCardSettingLabel"
            app:tint="?attr/tcx_textSecondary"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/tcx_textPrimary_light"
            android:id="@+id/settingsCardSettingLabel"
            android:background="@drawable/bg_assistant_card_setting_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginStart="12dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            app:layout_constraintStart_toEndOf="@+id/settingsCardImageView"
            app:layout_constraintTop_toBottomOf="@+id/settingsCardTitle"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/tcx_textSecondary"
            android:id="@+id/settingsCardSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settingsCardSettingLabel"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
