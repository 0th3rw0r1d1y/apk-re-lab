<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_call_recording_details_error_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingVertical="16dp">
    <TextView
        android:textColor="?attr/tcx_textPrimary"
        android:id="@+id/call_recording_summary_error_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="4dp"
        app:drawableStartCompat="@drawable/ic_call_recording_details_error"
        style="@style/StyleX.Text.Body.B1"/>
    <TextView
        android:textColor="?attr/tcx_textSecondary"
        android:id="@+id/call_recording_summary_error_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        style="@style/StyleX.Text.Caption"/>
</LinearLayout>
