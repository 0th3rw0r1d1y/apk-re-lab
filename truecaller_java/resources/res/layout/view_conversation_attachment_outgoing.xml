<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_bubble"
    android:paddingBottom="@dimen/space"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/viewForwardedContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <include
            android:id="@+id/viewForwarded"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space"
            layout="@layout/forwarded_message_label_layout"/>
    </FrameLayout>
    <com.truecaller.messaging.conversation.MessageSnippetView
        android:id="@+id/viewReplySnippet"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewForwardedContainer"
        app:messageType="typeOutgoing"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon"
        android:background="@drawable/white_circle_bg"
        android:layout_width="@dimen/message_attachment_icon_size"
        android:layout_height="@dimen/message_attachment_icon_size"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewReplySnippet"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginStart="@dimen/extraSpace"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@+id/content_bubble"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toBottomOf="@+id/viewReplySnippet"
        style="@style/MessageBubble.Outgoing.Text"/>
    <com.truecaller.ui.view.TintedTextView
        android:textSize="?attr/list_tertiaryTextSize"
        android:id="@+id/type"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/semiSpace"
        android:drawablePadding="@dimen/semiSpace"
        android:layout_marginStart="@dimen/extraSpace"
        app:drawableEndCompat="@drawable/ic_tcx_dot"
        app:drawableTint="?attr/tc_color_chatSubtitleBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toBottomOf="@+id/title"/>
    <com.truecaller.ui.view.TintedTextView
        android:textSize="?attr/list_tertiaryTextSize"
        android:id="@+id/size"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/semiSpace"
        android:paddingEnd="@dimen/message_horizontal_padding"
        android:layout_marginStart="@dimen/semiSpace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iconOpenInNew"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/type"
        app:layout_constraintTop_toBottomOf="@+id/title"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconOpenInNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_open_in_new_16dp"
        android:scaleType="center"
        android:layout_marginEnd="@dimen/semiSpace"
        app:layout_constraintBottom_toBottomOf="@+id/type"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="?attr/tc_color_chatSubtitleGrey"/>
</androidx.constraintlayout.widget.ConstraintLayout>
