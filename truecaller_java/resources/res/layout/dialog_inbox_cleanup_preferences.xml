<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="start"
    android:orientation="vertical"
    android:padding="@dimen/tripleSpace"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/doubleSpace"
        android:text="@string/inbox_cleanup_delete_otp_title"
        style="@style/StyleX.Text.Headline.H6"/>
    <TextView
        android:gravity="start|center_vertical"
        android:id="@+id/btnDays30"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="@string/inbox_cleanup_30_days"
        android:buttonTint="?attr/tcx_brandBackgroundBlue"
        style="@style/StyleX.Text.Subtitle.S1"/>
    <TextView
        android:gravity="start|center_vertical"
        android:id="@+id/btnDays15"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="@string/inbox_cleanup_15_days"
        android:buttonTint="?attr/tcx_brandBackgroundBlue"
        style="@style/StyleX.Text.Subtitle.S1"/>
    <TextView
        android:gravity="start|center_vertical"
        android:id="@+id/btnDays7"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="@string/inbox_cleanup_7_days"
        android:buttonTint="?attr/tcx_brandBackgroundBlue"
        style="@style/StyleX.Text.Subtitle.S1"/>
    <TextView
        android:gravity="start|center_vertical"
        android:id="@+id/btnDaysNone"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="@string/inbox_cleanup_none"
        android:buttonTint="?attr/tcx_brandBackgroundBlue"
        style="@style/StyleX.Text.Subtitle.S1"/>
    <TextView
        android:gravity="start|center_vertical"
        android:id="@+id/btnAll"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="@string/inbox_cleanup_all"
        android:buttonTint="?attr/tcx_brandBackgroundBlue"
        style="@style/StyleX.Text.Subtitle.S1"/>
</LinearLayout>
