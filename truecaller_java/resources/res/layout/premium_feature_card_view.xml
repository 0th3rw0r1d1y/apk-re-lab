<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp">
    <ImageView
        android:id="@+id/featureIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@null"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/tcx_textSecondary"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/statusContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/newBadge"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_new"
            android:layout_marginEnd="8dp"
            app:tint="?attr/tcx_brandBackgroundBlue"/>
        <TextView
            android:textColor="?attr/tcx_backgroundPrimary"
            android:gravity="center"
            android:id="@+id/notificationCount"
            android:background="@drawable/background_notifications_count"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:minWidth="20dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/StyleX.Text.Caption.Medium"/>
        <ImageView
            android:id="@+id/alertIcon"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_alert_red_24"/>
        <ImageView
            android:id="@+id/lockIcon"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_feature_card_lock"/>
        <ImageView
            android:id="@+id/chevronIcon"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_action_chevron_right"/>
    </LinearLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:id="@+id/textLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/statusContainer"
        app:layout_constraintStart_toEndOf="@+id/featureIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="0dp"
        app:layout_goneMarginStart="0dp">
        <TextView
            android:textColor="?attr/tcx_textPrimary"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:layout_constraintHorizontal_bias="0.5"
            style="@style/StyleX.Text.Subtitle.S2"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/tcx_textSecondary"
            android:id="@+id/description"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/divider"
            app:layout_constraintEnd_toEndOf="@+id/title"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintVertical_bias="0"
            style="@style/StyleX.Text.Caption"/>
        <TextView
            android:textSize="10sp"
            android:textColor="?attr/tcx_alertBackgroundOrange"
            android:id="@+id/requiredPlan"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawablePadding="4dp"
            app:drawableEndCompat="@drawable/ic_plan_required_chevron"
            app:drawableTint="?attr/tcx_alertBackgroundOrange"
            style="@style/StyleX.Text.Overline"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <View
        android:id="@+id/divider"
        android:background="?attr/tc_color_containerFillPentanary"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textLayout"
        app:layout_constraintTop_toBottomOf="@+id/textLayout"/>
</androidx.constraintlayout.widget.ConstraintLayout>
