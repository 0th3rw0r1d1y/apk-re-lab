<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/tcx_backgroundPrimary_light"
    android:padding="@dimen/control_mini_space"
    android:layout_width="match_parent"
    android:layout_height="@dimen/control_ennea_space">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/adIcon"
        android:layout_width="@dimen/ads_native_small_icon_width"
        android:layout_height="@dimen/ads_native_small_icon_height"
        android:layout_margin="@dimen/control_mini_space"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/verticalGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="60dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/adAdvertiserName"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/control_mini_space"
        app:layout_constraintBottom_toTopOf="@+id/adText"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintStart_toEndOf="@+id/verticalGuideLine"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/StyleX.Widget.Truecaller.TextView.AdTitle.Light"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/adTitle"
        android:layout_marginEnd="@dimen/control_double_space"
        app:layout_constraintBottom_toTopOf="@+id/adText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintStart_toEndOf="@+id/adAdvertiserName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/StyleX.Widget.Truecaller.TextView.AdTitle.Light"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/adText"
        android:layout_marginTop="@dimen/control_micro_space"
        android:layout_marginEnd="@dimen/control_space"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/adCtaText"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintStart_toEndOf="@+id/verticalGuideLine"
        app:layout_constraintTop_toBottomOf="@+id/adTitle"
        style="@style/StyleX.Widget.Truecaller.TextView.AdText.Light"/>
    <com.truecaller.ads.ui.CtaButtonX
        android:id="@+id/adCtaText"
        android:layout_marginTop="@dimen/control_mini_space"
        android:layout_marginBottom="@dimen/control_space"
        android:layout_marginEnd="@dimen/control_mini_space"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/adText"
        style="@style/StyleX.Widget.Truecaller.Button.Ad.Compact.Light"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/adOptionsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/control_micro_space"
        android:layout_alignParentEnd="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
