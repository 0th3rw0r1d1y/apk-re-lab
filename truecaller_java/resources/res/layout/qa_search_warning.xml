<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/debugSearchWarningId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:hint="1"
        android:inputType="text"/>
    <EditText
        android:id="@+id/debugSearchWarningTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:hint="Test low pickup rate title"
        android:inputType="text"/>
    <EditText
        android:id="@+id/debugSearchWarningMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:hint="{pickupRate} of users will pick up the call"
        android:inputType="text"/>
    <EditText
        android:id="@+id/debugSearchWarningMessageDisplayState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:hint="Pill initial state (0,1 = hide, 2 = show)"
        android:maxLength="1"
        android:digits="123"
        android:inputType="text"/>
</LinearLayout>
