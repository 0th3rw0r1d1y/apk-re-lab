<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:background="@drawable/bottom_sheet_rounded_corner_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/spam_category_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="68dp">
            <TextView
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="?attr/tcx_textPrimary"
                android:id="@+id/titleChooseSpamCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:letterSpacing="0.03"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.constraintlayout.widget.Group
                android:id="@+id/spamCategoriesVisibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="textViewChooseSpamCategory, spamTypesRadioGroup"/>
            <TextView
                android:ellipsize="end"
                android:id="@+id/textViewChooseSpamCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/blocking_ui_choose_spam_category_label"
                android:maxLines="1"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleChooseSpamCategory"
                style="@style/BlockingFieldLabelTextView"/>
            <RadioGroup
                android:gravity="start"
                android:orientation="horizontal"
                android:id="@+id/spamTypesRadioGroup"
                android:focusableInTouchMode="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:checkedButton="@+id/business"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewChooseSpamCategory">
                <RadioButton
                    android:id="@+id/business"
                    android:text="@string/blocking_ui_suggest_name_company"
                    android:layout_marginEnd="16dp"
                    style="@style/BlockingBusinessPersonRadioButton"/>
                <RadioButton
                    android:id="@+id/person"
                    android:text="@string/blocking_ui_spam_category_private"
                    style="@style/BlockingBusinessPersonRadioButton"/>
            </RadioGroup>
            <View
                android:id="@+id/divider"
                android:background="?attr/tcx_dividerColor"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spamTypesRadioGroup"/>
            <TextView
                android:id="@+id/letUsKnowMoreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/comment_feedback_write_comment_label"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                style="@style/BlockingFieldLabelTextView"/>
            <EditText
                android:ellipsize="end"
                android:id="@+id/suggestNameEditText"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:hint="@string/blocking_ui_call_description_label"
                android:maxLines="1"
                android:inputType="textCapWords"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:importantForAutofill="no"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/letUsKnowMoreTextView"
                app:layout_goneMarginTop="16dp"
                style="@style/BlockingEditText"/>
            <com.truecaller.commentfeedback.ui.ErrorConstraintLayout
                android:id="@+id/writeCommentInputLayout"
                android:background="@drawable/blocking_edit_text_border"
                android:addStatesFromChildren="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:minHeight="88dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/suggestNameEditText">
                <EditText
                    android:gravity="top"
                    android:id="@+id/writeCommentEditText"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/blocking_ui_call_description_label"
                    android:maxLines="1"
                    android:inputType="textNoSuggestions"
                    android:importantForAutofill="no"
                    app:layout_constraintBottom_toTopOf="@+id/bottom_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_weight="1"
                    style="@style/BlockingEditText"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bottom_container"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/writeCommentEditText">
                    <com.truecaller.commentfeedback.ui.ManualDropdownDismissSpinner
                        android:id="@+id/profileNameSpinner"
                        android:background="@null"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:popupBackground="?attr/tcx_spinner_dropdown_bg"
                        android:dropDownWidth="220dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_marginStart="8dp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/textInputCounter"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:popupTheme="@style/StyleX.Spinner.DropDownList"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/selectedProfileContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/textInputCounter"
                        app:layout_constraintStart_toEndOf="@+id/profileNameSpinner"
                        app:layout_constraintTop_toTopOf="parent">
                        <TextView
                            android:ellipsize="end"
                            android:id="@+id/selectedProfileName"
                            android:paddingBottom="1dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            style="@style/BlockingSelectedProfileName"/>
                        <TextView
                            android:ellipsize="end"
                            android:id="@+id/commentVisibility"
                            android:paddingTop="1dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            app:layout_constraintStart_toStartOf="@+id/selectedProfileName"
                            app:layout_constraintTop_toBottomOf="@+id/selectedProfileName"
                            style="@style/BlockingCommentVisibility"/>
                        <ImageView
                            android:id="@+id/commentVisibilityInfoIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/blocking_ic_info"
                            android:scaleType="center"
                            android:contentDescription="@string/blocking_ui_comment_visibility_tooltip"
                            android:layout_marginStart="4dp"
                            app:layout_constraintBottom_toBottomOf="@+id/commentVisibility"
                            app:layout_constraintStart_toEndOf="@+id/commentVisibility"
                            app:layout_constraintTop_toTopOf="@+id/commentVisibility"
                            app:tint="?attr/tcx_textSecondary"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:id="@+id/textInputCounter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.truecaller.commentfeedback.ui.ErrorConstraintLayout>
            <TextView
                android:textSize="10sp"
                android:textColor="?attr/tcx_textTertiary"
                android:id="@+id/commentBoxLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/blocking_ui_spam_categories_info_message"
                android:maxLines="4"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/writeCommentInputLayout"/>
            <TextView
                android:ellipsize="end"
                android:id="@+id/textViewChooseSpamType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/blocking_ui_choose_spam_type_label"
                android:maxLines="1"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/commentBoxLabel"
                app:layout_goneMarginTop="24dp"
                style="@style/BlockingFieldLabelTextView"/>
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/spamCategoryGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewChooseSpamType"
                app:singleSelection="true"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fraudConsent"
                android:background="@drawable/background_fraud_consent"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spamCategoryGroup">
                <CheckBox
                    android:id="@+id/fraudConsentCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textColor="?attr/tcx_textTertiary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/blocking_ui_fraud_feedback_consent"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/fraudConsentCheckBox"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/StyleX.Text.Caption"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/blockButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="68dp">
        <View
            android:background="@drawable/blocking_block_button_scrim"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:backgroundTint="?attr/tcx_backgroundTertiary"/>
        <FrameLayout
            android:background="?attr/tcx_backgroundTertiary"
            android:paddingBottom="16dp"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textColor="@color/blocking_block_button_text_selector"
                android:ellipsize="end"
                android:id="@+id/blockButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/blocking_ui_block"
                android:maxLines="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:elevation="4dp"
                android:backgroundTint="@color/blocking_block_button_background_selector"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeTextType="uniform"
                style="@style/StyleX.Button.Primary.Disableable"/>
        </FrameLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
