<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/message_id_theme_container"
            android:background="@color/fraud_message_id_background_color"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/truecallerLogo"
                android:layout_width="63dp"
                android:layout_height="12dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_truecaller_logo_white"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textColor="@android:color/white"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/headerTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:alpha="0.9"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/truecallerLogo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/truecallerLogo"
                style="@style/StyleX.Text.Caption"/>
            <com.truecaller.ui.view.TintedImageView
                android:id="@+id/closeBtn"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:scaleType="center"
                android:alpha="0.7"
                android:layout_marginEnd="8dp"
                app:imgTint="@color/tcx_textPrimary_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_close_message_id"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="12dp"
                app:layout_constraintBottom_toTopOf="@+id/fraudLoggingMessageTv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/truecallerLogo">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iconIv"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_fraud_message_id"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textColor="@color/tcx_textSecondary_light"
                        android:ellipsize="end"
                        android:id="@+id/fraudSenderLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/message_id_fraud_title"
                        android:maxLines="1"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iconIv"
                        app:layout_constraintTop_toTopOf="@+id/iconIv"
                        style="@style/StyleX.Text.Subtitle.S2"/>
                    <TextView
                        android:textColor="@color/tcx_textSecondary_light"
                        android:ellipsize="end"
                        android:id="@+id/senderIdTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:maxLines="1"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/iconIv"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iconIv"
                        app:layout_constraintTop_toBottomOf="@+id/fraudSenderLabel"
                        style="@style/StyleX.Text.Caption"/>
                    <androidx.constraintlayout.widget.Group
                        android:id="@+id/senderInfoContainer"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:constraint_referenced_ids="iconIv,fraudSenderLabel, senderIdTv"/>
                    <TextView
                        android:textColor="@color/tcx_textSecondary_light"
                        android:ellipsize="end"
                        android:id="@+id/subtitleTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:maxLines="1"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iconIv"
                        style="@style/StyleX.Text.Body.B2"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/actionsContainer"
                        android:background="#eaf4ff"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/subtitleTv">
                        <com.google.android.material.button.MaterialButton
                            android:textSize="12sp"
                            android:textColor="@color/fraud_message_action_text_color"
                            android:id="@+id/primaryAction"
                            android:background="@color/transparent"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:alpha="0.9"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            app:layout_constraintEnd_toStartOf="@+id/divider1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            style="@style/StyleX.Insights.SmartAction.MessageId"/>
                        <com.google.android.material.button.MaterialButton
                            android:textSize="12sp"
                            android:textColor="@color/fraud_message_action_text_color"
                            android:id="@+id/secondaryAction"
                            android:background="@color/transparent"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:alpha="0.9"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/divider1"
                            app:layout_constraintTop_toTopOf="parent"
                            style="@style/StyleX.Insights.SmartAction.MessageId"/>
                        <View
                            android:id="@+id/divider1"
                            android:background="@color/tcx_cta_spam_divider"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:elevation="0dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/secondaryAction"
                            app:layout_constraintStart_toEndOf="@+id/primaryAction"
                            app:layout_constraintTop_toTopOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:textColor="@color/fraud_message_id_logging_message_color"
                android:id="@+id/fraudLoggingMessageTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/info_container"
                style="@style/StyleX.Text.Caption.C1"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.truecaller.ads.ui.AdsContainer
        android:layout_gravity="center"
        android:id="@+id/msgIdAdContainer"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/control_mini_space"
        android:layout_marginStart="@dimen/control_micro_space"
        android:layout_marginEnd="@dimen/control_micro_space"
        app:cardBackgroundColor="@color/tcx_backgroundPrimary_light"
        app:cardCornerRadius="@dimen/control_space"
        app:cardElevation="0dp"
        app:containerMaxHeight="@dimen/ads_container_small_max_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container"
        app:strokeColor="@color/tcx_fillQuarternaryBackground_light"
        app:strokeWidth="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
