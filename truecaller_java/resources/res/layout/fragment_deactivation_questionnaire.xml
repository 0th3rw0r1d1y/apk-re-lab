<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/changed_mind_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/deactivation_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/account_deactivation_questionnaire_title"
                app:layout_constraintBottom_toTopOf="@+id/question_title"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/DeactivationTitle"/>
            <TextView
                android:textColor="?attr/deactivation_question_title"
                android:id="@+id/question_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/account_deactivation_question_title"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toTopOf="@+id/deactivation_questions"
                app:layout_constraintTop_toBottomOf="@+id/deactivation_title"
                style="@style/DeactivationQuestion"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/deactivation_questions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/question_title"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <TextView
        android:id="@+id/changed_mind_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/account_deactivation_button_changed_mind"
        app:layout_constraintBottom_toTopOf="@+id/deactivation_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/ChangedMindButton"/>
    <TextView
        android:enabled="false"
        android:id="@+id/deactivation_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/account_deactivation_button_continue_questionnaire"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/DeactivationButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>
