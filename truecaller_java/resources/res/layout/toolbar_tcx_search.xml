<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/searchContainer"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/tcx_backgroundTertiary"
    app:cardElevation="3dp"
    style="@style/StyleX.Card">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/searchToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_toolbar_height"
        app:contentInsetStart="0dp"
        app:titleTextColor="?attr/tcx_textTertiary">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/closeSearchImageView"
                android:background="?attr/actionBarItemBackground"
                android:layout_width="56dp"
                android:layout_height="0dp"
                android:scaleType="center"
                android:tint="?attr/tcx_textSecondary"
                android:tintMode="src_in"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_tcx_arrow_back"/>
            <com.truecaller.common.ui.EditBase
                android:textColorHint="?attr/tcx_textTertiary"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:id="@+id/searchFieldEditText"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/StrSearchName"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/closeSearchImageView"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/StyleX.Input.ToolbarEditText"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.MaterialToolbar>
</androidx.cardview.widget.CardView>
