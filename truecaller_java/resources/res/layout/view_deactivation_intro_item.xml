<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <CheckBox
        android:id="@+id/deactivation_intro_checkbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:buttonTint="@color/color_deactivation_checkbox"
        app:layout_constraintEnd_toStartOf="@+id/deactivation_intro_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/DeactivationItemTitle"/>
    <TextView
        android:id="@+id/deactivation_intro_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@+id/deactivation_intro_checkbox"
        app:layout_constraintStart_toStartOf="@+id/deactivation_intro_checkbox"
        app:layout_constraintTop_toBottomOf="@+id/deactivation_intro_checkbox"
        style="@style/DeactivationItemSubtitle"/>
    <ImageView
        android:id="@+id/deactivation_intro_icon"
        android:background="@drawable/bg_deactivation_icon_background"
        android:padding="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@null"
        android:layout_marginEnd="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/deactivation_intro_checkbox"/>
</merge>
