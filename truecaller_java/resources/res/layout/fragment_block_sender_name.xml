<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/tcx_backgroundPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/doubleSpace"
        android:layout_marginHorizontal="@dimen/doubleSpace">
        <TextView
            android:textColor="?attr/tcx_textPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/BlockSenderNameDescription"
            style="@style/StyleX.Text.Body.B1"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tripleSpace">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/BlockAddInputSenderName"
                android:imeOptions="actionDone"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">
            <TextView
                android:textColor="?attr/tcx_textTertiary"
                android:id="@+id/max_chars"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/StyleX.Text.Caption"/>
            <TextView
                android:id="@+id/remaining_chars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/StyleX.Text.Caption"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/doubleSpace">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/block_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/acs_block"
                style="@style/StyleX.Button.Primary.Disableable"/>
            <ProgressBar
                android:layout_gravity="center"
                android:id="@+id/block_button_progress"
                android:visibility="gone"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:indeterminate="true"
                android:elevation="2dp"
                android:indeterminateTint="?attr/tcx_backgroundPrimary"/>
        </FrameLayout>
        <include layout="@layout/layout_blocked_list"/>
    </LinearLayout>
</ScrollView>
