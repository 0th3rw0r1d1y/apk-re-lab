<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/toast_with_action_min_height">
        <com.truecaller.videocallerid.ui.videoplayer.AvatarVideoPlayerView
            android:id="@+id/videoAvatarView"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:contentDescription="@null"
            android:layout_marginStart="12dp"
            android:elevation="2dp"
            app:invertVerifiedRingColor="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/messageTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/messageTextView"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/gotItButton"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toEndOf="@+id/videoAvatarView"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/StyleX.Text.Body"/>
        <com.google.android.material.button.MaterialButton
            android:textSize="14sp"
            android:id="@+id/gotItButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/StrGotIt"
            android:layout_marginEnd="8dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/messageTextView"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/StyleX.Button.Small.Action"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
