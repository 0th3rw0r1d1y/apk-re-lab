<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:elevation="4dp">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <com.truecaller.common.ui.EditBase
            android:textColorHint="?attr/tcx_textTertiary"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:id="@+id/edit_text"
            android:background="@null"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/settings_search"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:textDirection="firstStrong"
            android:layout_marginEnd="8dp"
            app:clearIconTint="?attr/tcx_textPrimary"
            style="@style/StyleX.Input.ToolbarEditText"/>
    </com.google.android.material.appbar.MaterialToolbar>
</com.google.android.material.appbar.AppBarLayout>
