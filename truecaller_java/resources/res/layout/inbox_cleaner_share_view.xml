<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/tcx_inboxCleanerStatsBgColor"
    android:layout_width="660dp"
    android:layout_height="660dp">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgStats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/inbox_cleaner_stats_bg"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:topRightRadius="@dimen/doubleSpace"/>
    <View
        android:background="@drawable/inbox_cleaner_stats_shape_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="36sp"
        android:textColor="@color/white"
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/control_hendeca_space"
        android:text="@string/inbox_cleanup_share_title"
        android:textAllCaps="true"
        android:layout_marginStart="@dimen/tripleSpace"
        android:layout_marginEnd="@dimen/space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/StyleX.Text.Headline.H6"/>
    <TextView
        android:textColor="@color/white"
        android:id="@+id/txtSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/semiSpace"
        app:layout_constraintStart_toStartOf="@+id/txtTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        style="@style/StyleX.Text.Headline.H6"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bgOtp"
        android:background="@drawable/background_tcx_inbox_cleanup_circle"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginTop="122dp"
        android:scaleType="center"
        app:layout_constraintEnd_toStartOf="@+id/bgPromotional"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSubtitle"
        app:srcCompat="@drawable/ic_inbox_cleanup_share_otp"
        app:tint="?attr/tcx_brandBackgroundBlue"/>
    <TextView
        android:textSize="56sp"
        android:id="@+id/txtOtpCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/bgOtp"
        app:layout_constraintStart_toStartOf="@+id/bgOtp"
        app:layout_constraintTop_toBottomOf="@+id/bgOtp"
        style="@style/StyleX.Text.Headline.H6"/>
    <TextView
        android:textSize="20sp"
        android:textColor="?attr/tcx_textSecondary"
        android:gravity="center"
        android:id="@+id/txtOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/semiSpace"
        android:layout_marginBottom="@dimen/space"
        android:maxWidth="170dp"
        app:layout_constraintEnd_toEndOf="@+id/bgOtp"
        app:layout_constraintStart_toStartOf="@+id/bgOtp"
        app:layout_constraintTop_toBottomOf="@+id/txtOtpCount"
        style="@style/StyleX.Text.Caption"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bgPromotional"
        android:background="@drawable/background_tcx_inbox_cleanup_circle"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:scaleType="center"
        app:layout_constraintEnd_toStartOf="@+id/bgSpam"
        app:layout_constraintStart_toEndOf="@+id/bgOtp"
        app:layout_constraintTop_toTopOf="@+id/bgOtp"
        app:srcCompat="@drawable/ic_inbox_cleanup_share_promotional"
        app:tint="?attr/tcx_brandBackgroundBlue"/>
    <TextView
        android:textSize="56sp"
        android:id="@+id/txtPromotionalCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/bgPromotional"
        app:layout_constraintStart_toStartOf="@+id/bgPromotional"
        app:layout_constraintTop_toBottomOf="@+id/bgPromotional"
        style="@style/StyleX.Text.Headline.H6"/>
    <TextView
        android:textSize="20sp"
        android:textColor="?attr/tcx_textSecondary"
        android:gravity="center"
        android:id="@+id/txtPromotional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/semiSpace"
        android:layout_marginBottom="@dimen/space"
        android:maxWidth="170dp"
        app:layout_constraintEnd_toEndOf="@+id/bgPromotional"
        app:layout_constraintStart_toStartOf="@+id/bgPromotional"
        app:layout_constraintTop_toBottomOf="@+id/txtPromotionalCount"
        style="@style/StyleX.Text.Caption"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bgSpam"
        android:background="@drawable/background_tcx_inbox_cleanup_circle"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bgPromotional"
        app:layout_constraintTop_toTopOf="@+id/bgOtp"
        app:srcCompat="@drawable/ic_inbox_cleanup_share_spam"
        app:tint="?attr/tcx_brandBackgroundBlue"/>
    <TextView
        android:textSize="56sp"
        android:id="@+id/txtSpamCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/bgSpam"
        app:layout_constraintStart_toStartOf="@+id/bgSpam"
        app:layout_constraintTop_toBottomOf="@+id/bgSpam"
        style="@style/StyleX.Text.Headline.H6"/>
    <TextView
        android:textSize="20sp"
        android:textColor="?attr/tcx_textSecondary"
        android:gravity="center"
        android:id="@+id/txtSpam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/semiSpace"
        android:layout_marginBottom="@dimen/space"
        android:maxWidth="170dp"
        app:layout_constraintEnd_toEndOf="@+id/bgSpam"
        app:layout_constraintStart_toStartOf="@+id/bgSpam"
        app:layout_constraintTop_toBottomOf="@+id/txtSpamCount"
        style="@style/StyleX.Text.Caption"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupPromotional"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="bgPromotional,txtPromotionalCount,txtPromotional"/>
    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/inbox_cleanup_share_bottom_text"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/logo"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/StyleX.Text.Subtitle.S2"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text"
        app:srcCompat="@drawable/ic_truecaller_logo_blue"
        app:tint="?attr/tcx_brandBackgroundBlue"/>
</androidx.constraintlayout.widget.ConstraintLayout>
