<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="?attr/tcx_conversationBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/phone_number_popup_anchor"
            android:layout_width="220dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ViewStub
            android:id="@+id/empty_stub"
            android:layout="@layout/view_conversation_empty"
            android:inflatedId="@+id/empty_state_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/bottom_barrier"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:background="@null"
            android:paddingTop="10dp"
            android:paddingBottom="@dimen/semiSpace"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toTopOf="@+id/bottom_barrier"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otps_banner_stub"/>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/bottom_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top"
            app:constraint_referenced_ids="bottom_bar, input_action_bar, input_bar_shadow, textBottom"/>
        <ViewStub
            android:id="@+id/banner_stub"
            android:layout="@layout/view_conversation_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/recycler_view"/>
        <ViewStub
            android:id="@+id/otps_banner_stub"
            android:layout="@layout/view_conversation_otps_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"/>
        <include
            app:layout_constraintTop_toTopOf="parent"
            layout="@layout/fragment_conversation_toolbar"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/pagedown"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space"
            android:src="@drawable/ic_scroll_to_bottom"
            android:scaleType="center"
            android:layout_marginEnd="@dimen/doubleSpace"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/recycler_view"
            app:layout_constraintEnd_toEndOf="@+id/recycler_view"
            style="@style/StyleX.Button.FAB.Secondary"/>
        <TextView
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@+id/pageDownCount"
            android:tag="0"
            android:background="@drawable/bg_message_count"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/semiSpace"
            android:includeFontPadding="false"
            android:translationX="12dp"
            android:translationY="12dp"
            android:paddingStart="@dimen/semiSpace"
            android:paddingEnd="@dimen/semiSpace"
            android:elevation="6dp"
            app:layout_constraintBottom_toTopOf="@+id/pagedown"
            app:layout_constraintEnd_toEndOf="@+id/pagedown"
            app:layout_constraintStart_toStartOf="@+id/pagedown"
            style="@style/StyleX.Text.Caption"/>
        <TextView
            android:textAppearance="@style/StyleX.Text.Caption"
            android:textColor="?attr/tcx_textTertiary"
            android:gravity="center"
            android:id="@+id/textBottom"
            android:background="?attr/tcx_conversationBackgroundColor"
            android:padding="16dp"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:text="@string/ConversationReplyNotSupported"
            android:layout_alignWithParentIfMissing="true"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.truecaller.messaging.conversation.voice_notes.RecordToastView
            android:id="@+id/recordingToast"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/doubleSpace"
            android:layout_centerHorizontal="true"
            app:layout_constraintBottom_toTopOf="@+id/bottom_barrier"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ViewStub
            android:id="@+id/urgent_message_actions_stub"
            android:layout="@layout/view_conversation_urgent_messages_actions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/bottom_barrier"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/input_action_bar"
            android:background="@drawable/bg_conv_input_actions_bar"
            android:padding="@dimen/spacing_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/bottom_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_gravity="center"
                android:id="@+id/quickActionsRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space"
                android:overScrollMode="never"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/trueHelperBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top"
            app:constraint_referenced_ids="buttonTrueHelperPremium"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_container"/>
        <ViewStub
            android:id="@+id/viewStubTrueHelperPremium"
            android:layout="@layout/layout_conversation_true_helper_premium"
            android:inflatedId="@+id/buttonTrueHelperPremium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/input_bar_shadow"
            android:layout_width="match_parent"
            android:layout_height="?attr/theme_dropShadowTopHeight"
            android:src="?attr/theme_dropShadowTopBackground"
            android:contentDescription="@null"
            android:alpha="0.3"
            app:layout_constraintBottom_toTopOf="@+id/bottom_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ViewStub
            android:id="@+id/viewStubBottomBar"
            android:layout="@layout/layout_conversation_input_bar_default"
            android:inflatedId="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.truecaller.common.ui.fab.FloatingActionButton
            android:id="@+id/fake_send"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignWithParentIfMissing="true"
            android:elevation="@dimen/conversation_input_bar_elevation"
            app:elevation="6dp"
            app:fabMenuItemLayout="@layout/fab_submenu_item_conversation_send_type_mini"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/actionModeShadow"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="?attr/theme_dropShadowTopHeight"
            android:src="?attr/theme_dropShadowTopBackground"
            android:contentDescription="@null"
            android:alpha="0.3"
            app:layout_constraintBottom_toTopOf="@+id/actionModeContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/actionModeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <ViewStub
                android:id="@+id/reaction_bar_stub"
                android:layout="@layout/view_reaction_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.truecaller.messaging.conversation.ConversationActionModeView
                android:id="@+id/actionMode"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/conversation_input_actions_bar_height"
                app:layout_constraintStart_toStartOf="parent"/>
        </LinearLayout>
        <include
            android:id="@+id/hard_upgrade_prompt_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            layout="@layout/conversation_hard_upgrade_prompt"/>
        <com.truecaller.messaging.conversation.emoji.QuickAnimatedEmojiView
            android:id="@+id/quick_anim_emoji_view"
            android:background="?attr/tcx_conversationBackgroundColor"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="@dimen/poke_emoji_elevation"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <FrameLayout
            android:id="@+id/bottom_navigation_container"
            android:background="?attr/tcx_backgroundPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
