<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.truecaller.ads.ui.AdsContainer
        android:layout_gravity="center"
        android:id="@+id/adsMvpContainer"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/tcx_backgroundPrimary"
        app:cardCornerRadius="@dimen/control_space"
        app:cardElevation="0dp"
        app:contentPadding="1dp"/>
    <FrameLayout
        android:id="@+id/adPlaceHolder"
        android:background="?attr/tcx_backgroundPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</FrameLayout>
