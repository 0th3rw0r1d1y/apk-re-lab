<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/change_number_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="18dp">
            <TextView
                android:id="@+id/deactivation_intro_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/account_deactivation_intro_title"
                android:layout_marginStart="6dp"
                style="@style/DeactivationIntroTitle"/>
            <TextView
                android:id="@+id/deactivation_intro_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/account_deactivation_intro_subtitle"
                android:layout_marginStart="6dp"
                style="@style/DeactivationSubtitle"/>
            <com.truecaller.deactivation.impl.ui.intro.DeactivationIntroItemView
                android:id="@+id/deactivation_intro_caller_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:checkboxText="@string/account_deactivation_intro_caller_id_title"
                app:iconSrc="@drawable/ic_deactivation_caller_id"
                app:subtitleText="@string/account_deactivation_intro_caller_id_subtitle"/>
            <com.truecaller.deactivation.impl.ui.intro.DeactivationIntroItemView
                android:id="@+id/deactivation_intro_spam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:checkboxText="@string/account_deactivation_intro_spam_protection_title"
                app:iconSrc="@drawable/ic_deactivation_spam"
                app:subtitleText="@string/account_deactivation_intro_spam_protection_subtitle"/>
            <com.truecaller.deactivation.impl.ui.intro.DeactivationIntroItemView
                android:id="@+id/deactivation_intro_truecaller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:checkboxText="@string/account_deactivation_intro_truecaller_title"
                app:iconSrc="@drawable/ic_truecaller_account"
                app:subtitleText="@string/account_deactivation_intro_truecaller_subtitle"/>
            <com.truecaller.deactivation.impl.ui.intro.DeactivationIntroItemView
                android:id="@+id/deactivation_intro_assistant"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:checkboxText="@string/account_deactivation_intro_assistant_title"
                app:iconSrc="@drawable/ic_assistant"
                app:subtitleText="@string/account_deactivation_intro_assistant_subtitle"/>
            <com.truecaller.deactivation.impl.ui.intro.DeactivationIntroItemView
                android:id="@+id/deactivation_intro_voicemail"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:checkboxText="@string/account_deactivation_voicemail_title"
                app:iconSrc="@drawable/ic_voice_mail"
                app:subtitleText="@string/account_deactivation_deactivation_voicemail_subtitle"/>
            <include layout="@layout/deactivation_intro_warning"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <TextView
        android:id="@+id/change_number_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/deactivation_continue_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/DeactivationChangeNumberButton"/>
    <TextView
        android:id="@+id/deactivation_continue_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/account_deactivation_button_continue_intro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/DeactivationButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>
