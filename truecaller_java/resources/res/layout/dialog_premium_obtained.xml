<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_premium_obtained"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="232dp">
    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_premium_obtained"
        android:contentDescription="@null"
        android:layout_marginStart="@dimen/control_space"
        android:layout_marginEnd="@dimen/control_space"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Truecaller.ListItem.Primary"
        android:textSize="18sp"
        android:gravity="center"
        android:id="@+id/dialogTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/control_extraspace"
        android:layout_marginStart="@dimen/control_doublespace"
        android:layout_marginEnd="@dimen/control_doublespace"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Truecaller.ListItem.Secondary"
        android:textSize="14sp"
        android:gravity="center"
        android:id="@+id/dialogText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/control_space"
        android:layout_marginStart="@dimen/control_doublespace"
        android:layout_marginEnd="@dimen/control_doublespace"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogTitle"/>
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/theme_accentColor"
        android:id="@+id/gotItButton"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/PremiumObtainedDialogGotIt"
        android:textAllCaps="true"
        android:fontFamily="@font/roboto_medium"
        android:paddingStart="@dimen/control_extraspace"
        android:paddingEnd="@dimen/control_triplespace"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogText"/>
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/theme_accentColor"
        android:id="@+id/shareButton"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/PremiumObtainedDialogShare"
        android:textAllCaps="true"
        android:fontFamily="@font/roboto_medium"
        android:paddingStart="@dimen/control_triplespace"
        android:paddingEnd="@dimen/control_extraspace"
        app:layout_constraintRight_toLeftOf="@+id/gotItButton"
        app:layout_constraintTop_toBottomOf="@+id/dialogText"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
