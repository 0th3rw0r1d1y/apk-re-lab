<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="20sp"
        android:textColor="?attr/tcx_textPrimary"
        android:id="@+id/editTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/StrEdit"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:boxStrokeErrorColor="?attr/tcx_alertBackgroundRed"
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTitle"
        style="@style/StyleX.Input.Outline">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:textAppearance="@style/StyleX.Text.CharacterCount"
        android:textColor="?attr/tcx_alertBackgroundRed"
        android:id="@+id/inputErrorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/inputTextInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/inputTextInputLayout"/>
    <TextView
        android:textAppearance="@style/StyleX.Text.CharacterCount"
        android:id="@+id/inputCharacterCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/inputTextInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/inputTextInputLayout"/>
    <com.google.android.material.button.MaterialButton
        android:enabled="false"
        android:textSize="14sp"
        android:id="@+id/doneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/StrDone"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputCharacterCount"
        style="@style/StyleX.Button.Small.Dialog"/>
    <com.google.android.material.button.MaterialButton
        android:textSize="14sp"
        android:id="@+id/dismissButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/StrDismiss"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/doneButton"
        app:layout_constraintEnd_toStartOf="@+id/doneButton"
        style="@style/StyleX.Button.Small.Dialog"/>
</androidx.constraintlayout.widget.ConstraintLayout>
