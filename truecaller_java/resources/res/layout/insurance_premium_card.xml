<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.truecaller.premium.ui.subscription.tier.RoundedCornerImageView
        android:layout_width="0dp"
        android:layout_height="228dp"
        android:src="@drawable/insurance_details_card_bg"
        android:scaleType="centerCrop"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/insurance_card_truecaller_logo"
        android:importantForAccessibility="no"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/insuranceCardProviderLogoIv"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitStart"
        android:importantForAccessibility="no"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/PremiumInsuranceCardStatus"
        android:alpha="0.8"
        app:layout_constraintBottom_toTopOf="@+id/insuranceStatus"
        app:layout_constraintStart_toStartOf="@+id/insuranceStatus"
        style="@style/TcStyle.Text.Regular.12"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/white"
        android:id="@+id/insuranceStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/TcStyle.Text.Poppins.SemiBold"/>
</androidx.constraintlayout.widget.ConstraintLayout>
