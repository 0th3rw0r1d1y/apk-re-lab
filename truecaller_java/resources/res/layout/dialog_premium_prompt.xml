<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_premium_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/image"
            android:paddingTop="32dp"
            android:paddingBottom="16dp"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/tcx_familySharingIcon"
            android:contentDescription="@null"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/addMemberGroup"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <TextView
                android:gravity="center"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/PremiumAddFamilyMemberTitle"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/StyleX.Text.Headline.H6"/>
            <TextView
                android:textColor="?attr/tcx_textSecondary"
                android:gravity="center"
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/PremiumAddFamilyMemberSubtitle"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/StyleX.Text.Body.B2"/>
            <TextView
                android:textColor="?attr/tcx_textTertiary"
                android:gravity="center"
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:text="@string/PremiumAddFamilyMemberNote"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                style="@style/StyleX.Text.Caption"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/actionsGroup"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="3dp"/>
    </LinearLayout>
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"/>
</FrameLayout>
