<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.truecaller.common.ui.ShineView
        android:id="@+id/gold_shine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shineCornerRadius="@dimen/caller_id_tcx_corner_radius"/>
    <com.truecaller.common.ui.avatar.AvatarXView
        android:id="@+id/caller_id_photo"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textColor="?attr/tcx_goldTextPrimary"
        android:id="@+id/caller_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        app:layout_constraintBottom_toTopOf="@+id/caller_id_subtitle"
        app:layout_constraintStart_toEndOf="@+id/caller_id_photo"
        app:layout_constraintTop_toTopOf="@+id/caller_id_photo"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/CallerIdTcx.Text.Header"/>
    <TextView
        android:textColor="?attr/tcx_goldTextPrimary"
        android:ellipsize="end"
        android:id="@+id/caller_id_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/caller_id_photo"
        app:layout_constraintStart_toStartOf="@+id/caller_id_title"
        app:layout_constraintTop_toBottomOf="@+id/caller_id_title"
        style="@style/CallerIdTcx.Text.InfoLine"/>
    <View
        android:id="@+id/gold_divider"
        android:background="?attr/tcx_goldDivider"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="11dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/caller_id_photo"/>
    <TextView
        android:textColor="?attr/tcx_goldTextPrimary"
        android:layout_gravity="center_vertical"
        android:id="@+id/caller_id_number_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.5dp"
        android:singleLine="true"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gold_divider"
        style="@style/CallerIdTcx.Text.Number"/>
    <TextView
        android:textColor="?attr/tcx_goldTextSecondary"
        android:id="@+id/caller_id_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:singleLine="true"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/caller_id_number_type"
        style="@style/CallerIdTcx.Text.NumberExtraInfo"/>
    <ImageView
        android:id="@+id/gold_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:contentDescription="@null"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="?attr/tcx_goldTextPrimary"/>
</merge>
