<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settingsFlash"
    style="@style/Widget.Truecaller.CardView">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/feature_container"
        android:background="?attr/selectableItemBackground"
        android:paddingBottom="@dimen/control_doublespace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
            android:textStyle="bold"
            android:id="@+id/feature_item_toggle"
            android:paddingBottom="0dp"
            style="@style/Widget.Truecaller.Switch.Settings"/>
        <TextView
            android:id="@+id/feature_item_description"
            style="@style/Widget.Truecaller.TextView.SettingsDescription"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
