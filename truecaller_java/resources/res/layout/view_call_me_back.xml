<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/tc_logo"
        android:layout_width="290dp"
        android:layout_height="10dp"
        android:layout_marginBottom="@dimen/control_semispace"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        android:contentDescription="@string/AppName"
        app:srcCompat="@drawable/ic_truecaller_logo_white"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/main_container"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/theme_cardColor">
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="@dimen/control_doublespace"
            android:paddingBottom="@dimen/control_doublespace"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.truecaller.common.ui.avatar.AvatarXView
                android:layout_gravity="center_horizontal"
                android:id="@+id/avatar"
                android:clickable="false"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="@dimen/control_extraspace"/>
            <TextView
                android:textSize="18sp"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/control_quadspace"
                android:layout_marginRight="@dimen/control_quadspace"
                android:fontFamily="sans-serif-medium"
                style="@style/Widget.Truecaller.Title"/>
            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/control_doublespace"
                android:layout_marginRight="@dimen/control_doublespace"
                style="@style/Widget.Truecaller.Subtitle"/>
            <TextView
                android:textColor="@android:color/white"
                android:gravity="center"
                android:id="@+id/ask_call_back_button"
                android:background="?attr/callmeback_buttonBackground"
                android:paddingLeft="@dimen/control_space"
                android:paddingRight="@dimen/control_space"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="@dimen/control_quadspace"
                android:layout_marginTop="@dimen/control_doublespace"
                android:layout_marginRight="@dimen/control_quadspace"
                android:text="@string/CallMeBackAskContactToCallBack"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium"/>
            <TextView
                android:textColor="?attr/theme_accentColor"
                android:gravity="center"
                android:id="@+id/call_button_borderless"
                android:background="?attr/callmeback_buttonNoFill"
                android:paddingLeft="@dimen/control_space"
                android:paddingRight="@dimen/control_space"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="@dimen/control_quadspace"
                android:layout_marginTop="@dimen/control_space"
                android:layout_marginRight="@dimen/control_quadspace"
                android:layout_marginBottom="@dimen/control_space"
                android:text="@string/CallMeBackCallAnyway"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
