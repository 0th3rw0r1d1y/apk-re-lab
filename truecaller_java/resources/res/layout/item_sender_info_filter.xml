<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/senderTv"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/StyleX.Text.Body.B1"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/textCategoryContainer"
        android:background="@drawable/rounded_update_tag_background"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/senderTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/senderTv">
        <TextView
            android:textStyle="bold"
            android:textColor="?attr/tcx_textSecondary"
            android:layout_gravity="center"
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            style="@style/StyleX.Text.Caption"/>
    </LinearLayout>
    <TextView
        android:id="@+id/grammersTv"
        android:paddingBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="0dp"
        app:layout_constraintStart_toStartOf="@+id/senderTv"
        app:layout_constraintTop_toBottomOf="@+id/senderTv"/>
</androidx.constraintlayout.widget.ConstraintLayout>
