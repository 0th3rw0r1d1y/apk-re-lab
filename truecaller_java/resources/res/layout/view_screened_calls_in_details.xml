<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/avatarView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_assistant"
        android:contentDescription="@null"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/tc_color_alertFillBlue"/>
    <TextView
        android:textColor="?attr/tcx_textSecondary"
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/CallAssistantScreenedCallsInDetails"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/avatarView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avatarView"
        app:layout_constraintTop_toTopOf="@+id/avatarView"
        style="@style/StyleX.Text.Subtitle.S2"/>
    <com.truecaller.call_assistant.core.detailsview.ScreenedCallsInDetailsItemView
        android:id="@+id/firstCallView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/avatarView"/>
    <View
        android:id="@+id/callDivider"
        android:background="?attr/tcx_fillTertiaryBackground"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/firstCallView"/>
    <com.truecaller.call_assistant.core.detailsview.ScreenedCallsInDetailsItemView
        android:id="@+id/secondCallView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/callDivider"/>
    <View
        android:id="@+id/buttonDivider"
        android:background="?attr/tcx_fillTertiaryBackground"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/secondCallView"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/viewAllButton"
        android:text="@string/details_view_title_view_all_comments"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDivider"
        style="@style/DetailsViewButton.TextButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>
