<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/tcx_emojiBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:background="?attr/tcx_emojiTabsBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            app:tabBackground="@null"
            app:tabIconTint="@color/emoji_tab_icon"
            app:tabIndicatorHeight="0dp"
            app:tabRippleColor="?attr/tcx_buttonRippleColor"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/backspaceButton"
            android:background="?attr/selectableItemBackground"
            android:layout_width="42dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_baseline_backspace_24"
            android:tint="?attr/tcx_emojiInactiveTabColor"
            android:contentDescription="@null"
            android:tintMode="src_in"/>
    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:background="?attr/emojiDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
