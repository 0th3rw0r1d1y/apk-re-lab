<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:id="@+id/contentContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/iconContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="top"
            android:id="@+id/primaryIcon"
            android:layout_width="@dimen/smart_notificaiton_icon"
            android:layout_height="@dimen/smart_notificaiton_icon"
            android:layout_marginTop="2dp"
            android:scaleType="fitXY"
            android:contentDescription="@null"
            android:layout_marginEnd="8dp"
            app:srcCompat="@drawable/circle_bg_smart_sms"
            app:tint="?attr/tcx_avatarBackgroundBlue"/>
        <ImageView
            android:id="@+id/primarySubIcon"
            android:padding="6dp"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerInside"
            android:layout_alignTop="@+id/primaryIcon"
            android:layout_alignBottom="@+id/primaryIcon"
            android:layout_alignStart="@+id/primaryIcon"
            android:layout_alignEnd="@+id/primaryIcon"
            app:srcCompat="@drawable/ic_bill_infocard"
            app:tint="?attr/tcx_avatarTextBlue"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="4dp">
        <TextView
            android:textColor="@color/notification_subtitle_grey"
            android:ellipsize="end"
            android:id="@+id/statusTitle"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            style="@style/TextAppearance.Material.Notification.Caption"/>
        <TextView
            android:ellipsize="end"
            android:id="@+id/contentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            style="@style/TextAppearance.Material.Notification.Title"/>
        <RelativeLayout
            android:id="@+id/contentTextContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:textColor="@color/notification_subtitle_grey"
                android:id="@+id/contentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/icon"
                style="@style/TextAppearance.Material.Notification.Caption"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp">
        <TextView
            android:layout_gravity="end|center_vertical"
            android:id="@+id/infoRightTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Material.Notification.Content"/>
        <RelativeLayout
            android:layout_gravity="end"
            android:id="@+id/infoRightTextContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/infoRightTextBg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                android:layout_alignTop="@+id/infoRightText"
                android:layout_alignBottom="@+id/infoRightText"
                android:contentDescription="@null"
                android:layout_alignStart="@+id/infoRightText"
                android:layout_alignEnd="@+id/infoRightText"
                app:srcCompat="@drawable/rectangle_bg_rounded_corner_2dp"/>
            <TextView
                android:layout_gravity="end|center_vertical"
                android:id="@+id/infoRightText"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Material.Notification.Caption"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
