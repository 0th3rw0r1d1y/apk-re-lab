<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/assistantChangeVoiceContainerPaddingHorizontal"
        android:paddingVertical="@dimen/assistantChangeVoiceContainerPaddingVertical">
        <ImageView
            android:id="@+id/imageView"
            android:background="@drawable/background_voice_item_rounded_shadow"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="fitXY"
            android:elevation="@dimen/assistantChangeVoiceAvatarElevation"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="16sp"
            android:gravity="center"
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/assistantChangeVoiceTextTitleMarginTop"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
        <TextView
            android:gravity="center"
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/nameText"/>
        <ImageView
            android:id="@+id/playbackIconView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_assistant_playback"
            android:elevation="@dimen/assistantChangeVoiceAvatarElevation"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieView"
            android:visibility="gone"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_marginTop="6dp"
            android:elevation="@dimen/assistantChangeVoiceAvatarElevation"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:lottie_autoPlay="true"
            app:lottie_fileName="?attr/voice_playing_lottie_animation"
            app:lottie_loop="true"/>
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:indeterminate="true"
            android:elevation="@dimen/assistantChangeVoiceAvatarElevation"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
