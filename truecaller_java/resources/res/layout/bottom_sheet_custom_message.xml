<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customMessageScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/customMessageContainer"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20sp"
            android:id="@+id/title"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/StyleX.Text.Subtitle.S1"/>
        <com.truecaller.common.ui.custommessagebottomsheet.CustomTextInputLayoutWithCounter
            android:id="@+id/customTextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_goneMarginTop="0dp"/>
        <TextView
            android:textColor="?attr/tcx_textSecondary"
            android:id="@+id/communityGuidelineText"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customTextInputLayout"
            style="@style/StyleX.Text.Caption"/>
        <androidx.appcompat.widget.AppCompatButton
            android:textSize="14sp"
            android:textColor="?attr/tcx_alertBackgroundRed"
            android:id="@+id/deleteButton"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/StrDelete"
            app:layout_constraintStart_toStartOf="@+id/customTextInputLayout"
            app:layout_constraintTop_toTopOf="@+id/doneButton"
            style="@style/StyleX.Button.Small.Action"/>
        <androidx.appcompat.widget.AppCompatButton
            android:textSize="14sp"
            android:id="@+id/dismissButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/StrDismiss"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/doneButton"
            app:layout_constraintTop_toTopOf="@+id/doneButton"
            style="@style/StyleX.Button.Small.Action"/>
        <androidx.appcompat.widget.AppCompatButton
            android:enabled="false"
            android:textSize="14sp"
            android:textColor="@color/color_bottom_sheet_custom_message_call_color_selector"
            android:id="@+id/doneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/StrDone"
            app:layout_constraintEnd_toEndOf="@+id/customTextInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/communityGuidelineText"
            style="@style/StyleX.Button.Small.Action"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
