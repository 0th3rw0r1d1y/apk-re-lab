<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/toggleThreadContainer"
        android:background="@drawable/background_toggle_thread_option"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/message_spacing"
        android:layout_marginBottom="@dimen/message_spacing"
        android:foreground="@drawable/foreground_toggle_thread_option"
        android:weightSum="1"
        android:minHeight="32dp"
        android:paddingStart="@dimen/extraSpace"
        android:paddingEnd="@dimen/extraSpace"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/toggle_threads_option_icon"
            android:layout_width="@dimen/dimen_16"
            android:layout_height="@dimen/dimen_16"
            android:scaleType="centerInside"
            app:tint="?attr/tcx_textSecondary"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="?attr/tcx_textSecondary"
            android:ellipsize="end"
            android:id="@+id/toggle_threads_option_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/semiSpace"
            style="@style/StyleX.Text.Roboto.Medium.12"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="?attr/tcx_brandBackgroundBlue"
            android:id="@+id/toggle_thread_action_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_view_str_show"
            android:lines="1"
            android:drawablePadding="@dimen/space"
            android:drawableStart="@drawable/history_item_dot"
            android:layout_marginStart="@dimen/space"
            app:drawableTint="?attr/tcx_textSecondary"
            style="@style/StyleX.Text.Roboto.Medium.12"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
