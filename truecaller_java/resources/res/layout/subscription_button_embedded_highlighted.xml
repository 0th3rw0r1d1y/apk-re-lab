<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/ripple_tcx_subscription_button_highlighted"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:textColor="@color/tcx_subscriptionButtonTextHighlighted"
            android:gravity="center_horizontal"
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/StyleX.Text.Subtitle.S2"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/tcx_subscriptionButtonTextHighlighted"
            android:gravity="center"
            android:id="@+id/profit"
            android:background="@drawable/shape_tcx_subscription_button_profit_highlighted"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginStart="8dp"
            style="@style/StyleX.Text.Caption"/>
    </LinearLayout>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/tcx_subscriptionButtonTextHighlighted"
        android:gravity="center"
        android:id="@+id/subTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container"
        android:layout_marginStart="0dp"
        style="@style/StyleX.Text.Caption"/>
</merge>
