<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/tcx_backgroundPrimary"
    app:cardPreventCornerOverlap="false"
    style="@style/StyleX.CardView">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/dismissPrompt"
                android:background="?attr/selectableItemBackground"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="center"
                android:minWidth="24dp"
                android:minHeight="24dp"
                android:contentDescription="@null"
                android:elevation="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_close"
                app:tint="?attr/tcx_textSecondary"/>
            <TextView
                android:textSize="40sp"
                android:id="@+id/EmojiTitlePrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/acs_emoji_nudge_rate_prompt_negative_emoji"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dismissPrompt"
                style="@style/StyleX.Text.Headline.H6"/>
            <TextView
                android:id="@+id/titlePrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/acs_emoji_nudge_rate_prompt_title"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/EmojiTitlePrompt"
                style="@style/StyleX.Text.Headline.H6"/>
            <TextView
                android:textColor="?attr/tcx_textSecondary"
                android:id="@+id/descriptionPrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titlePrompt"
                style="@style/StyleX.Text.Body.B2"/>
            <EditText
                android:gravity="start|top"
                android:id="@+id/editFeedback"
                android:background="@drawable/bg_review_negative_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_min="104dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/descriptionPrompt"
                style="@style/SuggestNameEditText"/>
            <androidx.appcompat.widget.AppCompatButton
                android:textColor="?attr/theme_textColorAccentedControl"
                android:gravity="center"
                android:id="@+id/feedbackSentView"
                android:background="@drawable/bg_review_button_blue_rounded"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/acs_review_negative_feedback_sent"
                android:textAllCaps="false"
                android:drawableEnd="@drawable/ic_check_circle"
                android:paddingEnd="16dp"
                android:backgroundTint="@color/amountGreen"
                android:drawableTint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_min="48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editFeedback"/>
            <androidx.appcompat.widget.AppCompatButton
                android:enabled="false"
                android:textColor="?attr/theme_textColorAccentedControl"
                android:gravity="center"
                android:id="@+id/sendFeedbackButton"
                android:background="@drawable/bg_review_button_blue_rounded"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:textAllCaps="false"
                android:elevation="1dp"
                android:backgroundTint="@color/color_negative_feedback_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_min="48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editFeedback"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>
