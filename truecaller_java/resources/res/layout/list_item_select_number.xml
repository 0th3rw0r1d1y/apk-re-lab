<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <androidx.appcompat.widget.AppCompatTextView
        android:ellipsize="end"
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:drawablePadding="3dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/subtitle"
        app:layout_constraintEnd_toStartOf="@+id/action_main"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_default="wrap"
        style="@style/StyleX.Text.Subtitle.S1.Medium"/>
    <com.truecaller.android.truemoji.widget.EmojiTextView
        android:ellipsize="end"
        android:id="@+id/subtitle"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:singleLine="true"
        android:includeFontPadding="false"
        android:drawablePadding="3dp"
        android:textDirection="anyRtl"
        app:emojiHorizontalPadding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/timestamp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintWidth_default="wrap"
        app:layout_goneMarginStart="0dp"
        style="@style/StyleX.Text.Body.B2"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/timestamp"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/subtitle"
        app:layout_constraintEnd_toStartOf="@+id/action_main"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/subtitle"
        app:layout_constraintTop_toTopOf="@+id/subtitle"
        app:layout_constraintWidth_default="wrap"
        style="@style/StyleX.Text.Body.B2"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/action_main"
        android:background="@drawable/ripple_tcx_list_item"
        android:padding="11dp"
        android:visibility="gone"
        android:layout_width="46dp"
        android:layout_height="72dp"
        android:tint="?attr/tcx_textSecondary"
        android:tintMode="src_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/action_secondary"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:gravity="center"
        android:id="@+id/action_secondary"
        android:background="@drawable/ripple_tcx_list_item"
        android:padding="11dp"
        android:visibility="gone"
        android:layout_width="46dp"
        android:layout_height="72dp"
        android:tint="?attr/tcx_textSecondary"
        android:tintMode="src_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
