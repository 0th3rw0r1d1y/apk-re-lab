<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:background="?attr/tcx_backgroundSecondary"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="@dimen/control_doublespace"
        android:paddingBottom="@dimen/control_doublespace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/control_doublespace"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            app:srcCompat="?attr/tcx_referral_illustration"/>
        <TextView
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/control_doublespace"
            android:paddingStart="@dimen/control_doublespace"
            android:paddingEnd="@dimen/control_doublespace"
            style="@style/StyleX.Text.Headline.H6"/>
        <TextView
            android:textColor="?attr/tcx_textSecondary"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/control_space"
            android:layout_marginBottom="@dimen/quadrupleSpace"
            android:paddingStart="@dimen/control_doublespace"
            android:paddingEnd="@dimen/control_doublespace"
            style="@style/StyleX.Text.Body.B2"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_line"
            android:showDividers="middle"
            android:dividerPadding="@dimen/control_doublespace"
            android:paddingStart="@dimen/control_doublespace"
            android:paddingEnd="@dimen/control_doublespace"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
