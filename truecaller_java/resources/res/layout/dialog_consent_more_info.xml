<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/doubleSpace"
        android:text="@string/ConsentRefreshMoreDialogText"
        style="@style/AdsChoices.TextViewLegalSubtitle"/>
    <Button
        android:gravity="end"
        android:id="@+id/deactivateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ConsentRefreshDialogDeactivate"
        style="@style/Wizard.Button.Borderless"/>
    <Button
        android:gravity="end"
        android:id="@+id/downloadDataButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/SettingsDownloadMyData"
        style="@style/Wizard.Button.Borderless"/>
    <Button
        android:textColor="@color/wizard_button"
        android:gravity="end"
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/global_cancel"
        style="@style/Wizard.Button.Borderless"/>
</LinearLayout>
