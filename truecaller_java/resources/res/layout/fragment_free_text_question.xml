<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="?attr/tcx_textSecondary"
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAllCaps="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/StyleX.Text.Caption.Medium"/>
    <EditText
        android:textColor="?attr/tcx_textPrimary"
        android:textColorHint="?attr/tcx_textTertiary"
        android:id="@+id/answer"
        android:background="@drawable/background_tcx_edit_text_selector"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:maxLines="1"
        android:inputType="textCapSentences"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:autofillHints="name"
        android:importantForAutofill="no"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toStartOf="@+id/btnSubmit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question"
        app:layout_goneMarginBottom="16dp"
        style="@style/StyleX.Input.Outline"/>
    <com.google.android.material.button.MaterialButton
        android:enabled="false"
        android:textSize="12sp"
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textAllCaps="false"
        android:layout_marginEnd="16dp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/answer"
        style="@style/StyleX.Button.Primary.Disableable"/>
    <RadioGroup
        android:orientation="horizontal"
        android:id="@+id/radioGroup"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <RadioButton
            android:textAppearance="@style/StyleX.Text.Body.B2"
            android:ellipsize="end"
            android:layout_gravity="start"
            android:id="@+id/choiceBusiness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/surveys_suggest_name_company"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:autoSizeMaxTextSize="@dimen/max_survey_choice_question_font_size"
            app:autoSizeMinTextSize="@dimen/min_survey_choice_question_font_size"
            app:autoSizeTextType="uniform"
            style="@style/StyleX.RadioButton"/>
        <RadioButton
            android:textAppearance="@style/StyleX.Text.Body.B2"
            android:ellipsize="end"
            android:layout_gravity="start"
            android:id="@+id/choicePerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/surveys_suggest_name_person"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:autoSizeMaxTextSize="@dimen/max_survey_choice_question_font_size"
            app:autoSizeMinTextSize="@dimen/min_survey_choice_question_font_size"
            app:autoSizeTextType="uniform"
            style="@style/StyleX.RadioButton"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>
