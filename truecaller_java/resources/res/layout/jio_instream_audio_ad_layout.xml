<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ProgressBar
        android:id="@+id/audioAdProgressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:gravity="center"
            android:id="@+id/audioAdContainer"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:layout_gravity="start|bottom"
            android:id="@+id/audioAdProgressCounter"
            android:background="#55000000"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="00:00"/>
        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:gravity="center_vertical"
            android:layout_gravity="end|bottom"
            android:id="@+id/skipAdTextView"
            android:background="#55000000"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="3dp"
            android:drawableRight="@drawable/jio_pre_roll_skip"
            android:drawablePadding="3dp"
            android:contentDescription="Skip Ad"/>
    </FrameLayout>
</RelativeLayout>
