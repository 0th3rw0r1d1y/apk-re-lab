<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/avatar"
        android:background="?attr/tcx_avatarBackgroundBlue"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_format_list_bulleted_black_24dp"
        app:tint="?attr/tcx_avatarTextBlue"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="?attr/tcx_textPrimary"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/see_all"
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar"
        style="@style/StyleX.Text.Subtitle.S2"/>
</androidx.constraintlayout.widget.ConstraintLayout>
