<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="?attr/tcx_backgroundPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="320dp"
        android:windowSoftInputMode="adjustPan">
        <TextView
            android:textColor="?attr/tcx_textSecondary"
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Insights LLM Pattern Tester"
            android:textAlignment="center"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            style="@style/StyleX.Text.Headline.H5"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="32dp"
            android:hint="Enter sender id"
            style="@style/StyleX.Input.Outline">
            <com.google.android.material.textfield.TextInputEditText
                android:textColor="?attr/tcx_textPrimary"
                android:id="@+id/senderIdString"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="32dp"
            android:hint="Enter pattern json"
            style="@style/StyleX.Input.Outline">
            <com.google.android.material.textfield.TextInputEditText
                android:textColor="?attr/tcx_textPrimary"
                android:id="@+id/patternString"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="12dp"
            android:layout_marginHorizontal="32dp">
            <com.google.android.material.button.MaterialButton
                android:layout_gravity="center"
                android:id="@+id/saveSenderPatternButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_marginEnd="12dp"
                style="@style/StyleX.Button.Primary"/>
            <com.google.android.material.button.MaterialButton
                android:layout_gravity="center"
                android:id="@+id/deletedSenderPatternButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_weight="1"
                android:textAlignment="center"
                style="@style/StyleX.Button.Primary"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
