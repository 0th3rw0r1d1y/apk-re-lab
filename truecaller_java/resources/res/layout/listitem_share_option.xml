<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="?attr/selectableItemBackground"
    android:paddingTop="@dimen/control_space"
    android:paddingBottom="@dimen/control_space"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/listItemIcon"
        android:layout_width="@dimen/referral_contact_action_dimen_with_edge_margin"
        android:layout_height="@dimen/referral_contact_action_dimen_with_edge_margin"
        android:scaleType="centerInside"
        android:layout_marginEnd="@dimen/control_doublespace"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Truecaller.ListItem.Primary"
        android:textSize="@dimen/text_size_head6"
        android:id="@+id/listItemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif-medium"/>
</LinearLayout>
