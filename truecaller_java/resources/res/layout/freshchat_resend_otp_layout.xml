<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/freshchat_country_code_scroll_divider"
        android:background="@color/freshchat_resend_otp_divider"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:orientation="vertical"
        android:background="?attr/freshchatResendOtpButtonBackground"
        android:duplicateParentState="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:gravity="center"
            android:id="@+id/freshchat_resend_otp_text"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginVertical="12dp"
            style="?attr/freshchatResendOtpDisabledTextStyle"/>
    </RelativeLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
