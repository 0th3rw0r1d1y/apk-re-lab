<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.truecaller.premium.ui.embedded.EmbeddedPurchaseView
        android:id="@+id/premiumButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:embeddedSubsButtonContext="CONTACT_DETAIL_CONTACT_REQ"
        app:embeddedSubsButtonsFallBackText="@string/CallerBadgeDialogGetPremiumToAskForContactDetails"
        app:embeddedSubsButtonsLayout="@layout/layout_private_contact_subscription_buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textColor="?attr/tcx_brandBackgroundBlue"
        android:gravity="center"
        android:id="@+id/viewPremiumOffering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/details_view_contact_view_premium_offering"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        style="@style/StyleX.Text.Button"/>
    <View
        android:id="@+id/view"
        android:background="?attr/tcx_fillTertiaryBackground"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/premiumButtons"/>
</merge>
