<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.truecaller.android.truemoji.widget.EmojiTextView
        android:textSize="@dimen/textExtraSmall"
        android:textColor="?attr/tcx_textSecondary"
        android:gravity="start|center_vertical"
        android:layout_gravity="center"
        android:id="@+id/content_text"
        android:background="@drawable/conversation_header_background"
        android:paddingTop="@dimen/semiSpace"
        android:paddingBottom="@dimen/semiSpace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/message_spacing"
        android:layout_marginBottom="@dimen/message_spacing"
        android:minHeight="24dp"
        android:drawablePadding="@dimen/semiSpace"
        android:drawableStart="@drawable/ic_snippet_group_16dp"
        android:paddingStart="@dimen/space"
        android:paddingEnd="@dimen/space"
        android:layout_marginStart="@dimen/doubleSpace"
        android:layout_marginEnd="@dimen/doubleSpace"
        app:drawableTint="?attr/tcx_brandBackgroundBlue"/>
    <FrameLayout
        android:id="@+id/active_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?attr/selectableItemBackground"/>
</FrameLayout>
