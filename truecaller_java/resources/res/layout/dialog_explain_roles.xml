<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/iconsLayout"
        android:background="?attr/tc_color_containerFillBlue"
        android:padding="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/textSmall"
        android:textColor="?attr/tc_color_textPrimary"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tripleSpace"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="@dimen/tripleSpace"
        android:layout_marginEnd="@dimen/tripleSpace"/>
    <TextView
        android:textSize="@dimen/textSmaller"
        android:textColor="?attr/tc_color_textSecondary"
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space"
        android:layout_marginStart="@dimen/tripleSpace"
        android:layout_marginEnd="@dimen/tripleSpace"/>
</LinearLayout>
