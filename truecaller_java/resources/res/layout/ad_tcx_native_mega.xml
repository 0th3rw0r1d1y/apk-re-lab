<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.gms.ads.nativead.MediaView
        android:id="@+id/adMainMedia"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:maxHeight="@dimen/ads_mega_image_max_height"
        app:layout_constrainedHeight="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/adIcon"
        android:layout_width="@dimen/contact_photo_size"
        android:layout_height="@dimen/contact_photo_size"
        android:layout_marginTop="@dimen/control_double_space"
        android:layout_marginBottom="@dimen/control_double_space"
        android:layout_marginStart="@dimen/control_double_space"
        android:layout_marginEnd="@dimen/control_double_space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adMainMedia"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/adAdvertiserName"
        android:visibility="gone"
        android:layout_marginTop="@dimen/control_space"
        android:layout_marginBottom="@dimen/control_space"
        android:layout_marginStart="@dimen/control_double_space"
        android:layout_marginEnd="@dimen/control_space"
        android:layout_toEndOf="@+id/adIcon"
        app:layout_constraintBottom_toTopOf="@+id/adText"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintStart_toEndOf="@+id/adIcon"
        app:layout_constraintTop_toBottomOf="@+id/adMainMedia"
        style="@style/StyleX.Widget.Truecaller.TextView.AdTitle"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/adTitle"
        android:layout_marginTop="@dimen/control_space"
        android:layout_marginBottom="@dimen/control_space"
        android:layout_marginStart="@dimen/control_double_space"
        android:layout_marginEnd="@dimen/control_space"
        app:layout_constraintBottom_toTopOf="@+id/adText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintStart_toEndOf="@+id/adAdvertiserName"
        app:layout_constraintTop_toBottomOf="@+id/adMainMedia"
        style="@style/StyleX.Widget.Truecaller.TextView.AdTitle"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/adText"
        android:layout_marginBottom="@dimen/control_space"
        android:layout_marginStart="@dimen/control_double_space"
        android:layout_marginEnd="@dimen/control_space"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/adCtaText"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintStart_toEndOf="@+id/adIcon"
        app:layout_constraintTop_toBottomOf="@+id/adTitle"
        style="@style/StyleX.Widget.Truecaller.TextView.AdText.Normal"/>
    <com.truecaller.ads.ui.CtaButtonX
        android:id="@+id/adCtaText"
        android:layout_marginBottom="@dimen/control_space"
        android:layout_marginEnd="@dimen/control_double_space"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/StyleX.Widget.Truecaller.Button.Ad.Compact"/>
</androidx.constraintlayout.widget.ConstraintLayout>
