<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="@dimen/ads_full_screen_native_max_height"
    android:minHeight="@dimen/ads_full_screen_native_min_height">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/adFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.gms.ads.nativead.MediaView
            android:id="@+id/adMainMedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/adRouterMainMediaImage"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:contentDescription="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <FrameLayout
            android:id="@+id/adMainMediaFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/ad_native_video_view_frame_large"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/control_space"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="false">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/adIcon"
                    android:layout_width="@dimen/contact_photo_size"
                    android:layout_height="@dimen/contact_photo_size"
                    android:layout_marginTop="@dimen/control_double_space"
                    android:layout_marginBottom="@dimen/control_double_space"
                    android:layout_marginStart="@dimen/control_double_space"
                    android:layout_marginEnd="@dimen/control_double_space"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/adAdvertiserName"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/control_space"
                    android:layout_marginBottom="@dimen/control_space"
                    android:layout_marginStart="@dimen/control_double_space"
                    android:layout_marginEnd="@dimen/control_space"
                    android:layout_toEndOf="@+id/adIcon"
                    app:layout_constraintBottom_toTopOf="@+id/adText"
                    app:layout_constraintHeight_default="wrap"
                    app:layout_constraintStart_toEndOf="@+id/adIcon"
                    style="@style/StyleX.Widget.Truecaller.TextView.AdTitle"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/adTitle"
                    android:layout_marginTop="@dimen/control_space"
                    android:layout_marginBottom="@dimen/control_space"
                    android:layout_marginStart="@dimen/control_double_space"
                    android:layout_marginEnd="@dimen/control_space"
                    app:layout_constraintBottom_toTopOf="@+id/adText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_default="wrap"
                    app:layout_constraintStart_toEndOf="@+id/adAdvertiserName"
                    app:layout_constraintTop_toTopOf="@+id/adIcon"
                    style="@style/StyleX.Widget.Truecaller.TextView.AdTitle"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/adText"
                    android:layout_marginBottom="@dimen/control_space"
                    android:layout_marginStart="@dimen/control_double_space"
                    android:layout_marginEnd="@dimen/control_space"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/adCtaText"
                    app:layout_constraintHeight_default="wrap"
                    app:layout_constraintStart_toEndOf="@+id/adIcon"
                    app:layout_constraintTop_toBottomOf="@+id/adTitle"
                    style="@style/StyleX.Widget.Truecaller.TextView.AdText.Normal"/>
                <com.truecaller.ads.ui.CtaButtonX
                    android:id="@+id/adCtaText"
                    android:layout_marginBottom="@dimen/control_space"
                    android:layout_marginEnd="@dimen/control_double_space"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/StyleX.Widget.Truecaller.Button.Ad.Compact"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/adRouterPartnerLogo"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/control_micro_space"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/adOptionsView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/control_space"
                    android:layout_marginEnd="@dimen/control_double_space"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
