<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/sdk_shape_rounded_corners_bottomsheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    android:backgroundTint="?attr/tc_color_containerFillPrimary"
    style="@style/StyleX.DialogFragment">
    <androidx.core.widget.NestedScrollView
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_weight="1"
        android:fadeScrollbars="false">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/outer_constraint_layout"
            android:padding="@dimen/sdk_common_margin_xl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="?attr/oauth_text_quarternary"
                app:strokeWidth="1dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/inner_constraint_layout"
                    android:padding="@dimen/sdk_common_margin_l"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.truecaller.common.ui.avatar.AvatarXView
                        android:id="@+id/iv_partner"
                        android:layout_width="@dimen/sdk_partner_logo_profile_dialog"
                        android:layout_height="@dimen/sdk_partner_logo_profile_dialog"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="@dimen/sdk_common_text_size_m"
                        android:ellipsize="end"
                        android:id="@+id/tv_partner_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sdk_common_margin_xs"
                        android:maxLines="1"
                        android:layout_marginStart="@dimen/sdk_common_margin_l"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toEndOf="@+id/iv_partner"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_default="wrap"
                        style="@style/StyleOAuthPrimary.Title.T1"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_domain_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sdk_common_margin_xs"
                        android:maxLines="1"
                        android:drawablePadding="@dimen/sdk_common_margin_xs"
                        android:drawableStart="@drawable/ic_language_layer_list"
                        android:layout_marginStart="@dimen/sdk_common_margin_m"
                        android:drawableTint="?attr/oauth_text_secondary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_partner"
                        app:layout_constraintTop_toBottomOf="@+id/tv_partner_name"
                        style="@style/StyleOAuthPrimary.Body"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_email_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sdk_common_margin_xs"
                        android:maxLines="1"
                        android:drawablePadding="@dimen/sdk_common_margin_xs"
                        android:drawableStart="@drawable/ic_email_layer_list"
                        android:layout_marginStart="@dimen/sdk_common_margin_m"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_partner"
                        app:layout_constraintTop_toBottomOf="@+id/tv_domain_description"
                        style="@style/StyleOAuthPrimary.Body"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_scopes_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sdk_common_margin_xl"
                app:layout_constraintTop_toBottomOf="@+id/card_view"
                style="@style/StyleOAuthSecondary.Subtitle.S1"/>
            <androidx.recyclerview.widget.RecyclerView
                android:scrollbarSize="2dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:id="@+id/rv_scopes"
                android:background="@drawable/sdk_shape_rounded_corners_border"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/sdk_common_margin_l"
                android:scrollbarFadeDuration="1000"
                android:scrollbarDefaultDelayBeforeFade="1000"
                android:overScrollMode="ifContentScrolls"
                android:backgroundTint="?attr/tc_color_containerFillPentanary"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constrainedHeight="true"
                app:layout_constraintHeight_max="@dimen/sdk_rv_max_height_portrait"
                app:layout_constraintHeight_min="@dimen/sdk_rv_min_height"
                app:layout_constraintTop_toBottomOf="@+id/tv_scopes_info"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/sdk_common_text_size_s"
                android:id="@+id/tv_eu_terms_privacy"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sdk_common_margin_xl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_scopes"
                style="@style/StyleOAuthTertiary"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_ok"
        android:layout_width="@dimen/sdk_ok_button_width"
        android:layout_height="@dimen/sdk_ok_button_height"
        android:layout_marginTop="@dimen/sdk_common_margin_xl"
        android:layout_marginBottom="@dimen/sdk_common_margin_xl"
        android:text="@string/SdkOk"
        style="@style/StyleOAuthButton.Primary"/>
</LinearLayout>
