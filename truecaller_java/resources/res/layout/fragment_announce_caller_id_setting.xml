<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/announce_caller_id_more_settings_title"
        app:titleTextAppearance="@style/StyleX.Text.Headline.H6"/>
    <View
        android:id="@+id/background"
        android:background="@drawable/background_tcx_rectangle_outline"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/phonebookContactSwitchBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"/>
    <androidx.appcompat.widget.AppCompatRadioButton
        android:enabled="false"
        android:id="@+id/radioAlways"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="22dp"
        android:buttonTint="?attr/tcx_fillPrimaryBackground"
        app:layout_constraintBottom_toTopOf="@+id/radioHeadphones"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="?attr/tcx_textPrimary"
        android:id="@+id/alwaysText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/StrAlways"
        android:layout_marginStart="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/radioAlways"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/radioAlways"
        style="@style/StyleX.Text.Subtitle.S2"/>
    <View
        android:id="@+id/alwaysContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background"/>
    <View
        android:id="@+id/divider"
        android:background="?attr/tcx_fillQuarternaryBackground"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/alwaysText"
        app:layout_constraintTop_toTopOf="@+id/background"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="?attr/tcx_textPrimary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:text="@string/announce_caller_headphones_only"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/radioHeadphones"
        style="@style/StyleX.Text.Subtitle.S2"/>
    <androidx.appcompat.widget.AppCompatRadioButton
        android:enabled="false"
        android:id="@+id/radioHeadphones"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="22dp"
        android:buttonTint="?attr/tcx_fillPrimaryBackground"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/radioAlways"/>
    <View
        android:id="@+id/headphoneContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/divider"/>
    <View
        android:id="@+id/phonebookContactSwitchBackground"
        android:background="@drawable/background_tcx_rectangle_outline"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/infoText"
        app:layout_constraintDimensionRatio="328:65"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="?attr/tcx_textPrimary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/announce_caller_active_for_phonebook_call_switch_title"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/phonebookContactSwitchBackground"
        app:layout_constraintEnd_toStartOf="@+id/switch_active_for_phonebook_contact_only"
        app:layout_constraintStart_toStartOf="@+id/phonebookContactSwitchBackground"
        app:layout_constraintTop_toTopOf="@+id/phonebookContactSwitchBackground"
        style="@style/StyleX.Text.Subtitle.S2"/>
    <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
        android:theme="@style/StyleX.Switch"
        android:id="@+id/switch_active_for_phonebook_contact_only"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/phonebookContactSwitchBackground"
        app:layout_constraintEnd_toEndOf="@+id/phonebookContactSwitchBackground"
        app:layout_constraintTop_toTopOf="@+id/phonebookContactSwitchBackground"
        style="@style/StyleX.Text.Subtitle.S2"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/info"
        app:layout_constraintStart_toStartOf="@+id/phonebookContactSwitchBackground"
        app:layout_constraintTop_toBottomOf="@+id/phonebookContactSwitchBackground"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="?attr/tcx_textPrimary"
        android:id="@+id/infoText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/announce_caller_silent_mode_warning"
        android:includeFontPadding="false"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="@+id/phonebookContactSwitchBackground"
        app:layout_constraintStart_toEndOf="@+id/info"
        app:layout_constraintTop_toBottomOf="@+id/phonebookContactSwitchBackground"
        style="@style/StyleX.Text.Caption"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="?attr/tcx_brandBackgroundBlue"
        android:id="@+id/announceCallerMoreVoiceSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/announce_caller_system_voice_settings"
        android:includeFontPadding="false"
        android:layout_marginStart="24dp"
        app:layout_constraintEnd_toEndOf="@+id/phonebookContactSwitchBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoText"
        style="@style/StyleX.Text.Subtitle.S2"/>
</androidx.constraintlayout.widget.ConstraintLayout>
