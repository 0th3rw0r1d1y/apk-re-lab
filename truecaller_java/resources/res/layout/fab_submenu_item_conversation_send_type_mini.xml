<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="end|center_vertical"
    android:layout_gravity="end|bottom"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="@dimen/space">
    <TextView
        android:gravity="end"
        android:layout_gravity="end|center_vertical"
        android:id="@+id/fab_submenu_item_label"
        android:background="@drawable/fab_menu_tcx_item_background"
        android:paddingLeft="@dimen/space"
        android:paddingTop="@dimen/semiSpace"
        android:paddingRight="@dimen/space"
        android:paddingBottom="@dimen/semiSpace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="260dp"
        android:layout_marginEnd="@dimen/doubleSpace"
        android:elevation="1dp"
        style="@style/StyleX.Text.Body.B2"/>
    <ImageView
        android:id="@+id/fab_submenu_item_icon"
        android:background="@drawable/fab_menu_tcx_circle_background"
        android:padding="@dimen/control_space"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        android:contentDescription="@null"
        android:elevation="1dp"/>
</LinearLayout>
