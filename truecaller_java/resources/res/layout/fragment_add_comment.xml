<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/writeCommentImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_add_comment"
        style="@style/SpamCategoriesProvideMoreInfoImageView"/>
    <TextView
        android:id="@+id/writeCommentTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/comment_feedback_write_comment_title"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/writeCommentImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/writeCommentImageView"
        app:layout_constraintTop_toTopOf="@+id/writeCommentImageView"
        style="@style/SpamCategoriesProvideMoreInfoTextView"/>
    <com.truecaller.commentfeedback.ui.ErrorConstraintLayout
        android:id="@+id/writeCommentInputLayout"
        android:background="@drawable/edit_text_rounded_border"
        android:addStatesFromChildren="true"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/writeCommentTextView">
        <EditText
            android:gravity="top"
            android:id="@+id/writeCommentEditText"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="@string/comment_feedback_spam_categories_provide_more_info_write_comment_hint"
            android:inputType="textNoSuggestions"
            android:textCursorDrawable="@drawable/comment_color_cursor"
            android:importantForAutofill="no"
            app:layout_constraintBottom_toTopOf="@+id/bottom_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1"
            style="@style/SpamCategoriesProvideMoreInfoEditText"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="bottom"
            android:id="@+id/bottom_container"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <com.truecaller.commentfeedback.ui.ManualDropdownDismissSpinner
                android:id="@+id/profileNameSpinner"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:popupBackground="?attr/tcx_spinner_dropdown_bg"
                android:dropDownWidth="220dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:layout_marginStart="16dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintRight_toLeftOf="@+id/textInputCounter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:popupTheme="@style/StyleX.Spinner.DropDownList"/>
            <TextView
                android:id="@+id/textInputCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.truecaller.commentfeedback.ui.ErrorConstraintLayout>
    <TextView
        android:textSize="10sp"
        android:textColor="?attr/tcx_textTertiary"
        android:id="@+id/commentBoxLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/comment_feedback_spam_categories_submit_info_message"
        android:maxLines="4"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toTopOf="@+id/submitCommentButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/writeCommentInputLayout"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/bottomButtonGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"/>
    <TextView
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="?attr/tcx_brandBackgroundBlue"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/cancelCommentButton"
        android:background="@drawable/ripple"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/global_cancel"
        android:maxLines="1"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        app:autoSizeMaxTextSize="14sp"
        app:autoSizeTextType="uniform"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/submitCommentButton"
        app:layout_constraintEnd_toStartOf="@+id/bottomButtonGuideLine"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/submitCommentButton"/>
    <Button
        android:ellipsize="end"
        android:id="@+id/submitCommentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="18dp"
        android:text="@string/global_submit"
        android:maxLines="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        app:autoSizeMaxTextSize="14sp"
        app:autoSizeTextType="uniform"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/bottomButtonGuideLine"
        app:layout_constraintTop_toBottomOf="@+id/commentBoxLabel"
        style="@style/StyleX.Button.Primary.Disableable"/>
</androidx.constraintlayout.widget.ConstraintLayout>
