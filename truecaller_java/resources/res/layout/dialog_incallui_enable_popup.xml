<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/tcx_backgroundPrimary"
    app:cardPreventCornerOverlap="false"
    style="@style/StyleX.CardView">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="312dp">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            app:layout_constraintBottom_toTopOf="@+id/title"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="false"
            app:lottie_fileName="animations/incallui_whats_new.json"
            app:lottie_loop="true"/>
        <ImageView
            android:id="@+id/checkmark"
            android:background="@drawable/background_whatsnew_incallui_checkmark"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="14dp"
            android:contentDescription="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.34"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_whatsnew_incallui_checkmark"/>
        <TextView
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            style="@style/StyleX.Text.Headline.H6"/>
        <TextView
            android:textColor="?attr/tcx_textSecondary"
            android:gravity="center"
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/infoText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/tcx_textTertiary"
            android:gravity="center"
            android:id="@+id/infoText"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:drawableTint="?attr/tcx_textPrimary"
            app:layout_constraintBottom_toTopOf="@+id/negativeButtonDividerTop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subtitle"
            style="@style/StyleX.Text.Caption.C1"/>
        <View
            android:id="@+id/negativeButtonDividerTop"
            android:background="?attr/tcx_fillQuarternaryBackground"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            app:layout_constraintBottom_toTopOf="@+id/negativeButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/infoText"/>
        <Button
            android:textSize="14sp"
            android:textColor="?attr/tcx_textSecondary"
            android:id="@+id/negativeButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintBottom_toTopOf="@+id/negativeButtonDividerBottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/negativeButtonDividerTop"
            style="@style/StyleX.Button.Small.Action"/>
        <View
            android:id="@+id/negativeButtonDividerBottom"
            android:background="?attr/tcx_fillQuarternaryBackground"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toTopOf="@+id/positiveButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/negativeButton"
            app:layout_goneMarginTop="24dp"/>
        <Button
            android:textSize="14sp"
            android:id="@+id/positiveButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/negativeButtonDividerBottom"
            style="@style/StyleX.Button.Small.Action"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
