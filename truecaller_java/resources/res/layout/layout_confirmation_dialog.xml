<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/tc_color_containerFillCustom"
    app:cardPreventCornerOverlap="false"
    style="@style/StyleX.CardView">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/StyleX.Text.Headline.H6"/>
            <TextView
                android:textColor="?attr/tcx_textSecondary"
                android:gravity="center"
                android:id="@+id/subtitle"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/StyleX.Text.Body.B2"/>
            <CheckBox
                android:textSize="16sp"
                android:id="@+id/checkbox"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:checked="true"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:paddingHorizontal="16dp"/>
            <View
                android:id="@+id/negativeButtonDividerTop"
                android:background="?attr/tc_color_containerFillQuarternary"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"/>
            <Button
                android:textSize="14sp"
                android:id="@+id/negativeButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/startup_dialog_tcx_button_height"
                style="@style/StyleX.Button.Small.Action"/>
            <View
                android:id="@+id/negativeButtonDividerBottom"
                android:background="?attr/tc_color_containerFillQuarternary"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <Button
                android:textSize="14sp"
                android:id="@+id/positiveButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/startup_dialog_tcx_button_height"
                style="@style/StyleX.Button.Small.Action"/>
        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>
