<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/adIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/verticalGuideLine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_begin="55dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/adAdvertiserName"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/adTitle"
        app:layout_constraintEnd_toStartOf="@+id/adTitle"
        app:layout_constraintStart_toEndOf="@+id/verticalGuideLine"
        app:layout_constraintTop_toTopOf="@+id/adTitle"
        style="@style/StyleX.Widget.Truecaller.TextView.AdTitle"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:ellipsize="end"
        android:id="@+id/adTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@+id/adCtaText"
        app:layout_constraintStart_toEndOf="@+id/adAdvertiserName"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/StyleX.Widget.Truecaller.TextView.AdTitle"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="12sp"
        android:ellipsize="end"
        android:id="@+id/adText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="2"
        android:lineSpacingExtra="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/adCtaText"
        app:layout_constraintStart_toEndOf="@+id/verticalGuideLine"
        app:layout_constraintTop_toBottomOf="@+id/adTitle"
        style="@style/StyleX.Widget.Truecaller.TextView.AdText.Normal"/>
    <com.truecaller.ads.ui.CtaButtonX
        android:id="@+id/adCtaText"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:minHeight="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="?attr/tc_color_containerFillGreen2"
        app:layout_constraintBottom_toBottomOf="@+id/adText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/adText"
        style="@style/StyleX.Widget.Truecaller.Button.Ad.Compact"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/adPrivacy"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/StyleX.Widget.Truecaller.TextView.AdInfo"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/adRouterPartnerLogo"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        android:maxWidth="60dp"
        android:maxHeight="24dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toStartOf="@+id/adCtaText"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/adOptionsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
