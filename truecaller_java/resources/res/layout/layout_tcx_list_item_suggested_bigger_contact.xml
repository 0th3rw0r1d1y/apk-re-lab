<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:paddingBottom="6dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.truecaller.common.ui.avatar.AvatarXView
        android:id="@+id/avatar"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="16sp"
        android:textColor="?attr/tcx_textPrimary"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/text_contact_name"
        android:clickable="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:maxLines="1"
        android:drawablePadding="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar"
        app:layout_constraintWidth_default="wrap"
        style="@style/StyleX.Text.Subtitle.S2"/>
    <TextView
        android:textSize="12sp"
        android:textColor="?attr/tcx_textSecondary"
        android:ellipsize="end"
        android:id="@+id/text_contact_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:drawablePadding="4dp"
        android:layout_marginStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_contact_name"
        app:layout_constraintWidth_default="wrap"
        style="@style/StyleX.Text.Caption"/>
    <com.truecaller.presence.ui.AvailabilityXView
        android:id="@+id/availability"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationY="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/avatar"
        app:layout_constraintEnd_toEndOf="@+id/avatar"
        app:layout_constraintStart_toStartOf="@+id/avatar"/>
</androidx.constraintlayout.widget.ConstraintLayout>
