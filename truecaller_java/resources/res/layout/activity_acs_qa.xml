<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/tc_color_containerFillPrimary"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:id="@+id/switchContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/hasNameSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Has name"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/hasTransliteratedNameSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Has transliterated name"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/hasAltNameSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Has alt name"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/isBusinessSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Is business"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/isVerifiedBusinessSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Is verified business"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/isSmallBusinessSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Is small business"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/hasJobSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Has job and company"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/hasAvatarSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Has avatar"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/hasTagSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Has tag"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/hasAddressSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Has address"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/isPremiumSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Is premium"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/isGoldSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Is gold"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/isSpamSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Is spammer"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/hasSpamReportsSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Has spam reports"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/isPrioritySwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Is priority"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/isVerifiedSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Is verified"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/useLongText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Use long text"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/showAd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show ad"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/showTimezone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show timezone"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/hasSearchWarnings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Has search warnings"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/hasSearchWarningsMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Has search warnings message"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/hasBusinessCallReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Has business call reason"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/hasCallContext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Has call context"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/isInPhoneBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Is phonebook"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/hasBizmonCallMeBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Business Call me back"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/hasBizmonCallSurvey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Bizmon call survey"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/hasBizmonPortraitVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Business Portrait Video"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/hasBizmonLandscapeVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Business Landscape Video"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/hasBizmonVideoWithAudio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Business Video With Audio"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/isOutgoingCall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Is outgoing call"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/isIncomingCall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Is incoming call"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/showContextCallOnDemandPicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show on demand call reason picker"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/isWhatsAppCall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Is a WhatsApp call"
                style="@style/StyleX.Switch"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show Call Assistant widget"/>
            <Spinner
                android:id="@+id/showCallAssistantWidgetSpinner"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="@dimen/space"
                android:text="Show Call Assistant widget"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/addTcId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="add tc id"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/isManualCallerIdPrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manual caller id prompt"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/isSoftThrottled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Is soft throttled"
                style="@style/StyleX.Switch"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/surveyIdTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/surveyIdEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Survey ID"
                    android:maxLines="1"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/surveyFrequencyTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/surveyFrequencyEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Survey frequency in seconds"
                    android:maxLines="1"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/missedCallCountTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/missedCallCountEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:hint="Number of additional missed calls to add"
                    android:maxLines="1"
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/commentCountTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/commentCountEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Comments count"
                    android:maxLines="1"
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nameSourceTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nameSourceEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name Source"
                    android:maxLines="1"
                    android:inputType="numberDecimal"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/showPopup"
        android:background="@drawable/bg_button_setting_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Show Popup ACS"
        style="@style/StyleX.Button.Small.Primary"/>
    <Button
        android:id="@+id/showFullScreen"
        android:background="@drawable/bg_button_setting_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Show Fullscreen ACS"
        style="@style/StyleX.Button.Small.Primary"/>
</LinearLayout>
