<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="64dp"
    android:paddingEnd="0dp">
    <ImageView
        android:id="@+id/avatarView"
        android:layout_width="@dimen/assistantIncomingCallAvatarHeightWidth"
        android:layout_height="@dimen/assistantIncomingCallAvatarHeightWidth"
        android:contentDescription="@null"
        android:layout_marginEnd="@dimen/assistantIncomingCallAvatarMargin"
        app:layout_constraintBottom_toBottomOf="@+id/bubbleView"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/StyleX.Text.Caption"/>
    <FrameLayout
        android:id="@+id/bubbleView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/avatarView"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/typingView"
            android:visibility="gone"
            android:layout_width="@dimen/assistantIncomingCallChatLottieAnimationWidth"
            android:layout_height="@dimen/assistantIncomingCallChatLottieAnimationHeight"
            android:adjustViewBounds="true"
            android:layout_marginHorizontal="@dimen/assistantIncomingCallChatLottieAnimationMarginHorizontal"
            android:layout_marginVertical="@dimen/assistantIncomingCallChatLottieAnimationMarginVertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="?attr/assistant_typingAnimation"
            app:lottie_repeatCount="-1"/>
        <TextView
            android:textColor="?attr/assistant_onboardingBubbleBlueTitle"
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/assistantIncomingCallChatTextMarginHorizontal"
            android:layout_marginVertical="@dimen/assistantIncomingCallChatTextMarginVertical"
            style="@style/StyleX.Text.Subtitle.S1"/>
    </FrameLayout>
    <TextView
        android:textColor="?attr/conversation_errorColor"
        android:gravity="center_vertical"
        android:id="@+id/errorView"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="@string/CallAssistantAssistantChatNotDelivered"
        android:drawablePadding="4dp"
        android:layout_marginEnd="16dp"
        app:drawableStartCompat="@drawable/ic_error_outline_red_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bubbleView"/>
</androidx.constraintlayout.widget.ConstraintLayout>
