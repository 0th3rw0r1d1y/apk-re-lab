<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/doubleSpace"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space"
        android:text="@string/PasscodeLockCreatedTitle"
        android:drawablePadding="@dimen/space"
        android:layout_marginStart="@dimen/tripleSpace"
        android:layout_marginEnd="@dimen/tripleSpace"
        app:drawableStartCompat="?attr/tcx_passcodeLockCheckedIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/StyleX.Text.Caption.Medium"/>
    <TextView
        android:id="@+id/txtSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/PasscodeLockCreatedSubtitle"
        android:layout_marginStart="@dimen/tripleSpace"
        android:layout_marginEnd="@dimen/tripleSpace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        style="@style/StyleX.Text.Headline.H6"/>
    <TextView
        android:textColor="?attr/tcx_textSecondary"
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space"
        android:text="@string/PasscodeLockCreatedDescription"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@+id/txtSubtitle"
        app:layout_constraintStart_toStartOf="@+id/txtSubtitle"
        app:layout_constraintTop_toBottomOf="@+id/txtSubtitle"
        style="@style/StyleX.Text.Body.B2"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/quadrupleSpace"
        android:text="@string/StrConfirm"
        android:layout_marginEnd="@dimen/doubleSpace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDescription"
        style="@style/StyleX.Button.Primary"/>
    <Button
        android:textSize="@dimen/list_secondary"
        android:id="@+id/btnMaybeLater"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/quadrupleSpace"
        android:text="@string/StrMaybeLater"
        android:layout_marginStart="@dimen/doubleSpace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDescription"
        style="@style/StyleX.Button.Small.Action"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="txtTitle,txtSubtitle,txtDescription,btnConfirm,btnMaybeLater"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_view"
        android:layout_width="0dp"
        android:layout_height="106dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="?attr/setting_up_passcode"
        app:lottie_loop="false"/>
    <TextView
        android:gravity="center"
        android:id="@+id/txtAnimationDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/PasscodeLockSettingUp"
        android:layout_marginStart="@dimen/tripleSpace"
        android:layout_marginEnd="@dimen/tripleSpace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lottie_view"
        style="@style/StyleX.Text.Subtitle.S1.Medium"/>
</androidx.constraintlayout.widget.ConstraintLayout>
