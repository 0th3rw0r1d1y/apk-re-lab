<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/spam_header"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textSize="24sp"
            android:textColor="?attr/tcx_alertBackgroundRed"
            android:id="@+id/title_spam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/details_view_pay_high_risk_title"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@drawable/ic_high_risk_24dp"
            style="@style/StyleX.Text.Headline.H6"/>
        <TextView
            android:textColor="?attr/tcx_textPrimary"
            android:id="@+id/subtitle_spam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/details_view_spam_subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/StyleX.Text.Subtitle.S2.Normal"/>
        <CheckBox
            android:textColor="?attr/tcx_textPrimary"
            android:id="@+id/check_spam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/details_view_spam_caption"
            style="@style/StyleX.Text.Caption"/>
        <FrameLayout
            android:background="?attr/tcx_fillQuarternaryBackground"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
    <TextView
        android:textSize="18sp"
        android:textColor="?attr/tcx_textPrimary"
        android:gravity="start"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/details_view_pay_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spam_header"
        style="@style/StyleX.Text.Headline.H6"/>
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/tcx_textSecondary"
        android:gravity="start"
        android:id="@+id/subtitle"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        style="@style/StyleX.Text.Subtitle.S2.Normal"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pay_single_item_layout"
        android:background="@drawable/rounded_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle">
        <ImageView
            android:id="@+id/image"
            android:padding="8dp"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textColor="?attr/tcx_textPrimary"
            android:gravity="center"
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/StyleX.Text.Subtitle.S1.Medium"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pay_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pay_single_item_layout"/>
    <TextView
        android:textColor="?attr/tcx_textSecondary"
        android:gravity="start"
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/details_view_pay_note"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pay_actions"
        style="@style/StyleX.Text.Subtitle.S2.Normal"/>
</androidx.constraintlayout.widget.ConstraintLayout>
