<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.truecaller.messaging.mediamanager.SquareImageView
        android:id="@+id/imageView"
        android:background="?attr/tcx_fillTertiaryBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:contentDescription="@null"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/expiredIndicator"
        android:background="#80000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_attachment_expired_20dp"
        app:tint="@color/white"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/downloadButton"
        android:background="#80000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_tcx_action_download_outline_24dp"
        app:tint="@color/white"/>
    <TextView
        android:textColor="@color/white"
        android:layout_gravity="top"
        android:id="@+id/sizeText"
        android:background="@drawable/linear_gradient_black_to_transparent"
        android:padding="5dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/StyleX.Text.Caption"/>
    <TextView
        android:textColor="@color/white"
        android:layout_gravity="bottom"
        android:id="@+id/durationText"
        android:background="@drawable/linear_gradient_transparent_to_black"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="4dp"
        app:drawableStartCompat="@drawable/ic_video_small"
        style="@style/StyleX.Text.Caption"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_gravity="end|bottom"
        android:id="@+id/importantIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:contentDescription="@null"
        app:srcCompat="@drawable/ic_star_media"/>
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/white"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/activeOverlay"
        android:background="#b2000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_tcx_action_check_24dp"/>
</FrameLayout>
