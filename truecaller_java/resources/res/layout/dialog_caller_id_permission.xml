<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/tcx_backgroundTertiary"
        app:cardCornerRadius="16dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="?attr/caller_id_permission_icon"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:contentDescription="@null"/>
            <TextView
                android:textColor="?attr/tcx_textPrimary"
                android:gravity="center"
                android:padding="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/set_as_default_caller_id_app_in_setting"
                style="@style/StyleX.Text.Subtitle.S2"/>
            <View
                android:background="?attr/tcx_fillTertiaryBackground"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <com.google.android.material.button.MaterialButton
                android:textSize="14sp"
                android:textColor="?attr/tcx_textTertiary"
                android:id="@+id/actionCancel"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/StrCancel"
                style="@style/StyleX.Button.Small.Action"/>
            <View
                android:background="?attr/tcx_fillTertiaryBackground"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <com.google.android.material.button.MaterialButton
                android:textSize="14sp"
                android:gravity="center"
                android:id="@+id/actionSettings"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/go_to_settings"
                style="@style/StyleX.Button.Small.Action"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
