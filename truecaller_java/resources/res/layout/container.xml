<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.truecaller.android.truemoji.keyboard.EmojiKeyboardView
        android:id="@+id/emojiKeyboardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_gif_emojis"/>
    <RelativeLayout
        android:id="@+id/layout_gif_emojis"
        android:background="?attr/tcx_emojiGifTabBackground"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/emoji_popup_tab_height_default"
        android:layout_alignParentBottom="true">
        <ImageButton
            android:id="@+id/button_keyboard"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/spacing_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/spacing_small"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_keyboard_outline_24dp"
            app:tint="?attr/tcx_emojiInactiveTabColor"/>
    </RelativeLayout>
</RelativeLayout>
