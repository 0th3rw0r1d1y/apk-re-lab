<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp">
            <TextView
                android:textColor="?attr/tcx_textPrimary"
                android:gravity="center_vertical"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:text="ID:"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="16dp"/>
            <EditText
                android:id="@+id/qa_survey_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/StyleX.Input.Outline"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp">
            <TextView
                android:textColor="?attr/tcx_textPrimary"
                android:gravity="center_vertical"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:text="Last time seen:"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="16dp"/>
            <EditText
                android:id="@+id/qa_survey_last_seen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/StyleX.Input.Outline"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp">
            <TextView
                android:textColor="?attr/tcx_textPrimary"
                android:gravity="center_vertical"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:text="Pass through:"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="16dp"/>
            <EditText
                android:id="@+id/qa_survey_pass_through"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/StyleX.Input.Outline"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp">
            <TextView
                android:textColor="?attr/tcx_textPrimary"
                android:gravity="center_vertical"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:text="Cooldown:"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="16dp"/>
            <EditText
                android:id="@+id/qa_survey_cooldown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/StyleX.Input.Outline"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp">
            <TextView
                android:textColor="?attr/tcx_textPrimary"
                android:gravity="center_vertical"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:text="Bottom sheet IDs:"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="16dp"/>
            <EditText
                android:id="@+id/qa_survey_bs_question_ids"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/StyleX.Input.Outline"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp">
            <TextView
                android:textColor="?attr/tcx_textPrimary"
                android:gravity="center_vertical"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:text="Context:"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="16dp"/>
            <Spinner
                android:entries="@array/qa_survey_context_types"
                android:id="@+id/qa_survey_context"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                android:popupTheme="@style/ThemeX.Light"
                style="@style/StyleX.Spinner"/>
        </LinearLayout>
        <TextView
            android:textColor="?attr/tcx_textPrimary"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Flow:"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <Spinner
            android:entries="@array/qa_survey_flow_types"
            android:id="@+id/qa_survey_flow_type"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingStart="24dp"
            android:paddingEnd="8dp"
            android:popupTheme="@style/ThemeX.Light"
            style="@style/StyleX.Spinner"/>
        <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
            android:theme="@style/StyleX.Switch"
            android:textColor="?attr/tcx_textPrimary"
            android:id="@+id/qa_survey_show_if_picked_up"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="showIfPickedUp"
            android:paddingStart="32dp"
            android:paddingEnd="16dp"/>
        <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
            android:theme="@style/StyleX.Switch"
            android:textColor="?attr/tcx_textPrimary"
            android:id="@+id/qa_survey_show_if_missed"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="showIfMissed"
            android:paddingStart="32dp"
            android:paddingEnd="16dp"/>
        <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
            android:theme="@style/StyleX.Switch"
            android:textColor="?attr/tcx_textPrimary"
            android:id="@+id/qa_survey_show_if_outgoing"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="showIfOutgoing"
            android:paddingStart="32dp"
            android:paddingEnd="16dp"/>
        <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
            android:theme="@style/StyleX.Switch"
            android:textColor="?attr/tcx_textPrimary"
            android:id="@+id/qa_survey_show_if_in_phonebook"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="showIfInPhonebook"
            android:paddingStart="32dp"
            android:paddingEnd="16dp"/>
        <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
            android:theme="@style/StyleX.Switch"
            android:textColor="?attr/tcx_textPrimary"
            android:id="@+id/qa_survey_show_if_not_in_phonebook"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="showIfNotInPhonebook"
            android:paddingStart="32dp"
            android:paddingEnd="16dp"/>
        <TextView
            android:textColor="?attr/tcx_textPrimary"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Questions:"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/qa_survey_questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <Button
            android:id="@+id/qa_add_question_button"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="16dp"
            android:text="Add question"
            style="@style/StyleX.Button.Primary"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
