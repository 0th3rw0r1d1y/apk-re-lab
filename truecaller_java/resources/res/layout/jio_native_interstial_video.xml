<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="afterDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_gravity="center"
            android:id="@+id/adLayout"
            android:tag="@string/jio_video_player_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <RelativeLayout
            android:orientation="horizontal"
            android:id="@+id/adDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/adLayout"
            app:layout_constraintBottom_toBottomOf="@+id/adLayout"
            app:layout_constraintStart_toStartOf="@+id/adLayout">
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:id="@+id/adText"
                android:tag="VastAdProgressLabel"
                android:background="@drawable/ad_yellow_background"
                android:padding="3dp"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Ad"
                android:maxLength="12"
                android:layout_centerVertical="true"/>
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp"
                android:textColor="#ffec3a"
                android:layout_gravity="center"
                android:id="@+id/progressCount"
                android:tag="@string/jio_video_progresscount"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_00_00"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/adText"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_sound_unmute_button"
                android:tag="@string/jio_video_audio_level_icon"
                android:background="@drawable/jio_vast_mute"
                android:visibility="visible"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/jio_vast_unmute"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/adProgressBar"
            android:tag="@string/jio_video_progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressTint="#ffcc00"
            app:layout_constraintBottom_toBottomOf="@+id/adLayout"
            app:layout_constraintEnd_toEndOf="@+id/adLayout"
            app:layout_constraintTop_toBottomOf="@+id/adDetailsLayout"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
