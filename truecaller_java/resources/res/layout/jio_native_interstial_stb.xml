<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="afterDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_gravity="center"
            android:id="@+id/adLayout"
            android:tag="@string/jio_video_player_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:padding="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:id="@+id/adText"
                android:tag="VastAdProgressLabel"
                android:background="@drawable/ad_yellow_background"
                android:padding="4dp"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginLeft="20dp"
                android:text="Ad"
                android:maxLength="12"
                android:layout_centerVertical="true"/>
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp"
                android:textColor="#ffec3a"
                android:layout_gravity="center"
                android:id="@+id/progressCount"
                android:tag="@string/jio_video_progresscount"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_marginRight="20dp"
                android:text="@string/_00_00"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/adText"/>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/adProgressBar"
            android:tag="@string/jio_video_progressbar"
            android:paddingBottom="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressTint="#ffcc00"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
