<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView2"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="?attr/tcx_textSecondary"
            android:id="@+id/langPickerSuggestedTitle"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/suggested"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            style="@style/StyleX.Text.Subtitle.S2"/>
        <include
            android:id="@+id/langPickerDefault"
            android:visibility="gone"
            layout="@layout/listitem_locale_picker_item"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/langPickerSuggestedList"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>
        <View
            android:id="@+id/langPickerSuggestedDivider"
            android:background="?android:attr/listDivider"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="24dp"/>
        <TextView
            android:textColor="?attr/tcx_textSecondary"
            android:id="@+id/langPickerAllTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/all_languages"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            style="@style/StyleX.Text.Subtitle.S2"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/langPickerAllList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
