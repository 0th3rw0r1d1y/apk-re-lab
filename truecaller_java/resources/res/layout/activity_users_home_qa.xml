<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/open_users_home"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/has_verified_badge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Has verified badge"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/is_verified_business_badge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Is verified business"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/is_priority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Is priority"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/is_gold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Is gold"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/is_premium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Is premium"
                style="@style/StyleX.Switch"/>
            <com.truecaller.common.ui.switchmaterial.SwitchMaterialX
                android:id="@+id/show_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show warning"
                style="@style/StyleX.Switch"/>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/open_users_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Users Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/StyleX.Button.Small.Primary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
