<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="20dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    android:paddingEnd="12dp">
    <TextView
        android:textColor="?attr/tcx_textPrimary"
        android:id="@+id/dialog_delete_reply_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CallAssistantSettingsQuickResponseDeleteResponseTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/StyleX.Text.Roboto.Regular.16"/>
    <TextView
        android:textColor="?attr/tcx_textSecondary"
        android:id="@+id/dialog_delete_reply_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/CallAssistantSettingsQuickResponseDeleteResponseBody"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_delete_reply_title"
        style="@style/StyleX.Text.Roboto.Regular.14"/>
    <TextView
        android:textStyle="bold"
        android:textColor="?attr/tcx_container_blue"
        android:id="@+id/dialog_delete_reply_cancel"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/StrCancel"
        android:textAllCaps="false"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@+id/dialog_delete_reply_delete"
        app:layout_constraintTop_toBottomOf="@+id/dialog_delete_reply_body"
        style="@style/StyleX.Text.Roboto.Regular.14"/>
    <TextView
        android:textStyle="bold"
        android:textColor="?attr/tcx_callerSpamCountTextColor"
        android:id="@+id/dialog_delete_reply_delete"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/StrDelete"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_delete_reply_body"
        style="@style/StyleX.Text.Roboto.Regular.14"/>
    <ProgressBar
        android:id="@+id/dialog_delete_reply_progress"
        android:visibility="gone"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:indeterminateTint="?attr/tcx_brandBackgroundBlue"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_delete_reply_cancel"
        app:layout_constraintEnd_toEndOf="@+id/dialog_delete_reply_delete"
        app:layout_constraintStart_toStartOf="@+id/dialog_delete_reply_delete"
        app:layout_constraintTop_toTopOf="@+id/dialog_delete_reply_cancel"/>
</androidx.constraintlayout.widget.ConstraintLayout>
