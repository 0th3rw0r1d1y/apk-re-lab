<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_gravity="center"
        android:id="@+id/progressIndicator"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorColor="?attr/tcx_brandBackgroundBlue"
        app:indicatorDirectionCircular="counterclockwise"
        app:indicatorSize="64dp"
        app:trackColor="?attr/tcx_messageUrgentProgressTrackColor"
        app:trackThickness="2dp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_gravity="center"
        android:id="@+id/icon"
        android:background="@drawable/flash_bubble_circle"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="4dp"
        android:src="@drawable/ic_offline_bolt_24dp"
        android:scaleType="center"
        app:tint="@android:color/white"/>
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/tcx_backgroundPrimary"
        android:gravity="center"
        android:layout_gravity="end"
        android:id="@+id/badgeView"
        android:background="@drawable/flash_bubble_badge"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_margin="4dp"
        android:minWidth="24dp"/>
</merge>
