<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/tripleSpace"
    android:paddingEnd="@dimen/tripleSpace">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hexaSpace"
        android:text="@string/Draw_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Wizard.PageTextTitle"/>
    <TextView
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wizardPageSubtitleMarginTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        style="@style/Wizard.PageTextSubTitle"/>
    <Button
        android:textColor="?attr/tc_color_containerFillBlue"
        android:gravity="start|center_vertical"
        android:layout_gravity="start"
        android:id="@+id/whyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Draw_why"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:drawableTint="?attr/tc_color_containerFillBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details"
        style="@style/Widget.AppCompat.Button.Borderless"/>
    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/space"
        android:src="?attr/wizard_img_draw_permission"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@+id/later"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whyButton"/>
    <Button
        android:id="@+id/nextButton"
        android:layout_marginBottom="@dimen/semiSpace"
        android:text="@string/go_to_settings"
        app:layout_constraintBottom_toTopOf="@+id/later"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Wizard.ContinueButton"/>
    <Button
        android:textColor="?attr/tc_color_textSecondary"
        android:id="@+id/later"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space"
        android:text="@string/StrMaybeLater"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Widget.AppCompat.Button.Borderless"/>
</androidx.constraintlayout.widget.ConstraintLayout>
