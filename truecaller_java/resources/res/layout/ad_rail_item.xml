<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adCard"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ads_rail_card_max_height"
    android:layout_marginTop="@dimen/control_space"
    android:layout_marginBottom="@dimen/control_space"
    android:layout_marginStart="@dimen/control_mini_space"
    android:layout_marginEnd="@dimen/control_mini_space"
    app:cardBackgroundColor="?attr/tcx_backgroundPrimary"
    app:cardCornerRadius="@dimen/ads_rail_card_corner_radius"
    app:cardElevation="@dimen/ads_rail_card_elevation"
    app:cardPreventCornerOverlap="false">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/adImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/adIcon"
            android:layout_width="@dimen/contact_photo_size"
            android:layout_height="@dimen/contact_photo_size"
            android:layout_margin="@dimen/control_space"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adImage"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/adTitle"
            android:layout_marginTop="@dimen/control_space"
            android:layout_marginBottom="@dimen/control_mini_space"
            android:layout_marginStart="@dimen/control_space"
            android:layout_marginEnd="@dimen/control_space"
            app:layout_constraintBottom_toTopOf="@+id/adDescription"
            app:layout_constraintEnd_toStartOf="@+id/adPrivacy"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintStart_toEndOf="@+id/adIcon"
            app:layout_constraintTop_toBottomOf="@+id/adImage"
            style="@style/Ads.Rail.TextView.AdTitle"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/adDescription"
            android:layout_marginBottom="@dimen/control_space"
            android:layout_marginStart="@dimen/control_space"
            android:layout_marginEnd="@dimen/control_space"
            app:layout_constraintEnd_toStartOf="@+id/adCtaText"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintStart_toEndOf="@+id/adIcon"
            app:layout_constraintTop_toBottomOf="@+id/adTitle"
            style="@style/Ads.Rail.TextView.AdDescription"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/adPrivacy"
            android:layout_marginTop="@dimen/control_mini_space"
            android:layout_marginEnd="@dimen/control_mini_space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/adTitle"
            app:layout_constraintTop_toBottomOf="@+id/adImage"
            style="@style/StyleX.Widget.Truecaller.TextView.AdInfo"/>
        <com.truecaller.ads.ui.CtaButtonX
            android:id="@+id/adCtaText"
            android:layout_marginBottom="@dimen/control_space"
            android:layout_marginEnd="@dimen/control_space"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Ads.Rail.Button.Compact"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
