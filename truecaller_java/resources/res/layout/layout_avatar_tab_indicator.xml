<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.truecaller.common.ui.avatar.AvatarXView
        android:id="@+id/acsFirstItem"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:visibility="gone"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/acsFirstItemSelector"
        app:layout_constraintEnd_toEndOf="@+id/acsFirstItemSelector"
        app:layout_constraintStart_toStartOf="@+id/acsFirstItemSelector"
        app:layout_constraintTop_toTopOf="@+id/acsFirstItemSelector"/>
    <ImageView
        android:id="@+id/acsFirstItemSelector"
        android:visibility="gone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/bg_acs_item_selected"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="4dp"/>
    <com.truecaller.common.ui.avatar.AvatarXView
        android:id="@+id/acsSecondItem"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:visibility="gone"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/acsSecondItemSelector"
        app:layout_constraintEnd_toEndOf="@+id/acsSecondItemSelector"
        app:layout_constraintStart_toStartOf="@+id/acsSecondItemSelector"
        app:layout_constraintTop_toTopOf="@+id/acsSecondItemSelector"/>
    <ImageView
        android:id="@+id/acsSecondItemSelector"
        android:visibility="gone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/bg_acs_item_selected"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintStart_toEndOf="@+id/acsFirstItemSelector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="4dp"/>
    <com.truecaller.common.ui.avatar.AvatarXView
        android:id="@+id/acsThirdItem"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:visibility="gone"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/acsThirdItemSelector"
        app:layout_constraintEnd_toEndOf="@+id/acsThirdItemSelector"
        app:layout_constraintStart_toStartOf="@+id/acsThirdItemSelector"
        app:layout_constraintTop_toTopOf="@+id/acsThirdItemSelector"/>
    <ImageView
        android:id="@+id/acsThirdItemSelector"
        android:visibility="gone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/bg_acs_item_selected"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintStart_toEndOf="@+id/acsSecondItemSelector"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/tcx_backgroundPrimary"
        android:gravity="center"
        android:id="@+id/viewMore"
        android:background="@drawable/bg_view_more"
        android:visibility="gone"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/acsThirdItemSelector"
        app:layout_constraintStart_toEndOf="@+id/acsThirdItemSelector"
        app:layout_constraintTop_toTopOf="@+id/acsThirdItemSelector"/>
</androidx.constraintlayout.widget.ConstraintLayout>
