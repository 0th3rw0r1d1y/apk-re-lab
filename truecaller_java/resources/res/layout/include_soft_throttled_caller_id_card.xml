<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/softThrottledCallerIdParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgSoftThrottledAvatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:importantForAccessibility="no"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/softThrottledTCLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_soft_throttled_avatar"/>
    <TextView
        android:id="@+id/softThrottledCallerIdTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/SoftThrottledCallerIdTitle"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toTopOf="@+id/softThrottledCallerIdSubtitle"
        app:layout_constraintEnd_toStartOf="@+id/softThrottledCloseBtn"
        app:layout_constraintStart_toEndOf="@+id/imgSoftThrottledAvatar"
        app:layout_constraintTop_toTopOf="@+id/imgSoftThrottledAvatar"
        app:layout_goneMarginEnd="60dp"
        style="@style/CallerIdTcx.Text.SoftThrottled.Title"/>
    <TextView
        android:id="@+id/softThrottledCallerIdSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/SoftThrottledCallerIdSubtitle"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgSoftThrottledAvatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/softThrottledCallerIdTitle"
        app:layout_constraintTop_toBottomOf="@+id/softThrottledCallerIdTitle"
        style="@style/CallerIdTcx.Text.SoftThrottled.Subtitle"/>
    <com.truecaller.ui.view.TintedImageView
        android:id="@+id/softThrottledCloseBtn"
        android:visibility="gone"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close"/>
    <com.truecaller.ui.view.TintedImageView
        android:id="@+id/softThrottledTCLogo"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_truecaller_logo_white"/>
</androidx.constraintlayout.widget.ConstraintLayout>
