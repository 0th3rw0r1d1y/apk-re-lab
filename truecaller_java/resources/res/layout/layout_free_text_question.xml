<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/background_call_survey_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space"
        android:layout_marginBottom="@dimen/doubleSpace"
        android:layout_marginStart="@dimen/doubleSpace"
        android:layout_marginEnd="@dimen/doubleSpace">
        <TextView
            android:textColor="?attr/tcx_textPrimary"
            android:id="@+id/tvTitleQuestionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/doubleSpace"
            android:layout_marginBottom="@dimen/space"
            android:layout_marginStart="@dimen/doubleSpace"
            android:layout_marginEnd="@dimen/doubleSpace"
            app:layout_constraintEnd_toStartOf="@+id/ivGreenTick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/StyleX.Text.Subtitle.S1"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ivGreenTick"
            android:visibility="gone"
            android:layout_width="@dimen/biz_acs_call_me_back_tick_size"
            android:layout_height="@dimen/biz_acs_call_me_back_tick_size"
            android:layout_marginBottom="@dimen/doubleSpace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_fileName="animations/ic_green_tick.json"/>
        <EditText
            android:id="@+id/etFreeText"
            android:background="@drawable/background_biz_call_survey_free_text_edit_text"
            android:paddingTop="@dimen/extraSpaceMid"
            android:paddingBottom="@dimen/extraSpaceMid"
            android:layout_width="0dp"
            android:layout_height="@dimen/biz_acs_start_call_survey_free_text_edit_text_height"
            android:layout_marginTop="@dimen/doubleSpace"
            android:layout_marginBottom="@dimen/doubleSpace"
            android:maxLines="1"
            android:maxLength="@integer/BizCallSurveyFreeTextMaxLength"
            android:inputType="textCapSentences"
            android:imeOptions="actionDone"
            android:paddingStart="@dimen/extraSpace"
            android:paddingEnd="@dimen/extraSpace"
            android:layout_marginStart="@dimen/doubleSpace"
            android:importantForAutofill="no"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnDone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleQuestionText"
            style="StyleX.Text.Subtitle.S2.Normal"/>
        <Button
            android:textColor="@color/biz_call_survey_free_text_done_button_text_color_selector"
            android:id="@+id/btnDone"
            android:background="@drawable/background_biz_call_survey_free_text_done_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/biz_acs_start_call_survey_free_text_edit_text_height"
            android:layout_marginTop="@dimen/doubleSpace"
            android:text="@string/biz_acs_start_call_survey_free_text_done"
            android:layout_marginStart="@dimen/doubleSpace"
            android:layout_marginEnd="@dimen/doubleSpace"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@+id/etFreeText"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleQuestionText"
            style="@style/Widget.Bizmon.StartCallSurveyButton"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
