<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:textColor="?attr/tcx_textPrimary"
        android:ellipsize="end"
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:lines="1"
        android:textDirection="anyRtl"
        android:layout_marginStart="16dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/numberDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/StyleX.Text.Subtitle.S1.Medium"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/numberCategoryContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/numberDetails"
        app:layout_constraintStart_toStartOf="@+id/title_tv"
        app:layout_constraintTop_toTopOf="@+id/numberDetails">
        <TextView
            android:textColor="@color/tcx_brandBackgroundBlue_dark"
            android:ellipsize="end"
            android:gravity="start"
            android:id="@+id/default_action"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favorite_contacts_default"
            android:lines="1"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@drawable/ic_favorite_contact_selected"
            style="@style/StyleX.Text.Caption"/>
        <View
            android:id="@+id/separator"
            android:background="?attr/tcx_fillQuarternaryBackground"
            android:visibility="gone"
            android:layout_width="1dp"
            android:layout_height="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/last_used_container"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/numberDetails"
        app:layout_constraintStart_toEndOf="@+id/numberCategoryContainer"
        app:layout_constraintTop_toTopOf="@+id/numberDetails">
        <TextView
            android:textColor="?attr/tcx_textSecondary"
            android:ellipsize="end"
            android:gravity="start"
            android:id="@+id/last_used_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favorite_contacts_last_used"
            android:lines="1"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@drawable/ic_favorite_contacts_last_used"
            app:drawableTint="?attr/tcx_textSecondary"
            style="@style/StyleX.Text.Caption"/>
        <View
            android:background="?attr/tcx_fillQuarternaryBackground"
            android:layout_width="1dp"
            android:layout_height="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>
    </LinearLayout>
    <TextView
        android:textColor="?attr/tcx_textSecondary"
        android:ellipsize="end"
        android:gravity="start"
        android:id="@+id/numberDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toStartOf="@+id/action_icon"
        app:layout_constraintStart_toEndOf="@+id/last_used_container"
        app:layout_constraintTop_toBottomOf="@+id/title_tv"
        style="@style/StyleX.Text.Caption"/>
    <ImageView
        android:id="@+id/action_icon"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_tcx_action_message_outline_24dp"
        android:paddingStart="12dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/tcx_textSecondary"/>
    <View
        android:id="@+id/divider"
        android:background="?attr/tcx_fillTertiaryBackground"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/title_tv"/>
</merge>
