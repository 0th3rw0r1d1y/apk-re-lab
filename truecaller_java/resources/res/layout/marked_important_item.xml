<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@android:style/Widget.Material.Button.Borderless">
    <com.truecaller.common.ui.avatar.AvatarXView
        android:id="@+id/icon"
        android:padding="10dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:scaleType="center"
        android:contentDescription="@null"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_mark_important"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/contentTitle"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="@string/starred_messages"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="75dp"
        app:layout_constraintEnd_toStartOf="@+id/unMarkImportantButton"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="@+id/icon"
        style="@style/StyleX.Text.Subtitle.S1.Medium"/>
    <ImageView
        android:id="@+id/subTitleIcon"
        android:padding="2dp"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="4dp"
        android:scaleType="center"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="@+id/icon"
        app:layout_constraintStart_toEndOf="@+id/dummyView"
        app:layout_constraintTop_toBottomOf="@+id/contentTitle"
        app:layout_constraintVertical_bias="0.5"/>
    <View
        android:id="@+id/dummyView"
        android:layout_width="12dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/icon"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toBottomOf="@+id/contentTitle"/>
    <View
        android:id="@+id/dividerView"
        android:layout_width="4dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/icon"
        app:layout_constraintStart_toEndOf="@+id/subTitleIcon"
        app:layout_constraintTop_toBottomOf="@+id/contentTitle"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.7"/>
    <TextView
        android:textColor="?attr/tcx_textSecondary"
        android:id="@+id/contentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:includeFontPadding="false"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/subTitleIcon"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/dividerView"
        app:layout_constraintTop_toTopOf="@+id/subTitleIcon"
        style="@style/StyleX.Text.Body.B2"/>
    <TextView
        android:textColor="?attr/tcx_textSecondary"
        android:id="@+id/contentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/subTitleIcon"
        app:layout_constraintEnd_toStartOf="@+id/unMarkImportantButton"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/contentText"
        app:layout_constraintTop_toTopOf="@+id/subTitleIcon"
        style="@style/StyleX.Text.Body.B2"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/unMarkImportantButton"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="2dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_un_star"/>
</androidx.constraintlayout.widget.ConstraintLayout>
