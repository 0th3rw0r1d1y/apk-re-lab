<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/callerIdAdView"
    android:background="@drawable/caller_id_background_with_radius"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginTop="-16dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:elevation="1dp"
    app:layout_constraintTop_toBottomOf="@+id/assistantView">
    <ImageView
        android:id="@+id/callerIdAdLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxHeight="16dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="@+id/callerIdAdText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/callerIdAdText"/>
    <View
        android:background="@color/tcx_fillQuarternaryBackground_dark"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/callerIdAdText"
        app:layout_constraintEnd_toStartOf="@+id/callerIdAdText"
        app:layout_constraintTop_toTopOf="@+id/callerIdAdText"/>
    <TextView
        android:textSize="14sp"
        android:id="@+id/callerIdAdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/AdInfoText"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-medium"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
