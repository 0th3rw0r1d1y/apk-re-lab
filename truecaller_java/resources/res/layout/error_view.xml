<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/errorView"
    android:background="@drawable/ic_tcx_error_bg"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="?attr/assistant_onboardingErrorText"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        style="@style/StyleX.Text.Roboto.Medium.16"/>
    <TextView
        android:textColor="?attr/assistant_onboardingErrorTextDescription"
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        style="@style/StyleX.Text.Roboto.Regular.12"/>
    <TextView
        android:textColor="?attr/tcx_container_blue"
        android:id="@+id/actionButton"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/StrRetry"
        android:textAllCaps="true"
        style="@style/StyleX.Text.Roboto.Medium.12"/>
</androidx.appcompat.widget.LinearLayoutCompat>
