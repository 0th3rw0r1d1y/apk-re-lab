<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/settingsPasscodeLock"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/doubleSpace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_messaging_passcode_lock_title"
            android:drawablePadding="@dimen/space"
            app:drawableStartCompat="@drawable/ic_lock_24dp"
            style="@style/StyleX.Text.Body.B1"/>
        <TextView
            android:gravity="end"
            android:id="@+id/passcodeLockStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_messaging_passcode_lock_text"
            android:textAllCaps="false"
            style="@style/StyleX.Text.Button"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
