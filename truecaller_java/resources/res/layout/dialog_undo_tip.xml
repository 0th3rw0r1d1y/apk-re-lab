<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textColor="?attr/tcx_textSecondary"
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/doubleSpace"
        android:text="@string/ConversationUndoTipMessage"
        android:includeFontPadding="false"
        style="@style/StyleX.Text.Body.B1"/>
    <ImageView
        android:id="@+id/undo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_undo_tip"
        android:layout_below="@+id/message_text"
        android:contentDescription="@string/ConversationMessageUndo"/>
    <FrameLayout
        android:id="@+id/message_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_alignTop="@+id/undo_button"
        android:layout_alignBottom="@+id/undo_button"
        android:layout_marginStart="@dimen/space"
        android:layout_toEndOf="@+id/undo_button">
        <TextView
            android:textColor="?attr/tc_color_chatTitleGreen"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/message_vertical_padding"
            android:layout_marginBottom="@dimen/message_vertical_padding"
            android:text="@string/ConversationUndoTipPlaceholder"
            android:layout_marginStart="@dimen/message_horizontal_padding"
            android:layout_marginEnd="@dimen/message_horizontal_padding"
            style="@style/MessageBubble.Outgoing.Text"/>
    </FrameLayout>
</RelativeLayout>
