<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_premium_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/image"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_gift_gold_promo"
            android:contentDescription="@null"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/congratsGroup"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:id="@+id/congratsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/GoldGiftCongratsTitle"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/StyleX.Text.Headline.H6"/>
            <TextView
                android:textColor="?attr/tcx_textSecondary"
                android:gravity="center"
                android:id="@+id/congratsSubtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/GoldGiftCongratsSubTitle1"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/StyleX.Text.Body.B2"/>
            <TextView
                android:textColor="?attr/tcx_textSecondary"
                android:gravity="center"
                android:id="@+id/congratsSubtitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/GoldGiftCongratsSubTitle2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/StyleX.Text.Body.B2"/>
            <TextView
                android:textColor="?attr/tcx_textTertiary"
                android:gravity="center"
                android:id="@+id/congratsNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:text="@string/GoldGiftCongratsNote"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                style="@style/StyleX.Text.Caption"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/receivedGiftGroup"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:id="@+id/receivedGiftTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/GoldGiftCongratsTitle"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/StyleX.Text.Headline.H6"/>
            <TextView
                android:textColor="?attr/tcx_textSecondary"
                android:gravity="center"
                android:id="@+id/receivedGiftSenderInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/StyleX.Text.Body.B2"/>
            <TextView
                android:textColor="?attr/tcx_textTertiary"
                android:gravity="center"
                android:id="@+id/receivedGiftExpireInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                style="@style/StyleX.Text.Caption"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/contactPickedGroup"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:id="@+id/contactPickedNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/StyleX.Text.Subtitle.S1.Medium"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/errorGroup"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/errorTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/StyleX.Text.Headline.H6"/>
            <TextView
                android:id="@+id/errorNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/StyleX.Text.Body.B2"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/actionsGroup"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp">
            <View
                android:id="@+id/action1divider"
                android:background="?attr/tcx_fillQuarternaryBackground"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/action1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/StyleX.Button.Secondary"/>
            <View
                android:id="@+id/action2divider"
                android:background="?attr/tcx_fillQuarternaryBackground"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/action2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/StyleX.Button.Secondary"/>
            <View
                android:id="@+id/action3divider"
                android:background="?attr/tcx_fillQuarternaryBackground"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/action3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/StyleX.Button.Secondary"/>
        </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"/>
</FrameLayout>
