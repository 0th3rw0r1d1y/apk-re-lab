<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/jio_white"
    android:padding="1dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    app:cardCornerRadius="4dp">
    <RelativeLayout
        android:orientation="vertical"
        android:background="@color/jio_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/imageView"
            android:tag="@string/jio_native_carousel_image"
            android:layout_width="wrap_content"
            android:layout_height="152dp"
            android:layout_alignParentTop="true"
            android:contentDescription=""
            android:layout_alignParentStart="true"/>
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:tag="@string/jio_native_carousel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:layout_below="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_alignEnd="@+id/imageView"
            android:layout_marginHorizontal="2dp"
            android:paddingHorizontal="1dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
