<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_tcx_action_call_outline_24dp"
        android:contentDescription="@string/contact_call_history_no_calls_title"
        app:tint="?attr/tcx_textQuarternary"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/contact_call_history_no_calls_title"
        style="@style/StyleX.Text.Subtitle.S1.Medium"/>
    <Button
        android:enabled="true"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/control_triple_space"
        android:textAllCaps="false"
        android:letterSpacing="0.05"
        style="@style/StyleX.Button.Small.Action"/>
</LinearLayout>
