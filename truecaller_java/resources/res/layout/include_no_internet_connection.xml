<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:background="?attr/tcx_backgroundPrimary"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/control_triple_space">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_tcx_no_internet"
        app:tint="?attr/tcx_textQuarternary"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="?attr/tcx_textPrimary"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/control_quad_space"
        android:text="@string/NoInternetConnection"
        style="@style/StyleX.Text.Headline.H6"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="?attr/tcx_textSecondary"
        android:gravity="center"
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/NoInternetConnectionDescription"
        style="@style/StyleX.Text.Body.B1"/>
    <Button
        android:enabled="true"
        android:textSize="14sp"
        android:id="@+id/tryAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/control_double_space"
        android:text="@string/NoInternetConnectionTryAgain"
        style="@style/StyleX.Button.Small.Action"/>
</androidx.appcompat.widget.LinearLayoutCompat>
