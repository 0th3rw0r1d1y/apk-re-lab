<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/mainScrollContainer"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:id="@+id/logo_top_guide_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintGuide_begin="98dp"/>
            <TextView
                android:textColor="?attr/tcx_textPrimary"
                android:id="@+id/powered_by_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/PremiumInsurancePoweredBy"
                app:layout_constraintBottom_toTopOf="@+id/partner_logo_image_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/logo_top_guide_line"
                app:layout_constraintVertical_chainStyle="packed"
                style="@style/TcStyle.Text.Regular.12"/>
            <ImageView
                android:id="@+id/partner_logo_image_view"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                app:layout_constraintBottom_toTopOf="@+id/logo_bottom_guide_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/powered_by_text_view"/>
            <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:id="@+id/logo_bottom_guide_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintGuide_begin="298dp"/>
            <TextView
                android:textColor="?attr/tcx_textPrimary"
                android:gravity="center"
                android:id="@+id/slogan_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="16dp"
                android:text="@string/PremiumInsuranceWeGotYourBack"
                android:letterSpacing="-0.0208"
                android:layout_marginHorizontal="32dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@+id/insurance_coverage_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logo_bottom_guide_line"
                style="@style/TcStyle.Text.Poppins.SemiBold.24"/>
            <TextView
                android:textColor="?attr/tcx_textSecondary"
                android:gravity="center"
                android:id="@+id/insurance_coverage_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="32dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@+id/non_eligible_state_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/slogan_text_view"
                style="@style/TcStyle.Text.Regular.14"/>
            <TextView
                android:textColor="?attr/tcx_textSecondary"
                android:gravity="center"
                android:id="@+id/non_eligible_state_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="32dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/insurance_coverage_text_view"
                style="@style/TcStyle.Text.Regular.12"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/buttonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="?attr/tcx_fillPentanary"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            style="@style/StyleX.Button"/>
        <Button
            android:enabled="false"
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/PremiumInsuranceRegisterBtnTitle"
            android:textAllCaps="false"
            android:elevation="0dp"
            android:layout_marginHorizontal="16dp"
            style="@style/StyleX.Button.Primary.Disableable.Premium"/>
        <TextView
            android:textColor="?attr/tcx_textSecondary"
            android:gravity="center"
            android:id="@+id/terms_text_View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            style="@style/TcStyle.Text.Regular.10"/>
    </LinearLayout>
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"/>
    <include
        android:id="@+id/error_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/generic_error_layout"/>
</FrameLayout>
