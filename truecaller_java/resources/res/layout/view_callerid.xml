<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/include_caller_id_card"/>
    <com.truecaller.call_assistant.ui_components.assistantbutton.CallAssistantAbTestButton
        android:id="@+id/assistantView"
        android:visibility="gone"
        android:layout_width="0dp"
        android:elevation="6dp"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="@+id/callerIdContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/callerIdContainer"
        style="@style/TruecallerAssistantButtonLayout"/>
    <include layout="@layout/view_callerid_ad"/>
    <include layout="@layout/view_callerid_partner"/>
    <ViewStub
        android:id="@+id/toastWithActionView"
        android:visibility="gone"
        android:layout="@layout/view_caller_id_window_toast_action_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/partnerContainer"/>
    <com.truecaller.ads.ui.AdsContainerLight
        android:layout_gravity="center"
        android:id="@+id/adsContainer"
        android:background="@drawable/background_tcx_ads_promo_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/control_space"
        android:layout_marginStart="@dimen/control_semispace"
        android:layout_marginEnd="@dimen/control_semispace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toastWithActionView"/>
    <include
        android:layout_gravity="center_horizontal"
        android:id="@+id/stubCallerIdSwipeHint"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/control_mini_space"
        android:layout_marginStart="@dimen/control_space"
        android:layout_marginEnd="@dimen/control_space"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toastWithActionView"
        layout="@layout/view_callerid_swipe_hint"/>
</androidx.constraintlayout.widget.ConstraintLayout>
