<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_premium_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/image"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="?attr/tcx_familySharingIcon"
            android:contentDescription="@null"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/addMemberGroup"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <TextView
                android:gravity="center"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/StyleX.Text.Headline.H6"/>
            <TextView
                android:textColor="?attr/tcx_textSecondary"
                android:gravity="center"
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/PremiumAddFamilyMemberConfirmationFailedSubTitle"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/StyleX.Text.Body.B2"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/actionsGroup"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="3dp">
            <View
                android:id="@+id/action1divider"
                android:background="?attr/tcx_fillQuarternaryBackground"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:textColor="?attr/tcx_textSecondary"
                android:id="@+id/action1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/StrDoItLater"
                style="@style/StyleX.Button.Secondary"/>
            <View
                android:id="@+id/action2divider"
                android:background="?attr/tcx_fillQuarternaryBackground"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/action2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/StrPickSomeoneElse"
                style="@style/StyleX.Button.Secondary"/>
            <View
                android:id="@+id/action3divider"
                android:background="?attr/tcx_fillQuarternaryBackground"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/action3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/StrConfirm"
                style="@style/StyleX.Button.Secondary"/>
        </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"/>
</FrameLayout>
