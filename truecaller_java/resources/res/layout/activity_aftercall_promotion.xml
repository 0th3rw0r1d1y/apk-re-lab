<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/after_call_promotion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space"
    app:cardBackgroundColor="?attr/theme_cardColor"
    app:cardCornerRadius="@dimen/rounding"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/promo_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginTop="@dimen/control_triplespace"
            android:layout_marginBottom="@dimen/control_triplespace"
            android:layout_alignParentTop="true"
            android:contentDescription="@null"
            android:layout_marginStart="@dimen/control_doublespace"
            android:layout_marginEnd="@dimen/control_doublespace"
            android:layout_alignParentStart="true"/>
        <com.truecaller.common.ui.avatar.AvatarXView
            android:id="@+id/avatar_view"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/promo_icon"
            android:layout_alignBottom="@+id/promo_icon"
            android:layout_alignStart="@+id/promo_icon"
            android:layout_alignEnd="@+id/promo_icon"/>
        <ImageView
            android:id="@+id/badge"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-4dp"
            android:src="@drawable/ic_promotion_badge"
            android:layout_alignBottom="@+id/avatar_view"
            android:contentDescription="@null"
            android:layout_alignEnd="@+id/avatar_view"/>
        <LinearLayout
            android:gravity="start"
            android:orientation="vertical"
            android:id="@+id/promo_text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/control_extraspace"
            android:layout_marginBottom="@dimen/control_extraspace"
            android:layout_toEndOf="@+id/promo_icon">
            <TextView
                android:ellipsize="end"
                android:id="@+id/promo_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Truecaller.ListItem.Primary"/>
            <TextView
                android:ellipsize="end"
                android:id="@+id/promo_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/doubleSpace"
                style="@style/TextAppearance.Truecaller.ListItem.Secondary"/>
        </LinearLayout>
        <include
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/promo_text_container"
            android:layout_marginStart="@dimen/control_octaspace"
            layout="@layout/hr"/>
        <FrameLayout
            android:id="@+id/promo_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/separator"
            style="?attr/borderlessButtonStyle">
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/theme_accentColor"
                android:layout_gravity="center_vertical"
                android:id="@+id/promo_button_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_marginStart="@dimen/control_octaspace"
                android:layout_marginEnd="@dimen/control_doublespace"/>
        </FrameLayout>
        <ImageView
            android:id="@+id/promo_close"
            android:padding="@dimen/control_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_close"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
