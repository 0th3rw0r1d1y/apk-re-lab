<?xml version="1.0" encoding="utf-8"?>
<com.truecaller.ui.components.WindowInsetsFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/tcx_backgroundPrimary"
    android:paddingBottom="2dp"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/content"
        android:padding="16dp"
        style="@style/StyleX.Settings.Page">
        <include
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/family_sharing_header"/>
        <include
            android:id="@+id/error_card"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            layout="@layout/error_alert_card"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/linearLayout2"
            android:background="@drawable/background_tcx_rectangle_outline"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/manageFamilyTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/PremiumFeatureManageFamilyTitle"
                android:layout_marginHorizontal="16dp"
                style="@style/StyleX.Text.Subtitle.S2"/>
            <TextView
                android:textColor="?attr/tcx_textPrimary"
                android:id="@+id/manageFamilySubtitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="16dp"
                style="@style/StyleX.Text.Roboto.Regular.12"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/membersRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"/>
            <TextView
                android:id="@+id/disclaimerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                style="@style/StyleX.Text.Caption.C1"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/manageFamilyCtaContainer"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="14dp"
                android:paddingHorizontal="16dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_tcx_premium_plus_24dp"
                    android:layout_marginStart="16dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="?attr/tcx_brandBackgroundBlue"
                    android:gravity="start|center_vertical"
                    android:id="@+id/manageFamilyCtaTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/PremiumAddFamilyMemberAction"
                    android:layout_marginStart="16dp"
                    style="@style/StyleX.Text.Roboto.Medium.14"/>
            </LinearLayout>
        </LinearLayout>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</com.truecaller.ui.components.WindowInsetsFrameLayout>
