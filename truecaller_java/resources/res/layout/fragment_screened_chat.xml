<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/tcx_backgroundPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:background="?attr/tcx_backgroundTertiary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.truecaller.common.ui.avatar.AvatarXView
                android:id="@+id/avatarView"
                android:layout_width="@dimen/assistantScreenedCallChatTopBarIconSize"
                android:layout_height="@dimen/assistantScreenedCallChatTopBarIconSize"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:ellipsize="end"
                android:id="@+id/nameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:maxLines="1"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/callCaller"
                app:layout_constraintStart_toEndOf="@+id/avatarView"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/StyleX.Text.Roboto.Medium.14"/>
            <TextView
                android:textColor="?attr/tcx_textSecondary"
                android:id="@+id/callAssistantChatTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/callCaller"
                app:layout_constraintStart_toStartOf="@+id/nameText"
                app:layout_constraintTop_toBottomOf="@+id/nameText"
                style="@style/StyleX.Text.Roboto.Medium.12"/>
            <ImageButton
                android:id="@+id/callCaller"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="@dimen/assistantScreenedCallChatTopBarIconSize"
                android:layout_height="@dimen/assistantScreenedCallChatTopBarIconSize"
                android:src="@drawable/ic_call_lined"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/popupMenu"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="?attr/tcx_textSecondary"/>
            <ImageButton
                android:id="@+id/popupMenu"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="@dimen/assistantScreenedCallChatTopBarIconSize"
                android:layout_height="@dimen/assistantScreenedCallChatTopBarIconSize"
                android:src="?attr/assistant_tab_overflow_menu_icon"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="?attr/tcx_textSecondary"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.MaterialToolbar>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"/>
    <com.truecaller.call_assistant.core.callchat.feedback.ScreenedCallFeedbackView
        android:id="@+id/screeningFeedbackView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="12dp"
        app:label="@string/CallAssistantAssistantScreeningFeedbackLabel"/>
    <com.truecaller.call_assistant.core.callchat.feedback.ScreenedCallFeedbackView
        android:id="@+id/transcriptionFeedbackView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="12dp"
        app:label="@string/CallAssistantAssistantTranscriptionFeedbackLabel"/>
    <RelativeLayout
        android:id="@+id/audioPlayerContainer"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:animateLayoutChanges="true"
        android:layout_marginHorizontal="12dp">
        <com.truecaller.cloudtelephony.callrecording.ui.audioplayer.CallRecordingAudioPlayerView
            android:id="@+id/audioPlayerView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:has_outline_border="true"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/audioPlayerLoading"
            android:background="@drawable/bg_assistant_call_ui_chat_recording"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ProgressBar
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:indeterminate="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="14dp"
                android:indeterminateTint="?attr/tcx_brandBackgroundBlue"/>
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/tcx_textPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/call_assistant_post_conversation_recording_loading_text"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginStart="12dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/audioPlayerRetryContainer"
            android:background="@drawable/bg_assistant_call_ui_chat_recording"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:id="@+id/audioPlayerRetryIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_screened_call_recording_error"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/tcx_textPrimary"
                android:ellipsize="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/CallRecordingPlayerError"
                android:lines="1"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/screened_call_recording_error_retry"
                app:layout_constraintStart_toEndOf="@+id/audioPlayerRetryIcon"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/tcx_avatarTextBlue"
                android:id="@+id/screened_call_recording_error_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/StrRetry"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginEnd="22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/audioPlayerError"
            android:background="@drawable/bg_assistant_call_ui_chat_recording"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_screened_call_recording_error"
                android:layout_marginStart="16dp"/>
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/tcx_textPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/call_assistant_post_conversation_recording_unavailable_text"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginStart="13dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>
</LinearLayout>
