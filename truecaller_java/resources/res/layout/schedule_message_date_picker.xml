<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="?attr/tcx_backgroundPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tripleSpace"
            style="@style/StyleX.Text.Headline.H6"/>
        <DatePicker
            android:layout_gravity="center"
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"/>
        <TimePicker
            android:layout_gravity="center"
            android:id="@+id/timePicker"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"/>
        <View
            android:background="?attr/tcx_fillQuarternaryBackground"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <Button
            android:id="@+id/negativeButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/schedule_message_date_picker_btn_height"
            android:text="@string/actionCancel"
            style="@style/StyleX.Button.Small.Action"/>
        <View
            android:background="?attr/tcx_fillQuarternaryBackground"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <Button
            android:id="@+id/positiveButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/schedule_message_date_picker_btn_height"
            android:text="@string/actionContinue"
            style="@style/StyleX.Button.Small.Action"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
