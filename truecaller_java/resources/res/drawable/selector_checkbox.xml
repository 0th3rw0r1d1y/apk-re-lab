<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size
                        android:height="@dimen/icon_tcx_default_size"
                        android:width="@dimen/icon_tcx_default_size"/>
                    <solid android:color="?attr/tcx_brandBackgroundBlue"/>
                </shape>
            </item>
            <item
                android:gravity="center"
                android:drawable="?attr/tcx_conversationActionModeCheck"/>
        </layer-list>
    </item>
    <item>
        <shape android:shape="oval">
            <size
                android:height="@dimen/icon_tcx_default_size"
                android:width="@dimen/icon_tcx_default_size"/>
            <solid android:color="?attr/tc_color_chatBgGrey"/>
            <stroke
                android:width="1dp"
                android:color="?attr/tc_color_chatStrokeGrey"/>
        </shape>
    </item>
</selector>
