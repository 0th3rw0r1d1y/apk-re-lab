<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:height="@dimen/dialpad_corner_size">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="?attr/tcx_dialpadShadowStart"
                android:endColor="?attr/tcx_dialpadShadowEnd"
                android:angle="270"/>
            <corners
                android:topLeftRadius="@dimen/dialpad_corner_size"
                android:topRightRadius="@dimen/dialpad_corner_size"/>
        </shape>
    </item>
    <item android:top="10px">
        <shape android:shape="rectangle">
            <solid android:color="?attr/tcx_backgroundTertiary"/>
            <corners
                android:topLeftRadius="@dimen/dialpad_corner_size"
                android:topRightRadius="@dimen/dialpad_corner_size"/>
        </shape>
    </item>
</layer-list>
