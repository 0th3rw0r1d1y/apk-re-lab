<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="?attr/colorControlHighlight">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#000000"/>
            <corners android:radius="@dimen/background_tcx_outline_radius"/>
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/background_tcx_outline_radius"/>
                    <solid android:color="?attr/tcx_settingsBigRadioButtonBackgroundColor"/>
                    <stroke
                        android:width="1dp"
                        android:color="?attr/tcx_brandBackgroundBlue"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/background_tcx_outline_radius"/>
                    <stroke
                        android:width="1dp"
                        android:color="?attr/tcx_textQuarternary"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>
