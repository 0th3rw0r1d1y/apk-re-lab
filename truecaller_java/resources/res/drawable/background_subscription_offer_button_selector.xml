<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <ripple android:color="?attr/tcx_buttonRippleColor">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="?attr/tcx_avatarTextBlue"/>
                    <corners android:radius="8dp"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item>
        <ripple android:color="?attr/tcx_buttonRippleColor">
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="?attr/tcx_subscriptionOfferButtonBorderColor"/>
                    <solid android:color="?attr/tcx_backgroundPrimary"/>
                    <corners android:radius="8dp"/>
                </shape>
            </item>
        </ripple>
    </item>
</selector>
