<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <size
                android:height="@dimen/reaction_emoji_size"
                android:width="@dimen/reaction_emoji_size"/>
            <solid android:color="?attr/tcx_reactionPickerItemSelectedColor"/>
            <stroke
                android:width="1dp"
                android:color="?attr/tcx_reactionPickerItemSelectedBorderColor"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="oval">
            <size
                android:height="@dimen/reaction_emoji_size"
                android:width="@dimen/reaction_emoji_size"/>
            <solid android:color="?attr/tcx_reactionPickerItemSelectedColor"/>
            <stroke
                android:width="1dp"
                android:color="?attr/tcx_reactionPickerItemSelectedBorderColor"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <size
                android:height="@dimen/reaction_emoji_size"
                android:width="@dimen/reaction_emoji_size"/>
            <solid android:color="?attr/tcx_reactionPickerItemBackgroundColor"/>
            <stroke
                android:width="1dp"
                android:color="?attr/tcx_reactionPickerItemBorderColor"/>
        </shape>
    </item>
</selector>
