<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <ConstraintSet android:id="@+id/socialScene">
        <Constraint android:id="@+id/titleText"/>
        <Constraint
            android:id="@+id/googleLinkButton"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/manualLink"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subtitleText"
            app:layout_constraintVertical_chainStyle="packed">
            <CustomAttribute
                app:attributeName="text"
                app:customStringValue="@string/link_profile_google_continue"/>
        </Constraint>
        <Constraint
            android:id="@+id/manualLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <Constraint android:id="@+id/manualIcon">
            <Transform android:rotation="0"/>
        </Constraint>
        <Constraint
            android:id="@+id/inputFragment"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="parent"/>
        <Constraint android:id="@+id/manualBorder">
            <CustomAttribute
                app:attributeName="alpha"
                app:customFloatValue="0"/>
        </Constraint>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/manualScene">
        <Constraint android:id="@+id/titleText">
            <Transform android:translationY="-200dp"/>
        </Constraint>
        <Constraint android:id="@+id/subtitleText">
            <Transform android:translationY="-200dp"/>
        </Constraint>
        <Constraint
            android:id="@+id/googleLinkButton"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <Constraint
            android:id="@+id/manualLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/googleLinkButton"/>
        <Constraint android:id="@+id/manualIcon">
            <Transform android:rotation="90"/>
        </Constraint>
        <Constraint android:id="@+id/manualBorder">
            <CustomAttribute
                app:attributeName="alpha"
                app:customFloatValue="1"/>
        </Constraint>
    </ConstraintSet>
    <Transition
        app:autoTransition="none"
        app:constraintSetEnd="@+id/manualScene"
        app:constraintSetStart="@+id/socialScene">
        <OnClick
            app:clickAction="transitionToEnd"
            app:targetId="@+id/manualLink"/>
        <KeyFrameSet>
            <KeyAttribute
                android:translationX="0dp"
                app:framePosition="0"
                app:motionTarget="@+id/googleLinkButton"/>
            <KeyAttribute
                android:translationX="0dp"
                app:framePosition="100"
                app:motionTarget="@+id/googleLinkButton"/>
            <KeyAttribute
                android:translationY="-70dp"
                app:framePosition="20"
                app:motionTarget="@+id/googleLinkButton"/>
            <KeyAttribute
                android:translationY="-50dp"
                app:framePosition="80"
                app:motionTarget="@+id/googleLinkButton"/>
            <KeyAttribute
                android:translationY="20dp"
                app:framePosition="80"
                app:motionTarget="@+id/manualLink"/>
            <KeyAttribute
                android:translationY="20dp"
                app:framePosition="80"
                app:motionTarget="@+id/manualIcon"/>
        </KeyFrameSet>
    </Transition>
    <Transition
        app:constraintSetEnd="@+id/manualScene"
        app:constraintSetStart="@+id/socialScene">
        <OnClick
            app:clickAction="toggle"
            app:targetId="@+id/manualIcon"/>
    </Transition>
</MotionScene>
