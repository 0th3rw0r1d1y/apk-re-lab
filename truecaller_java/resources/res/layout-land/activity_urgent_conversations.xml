<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/urgent_messages_background"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:src="@drawable/ic_truecaller_logo_white"
        android:adjustViewBounds="true"
        android:contentDescription="@string/AppName"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/fragmentCardView"
        app:layout_constraintStart_toStartOf="@+id/fragmentCardView"
        app:layout_constraintTop_toTopOf="@+id/closeButton"/>
    <androidx.appcompat.widget.AppCompatButton
        android:textColor="@android:color/white"
        android:id="@+id/closeButton"
        android:background="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="@string/StrClose"
        android:drawablePadding="-8dp"
        android:drawableStart="@drawable/ic_tcx_close_16dp"
        app:drawableTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/StyleX.Text.Button"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/fragmentCardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxWidth="200dp"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recyclerView"
        app:layout_constraintTop_toBottomOf="@+id/closeButton">
        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ViewStub
            android:id="@+id/action_mode_bar_stub_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    <com.truecaller.messaging.urgent.KeyguardOverlay
        android:id="@+id/keyguardOverlay"
        android:focusable="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragmentCardView"
        app:layout_constraintEnd_toEndOf="@+id/fragmentCardView"
        app:layout_constraintStart_toStartOf="@+id/fragmentCardView"
        app:layout_constraintTop_toTopOf="@+id/fragmentCardView"/>
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="vertical"
        android:id="@+id/recyclerView"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="@+id/fragmentCardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragmentCardView"/>
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="horizontal"
        android:id="@+id/overflowRecyclerView"
        android:background="@drawable/background_urgent_conversations_overflow"
        android:padding="8dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="@+id/fragmentCardView"
        app:layout_constraintEnd_toEndOf="@+id/fragmentCardView"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/fragmentCardView"
        app:layout_constraintTop_toTopOf="@+id/fragmentCardView"
        app:layout_constraintVertical_bias="1"/>
</androidx.constraintlayout.widget.ConstraintLayout>
