<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Glance.AppWidget.TextAppearance.Bold" parent="@style/Glance.AppWidget.TextAppearance.DeviceDefaultFontFamily">
        <item name="android:textFontWeight">700</item>
    </style>
    <style name="Glance.AppWidget.TextAppearance.Medium" parent="@style/Glance.AppWidget.TextAppearance.DeviceDefaultFontFamily">
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="Glance.AppWidget.TextAppearance.Normal" parent="@style/Glance.AppWidget.TextAppearance.DeviceDefaultFontFamily">
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="Glance.AppWidget.Theme" parent="@android:style/Theme.DeviceDefault.DayNight" />
    <style name="Theme.InCallUi" parent="@style/Theme.Truecaller">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:statusBarColor">@color/incallui_transparent</item>
        <item name="android:navigationBarColor">@color/incallui_background_color</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>
    <style name="Theme.InCallUi.Transparent" parent="@style/Theme.InCallUi">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>
    <style name="Glance.AppWidget.TextAppearance.DeviceDefaultFontFamily" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textSize">@null</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@null</item>
        <item name="android:textColorLink">@null</item>
        <item name="android:shadowColor">@null</item>
        <item name="android:shadowDx">@null</item>
        <item name="android:shadowDy">@null</item>
        <item name="android:shadowRadius">@null</item>
        <item name="android:elegantTextHeight">@null</item>
        <item name="android:letterSpacing">@null</item>
        <item name="android:fontFeatureSettings">@null</item>
        <item name="android:fontVariationSettings">@null</item>
    </style>
</resources>
