<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:height="@dimen/dialpad_corner_size">
        <shape android:shape="rectangle">
            <gradient android:startColor="?tcx_dialpadShadowStart" android:endColor="?tcx_dialpadShadowEnd" android:angle="270.0" />
            <corners android:topLeftRadius="@dimen/dialpad_corner_size" android:topRightRadius="@dimen/dialpad_corner_size" />
        </shape>
    </item>
    <item android:top="10.0px">
        <shape android:shape="rectangle">
            <solid android:color="?tcx_backgroundTertiary" />
            <corners android:topLeftRadius="@dimen/dialpad_corner_size" android:topRightRadius="@dimen/dialpad_corner_size" />
        </shape>
    </item>
</layer-list>