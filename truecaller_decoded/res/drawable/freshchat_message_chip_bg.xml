<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1.0dip" android:color="@color/freshchat_quick_actions_button_border" />
            <solid android:color="@color/freshchat_quick_actions_button_touch" />
            <corners android:radius="8.0dip" />
        </shape>
    </item>
    <item android:state_selected="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="1.0dip" android:color="@color/freshchat_chip_selected_outline" />
            <corners android:radius="8.0dip" />
            <solid android:color="@color/freshchat_chip_selected_background" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1.0dip" android:color="@color/freshchat_quick_reply_chip_outline" />
            <solid android:color="@color/freshchat_quick_reply_chip_bg" />
            <corners android:radius="8.0dip" />
        </shape>
    </item>
</selector>